def step() {
  for (i <- 0 to 200) {
    var c:Color = getCouleurSol()
    if (c==Color.white) {
      setCouleurSol(Color.black)
      droite()
      avance()
    }
    else {
      setCouleurSol(Color.white)
      gauche()
      avance()
    }
  }
}

def setCouleurSol(col:Color) {
  setCouleurBrosse(col)
  baisseBrosse()
  leveBrosse()
}