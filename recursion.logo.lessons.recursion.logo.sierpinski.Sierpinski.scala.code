def sierpinski(levels:Int, length:Double) {
  if (levels>0) {
    sierpinski(levels-1,length/2)
    avance(length)
    droite(120)
    sierpinski(levels-1,length/2)
    avance(length)
    droite(120)
    sierpinski(levels-1,length/2)
    avance(length)
    droite(120)
  }
  else {
    avance(length)
    droite(120)
    avance(length)
    droite(120)
    avance(length)
    droite(120)
  }
}
