def growFlowers() {
	flower(Color.RED)
}

def marqueSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}

def faireS(c:Color) {
	//colorier les deux carreaux (S)
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
	avance()
	droite()
	avance()
	baisseBrosse()
	leveBrosse()
	gauche()
}

def flower(c:Color) {
	//colorier les pétales, revenir à la position initiale
	faireS(c)
	gauche()
	avance();avance()
	droite();
	faireS(c)
}

