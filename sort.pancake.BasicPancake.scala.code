def solve() {
  while (isSorted()==false){
    var i =1
    var max=0
    var n =0
    for (i <- n to getStackSize()) {
      if (getPancakeRadius(i)>max){
      max=i
      }
    }
    if (i==0){
      flip(i)
      flip(i+1)
    }
    else if (i==getStackSize()-1){
      flip(i-1)
      flip(i)
    }
    else {
    flip(i-1)
    flip(i+1)
    }
  }
}
      
    