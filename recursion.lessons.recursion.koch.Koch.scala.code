def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels == 0) {
		avance(length);
	}
	else {
		var length = length/3/3*levels;
		var angle=180/3;

		avance(length/(3*levels));

		gauche(angle);
		snowSide(levels-1, length/(3*levels));

		droite(2*angle);
		snowSide(levels-1, length/(3*levels));

		gauche(angle);
		avance(length);
	}
}
