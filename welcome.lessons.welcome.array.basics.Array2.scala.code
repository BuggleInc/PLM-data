override def run() {

	var T = new Array[Color](getMondeHauteur)
	T(0)=getCouleurSol
	for (i<-0 to getMondeHauteur-2) {
		avance()
		T(i)=getCouleurSol
	}
	for (i<-1 to getMondeHauteur-1) recule()
	
//Couleurs mises en mémoire

	for (i<-1 to getMondeLargeur) {
		gauche()
		avance()
		droite()
		val decalage = litMessage().toInt
		var U=new Array[Color](getMondeHauteur)
		for(j<-0 to getMondeHauteur-1) {
			U(j)=T(j+decalage%getMondeHauteur)
		}
		
	}



}
