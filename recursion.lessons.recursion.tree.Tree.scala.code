def tree(steps:Int, length:Double, angle:Double, shrink:Double){
	var x = getX();
	var y = getY();
	var cap = getCap();
	var longueur = length*shrink;
	
	if( steps != 1){
		current(steps);
		avance(length);
	
		droite(angle);
		tree(steps-1, longueur, angle, shrink);		
	}
	else{
		droite(angle);
		current(steps);
		avance(length);

		setPos(x, y);
		setCap(cap);

		gauche(angle);
		avance(length);

		setPos(x, y);
		setCap(cap);
	}
}
