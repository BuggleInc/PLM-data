def marque(c) :
  '''
  Colorie en couleur c
  '''
  
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()

def fleur(petale, centre=Color.YELLOW) :
  '''
  Dessine fleur de centre jaune par d?faut
  '''
  # relev? position initiale
  x=getX()
  y=getY()
  dir=getDirection()
  
  marque(petale)
  avance()
  marque(centre)
  avance()
  marque(petale)
  left()
  avance()
  left()
  avance()
  left()
  marque(petale)
  avance()
  avance()
  marque(petale)
  
  # retour position initiale
  setPos(x,y)
  setDirection(dir)
  

