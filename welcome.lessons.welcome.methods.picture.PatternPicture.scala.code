def peindreSol(c: Color) {
  setCouleurBrosse(c)
  
  // On marque le sol.
  baisseBrosse()
  leveBrosse()
}

def dessineV(c: Color) {
  avance()
  peindreSol(c)
  
  for (compteur <- 1 to 2) {
    gauche(); avance()
  }
  
  peindreSol(c)
  
  gauche()
  avance()
  gauche()
}

dessineVInverse(c: Color) {
  peindreSol(c)
  
  for (compteur <- 1 to 2) {
    avance(); gauche()
  }
  
  
}

override def run() {
  dessineV(Color.RED)
  
  avance(2)
  
  dessineVInverse(Color.BLUE)
}
