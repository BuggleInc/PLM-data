var numCarre = 0
def marqueCase(couleur:Color) {
  setCouleurBrosse(couleur)
  baisseBrosse()
  leveBrosse()
}

def faireV(couleur:Color) {
  
  /*
  *    0
  *   > 0
  */
  
  marqueCase(couleur)
  gauche()
  avance()
  droite()
  avance()
  marqueCase(couleur)
  avance()
  droite()
  avance()
  gauche()
  marqueCase(couleur)
  
}

def faireVcouleur(couleur:Color) {
  
  avance()
  faireV(couleur)
  avance()
  gauche()
  
}

def faireCarre() {
  
  faireVcouleur(Color.YELLOW)
  faireVcouleur(Color.RED)
  faireVcouleur(Color.BLUE)
  faireVcouleur(Color.GREEN)
  
}

def carreSuivant() {
  
  if (numCarre == 3) {
    
    gauche()
    avance(5)
    droite()
    numCarre = 0
    
  }
  
  avance(5)
  
}

override def run() {
  
  for (c <- 1 to 9) {
    
  faireCarre()
  numCarre = numCarre + 1
  carreSuivant()
    
  }
  
}