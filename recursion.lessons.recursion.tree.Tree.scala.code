def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

	if (steps==0) {
		avance(length);
		recule(length);
	}
	else {
		avance(length);
		droite(angle)
		tree(steps-1,shrink*length,angle,shrink);
		gauche(angle);
		recule(length);
		gauche(angle);
		tree(steps-1,shrink*length,angle,shrink);
		droite(angle);
		recule(length);
	}

	
}
