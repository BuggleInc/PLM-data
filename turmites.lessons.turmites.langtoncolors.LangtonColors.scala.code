def step(rule:Array[Char], colors:Array[Color]) {
  var c:Color = getCouleurSol()
  var indice:Int = 0
  for (i <- 0 to colors.length) {
    if (colors(i) == c) {
      indice = i
    }
  }
  setCouleurSol(colors((indice)%(colors.length)))
  if (rule(indice) == "L") {
    gauche()
    avance()
  } else {
    droite()
    avance()
  }
}

def setCouleurSol(c:Color) = {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}