def isFacingTrail():Boolean = {
  var miam=false
  while (! estSurBiscuit()){
    if (testCouleur){
      avance()
    }
  }
  prendBiscuit()
  miam=true
  return miam
}


def testCouleur():Boolean ={
  avance()
  var avant=false
  if (getCouleurSol()==Color.green){
    avant=true
    recule()
  }else{
    recule()
    gauche()
    avant=false
  }
  return avant
}
