void drawFlower(Color c) {
	setBrushColor(c);
	brushDown();
	forward();
	left();
	forward();
	backward(2);
	forward();
	right();
	setBrushColor(Color.yellow);
	forward();
	setBrushColor(c);
	brushUp();
}

void growFlowers() {
	drawFlower(Color.red);
	forward(2);
	drawFlower(Color.cyan);
	right();
	forward(4);
	right();
	drawFlower(Color.green);
	right();
	forward(2);
	left();
	drawFlower(Color.orange);
	left();
	forward(2);
	right();
	drawFlower(Color.pink);
	back();
}
