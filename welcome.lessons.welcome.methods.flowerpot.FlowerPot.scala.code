def growFlowers(){
  fleur(Color.RED)
  droite()
  move(3,true)
  
}

def fleur (c : Color){
  setCouleurBrosse(c)
  baisseBrosse()
  move(2, true)
  recule()
  gauche()
  avance()
  move(2,false)
  avance()
  leveBrosse()
  marquer(Color.YELLOW)
}


def marquer(c : Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}


def move(nbPas: Int,versLAvant: Boolean) {
  if (versLAvant){
    for (i <- 1 to nbPas){avance()}
  }
  else {for (i <- 1 to nbPas){recule()}}
    
}