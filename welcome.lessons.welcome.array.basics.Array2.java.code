public void run() {
int size = getWorldHeight();
Color[] cell;
cell = new Color[size];
int offset = 0;                 

	//loop thru columns
	for(int x = 0; x < size - 1; x++){
		//load colours into array
		for(int j = 0; j < size; j++){
			if(x == 0 && j < size - 2){
				for(int k = 0; k < size - 1; k++){
				cell[k] = getGroundColor();
				forward();
				}
			}else{
				setBrushColor(cell[offset]);
				brushDown();
				brushUp();
				forward();
			}
		}//end for
		
		if(x < size - 1){
			back();
			for(int y = 0; y < size - 1; y++){
				forward();
			}
			right();
			forward();
			offset = Integer.parseInt(readMessage());
			right();
		}
	}//end for
}//end run
