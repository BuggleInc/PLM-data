def hunt() {
    while (!estSurBiscuit()){
    		if (isFacingTrail()){
    			baisseBrosse()
    			avance()
    			leveBrosse()
    		}
    }
}
def isFacingTrail():Boolean = {	
 	if (!estFaceMur()){
    		avance()
    		if (getCouleurSol() == Color.green){
    			
    			return true
    		}else{
    			recule()
    			return false
    		}
    		return true
 	}else{
 		return false	
 	}
    	
}        
