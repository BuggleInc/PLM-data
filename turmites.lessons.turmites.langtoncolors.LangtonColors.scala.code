def step(rule:Array[Char], colors:Array[Color]) {
  var c:Color = getCouleurSol()
  var indice:Int = 0
  for (i <- 0 to colors.length-1) {
    if (colors(i) == c) {
      indice = i
    }
  }
  setCouleurSol(colors((indice+1)%(colors.length)))
  if (rule(indice) == "L") {
    gauche()
    avance()
  } else if (rule(indice) == "R") {
    droite()
    avance()
  }
}

def setCouleurSol(c:Color) = {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}