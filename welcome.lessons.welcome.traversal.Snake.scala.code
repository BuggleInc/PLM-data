override def run() {
	baisseBrosse
	var y=0
	while (!PositionFinale()) {
		if (estFaceMur){
			if (y%2==0) {
				gauche
				avance
				gauche
			}
			else {
				droite
				avance
				droite
			}
			y=y+1
		}
		avance
	}

	def  PositionFinale() :Boolean = {
		var x=false
		if (estFaceMur) {
			getDirection match {
				case Direction.EST => {gauche;if (estFaceMur) x=true;droite}
				case Direction.OUEST => {droite;if (estFaceMur) x=true;gauche}
				case _ =>
			}
		}
		return x
	}		
}