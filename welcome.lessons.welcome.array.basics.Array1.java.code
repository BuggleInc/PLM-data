public void run() {
	int h = getWorldHeight();
	Color rainbow[] = new Color[h];

	for (int i=0; i<h; i++) {
		rainbow[i]=getGroundColor();
		forward();
	}

	for (int i=1; i<h; i++) {
		left();
		forward();
		right();
		brushDown();
		for (int j=0; j<h; j++) {
			forward();
			setBrushColor(rainbow[j]);
		}
		brushUp();
		forward();
	}
}
