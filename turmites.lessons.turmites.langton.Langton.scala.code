def setCouleurSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}


def step() {
	var c = getCouleurSol()
	c match {
	case Color.BLACK => setCouleurSol(Color.BLACK) ;gauche();avance(); c= Color.WHITE
	case Color.WHITE => setCouleurSol(Color.WHITE) ;droite();avance(); c= Color.BLACK
}
}
