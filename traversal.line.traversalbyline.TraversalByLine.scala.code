override def run() {
  var n = 0
  val x = getWorldWidth()
  val y = getWorldHeight()
  while(! isInPosition(x-1,y-1)) {
    writeMessage(n)
    n = n+1
    if (x-1 != getX()) {
      setPos(getX() + 1, getY())
    }
    else {
      setPos(0, getY() +1)
    }
  }
}


def isInPosition(x: Int, y: Int):Boolean = {
  if ( (x == getX()) && (y== getY())) {
    writeMessage((x+1) * (y+1) -1)
    return true
  }
  else {return false}
}