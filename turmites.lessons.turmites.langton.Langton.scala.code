def step() {
	def setCouleurSol(c:Color) = {
		setCouleurBrosse(c);
		leveBrosse();
		baisseBrosse();
	}

	var c= getCouleurSol;
	if (c == Color.WHITE) {
		setCouleurSol(Color.BLACK);
		droite();
		avance();
	} else if (c == Color.BLACK)
	{
		setCouleurSol(Color.WHITE);
		gauche();
		avance();
	}
}
