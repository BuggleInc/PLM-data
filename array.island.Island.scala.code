def island(num:Array[Int]): Int = {
  var DoubleEtage=0      //variable augmentant a chaque mont?e ou descente
  for (k <- 0 to num.size-1 by 2){   //parcours de la liste
    if (num(k) != num(k+1)){    //comparaison des elements de la liste deux a deux
      
      DoubleEtage = DoubleEtage + 1 
      
    }
    
  }
        return DoubleEtage/2
}