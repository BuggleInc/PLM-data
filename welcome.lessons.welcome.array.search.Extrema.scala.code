def maxValue(nums:Array[Int]): Int =
{
  var max = nums(0)
  
  for (i <- 1 to nums.length - 1)
  	if (max < nums(i))
  		max = nums(i)
  
  return max
}

def minValue(nums:Array[Int]): Int =
{
  var min = nums(0)
  
  for (i <- 1 to nums.length - 1)
  	if (min > nums(i))
  		min = nums(i)
  
  return min
}

def extrema(nums:Array[Int]): Int =
{
  return maxValue(nums) - minValue(nums)
}