override def run() {
  var taille=getMondeHauteur()
  var tab = new Array[Color] (taille)
  tab(0)=getCouleurSol()
  for (i <- 1 to taille-1) {
    tab(i) = getCouleurSol();
    avance();
  }
  for (k <- 0 to taille-2) {
  	gauche();
  	avance();
  	droite();
    recule(taille-1);
    var decal = litMessage().toInt;
  	for (j <- 1 to taille-2) {
      setCouleurBrosse(tab((j+decal)%taille));
    	baisseBrosse();
      avance();
      leveBrosse();
    }
  }
}