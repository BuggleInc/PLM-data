def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  
  if(steps == 0){

    return;
    
  } else{
    
    avance(length);
    droite(angle);
    current(steps);
    tree(steps-1, length*shrink, angle, shrink);
    gauche(angle*2);
    tree(steps-1, length*shrink, angle, shrink);
    droite(angle);
    leveCrayon();
    recule(length);
    
  }
  
}