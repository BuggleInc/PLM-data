def solve() {
  var n = getTaillePile()
  for (i<- 0 to n-2) {
    var x = plusGrand(n-i)
    retourne(x+1)
    if (!estCrepeRetournee(0)){
      retourne(1)}
    retourne(n-i)
  }
  if (!estCrepeRetournee(0)){
    retourne(1)}
}


def plusGrand(n : Int) : Int = {
  var p = getRayonCrepe(0)
  var x = 0
  for (i<- 1 to n-1) {
    if (getRayonCrepe(i) > p){
      x=i
      p=getRayonCrepe(i)
    }
  }
  return x
}