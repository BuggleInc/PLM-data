def tree(steps:Int, length:Double, angle:Double, shrink:Double)  {
  if (steps==1){current(steps);gauche(angle);avance(length);recule(2*length);avance(length);droite(angle)}
 	else {avance(length);
 	     droite(angle);
       tree(steps-1,length*shrink,angle,shrink);
       gauche(2*angle);
       tree(steps-1,length*shrink,angle,shrink);
      }
}