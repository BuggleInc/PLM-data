def setCouleurSol(couleur:Color) {
  setCouleurBrosse(couleur);
  baisseBrosse();
  leveBrosse()
}


def step(rule:Array[Char], colors:Array[Color]) {
  var x = 0
  
  for (i<- 0 to colors.length-1) {
    if (getCouleurSol() == colors(i)) {
      x = i;
    }
  }
    
  if (rule(x) == 'R') {
     droite();
     
   }
    else {
      gauche();
    }
  
   setCouleurSol(colors((x+1)%colors.length))
   avance()
    
  
}
