override def run() {
  var c=0
  while (!positionFinale){
    Fairecolonne(c)
  }
}

def positionFinale():Boolean={
  if (getMondeHauteur()==getY()+1 && getMondeLargeur==getX()+1){
    return true
  } else {
    return false
  }
}

def Fairecolonne(c:Int){
  var x=0
  var y=0
  x=getX()
  y=getY()
  while (y<=getMondeHauteur){
    ecritMessage(c)
    y=y+1
    setPos(x,y)
    c=c+1  
  }
  x=x+1
  setPos(x,0)
}