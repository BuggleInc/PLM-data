def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps!=0){
    current(steps);
  	forward(length);
  	right(angle);
  	tree(steps-1, length*shrink, angle, shrink)
  	left(angle*2);
  	tree(steps-1, length*shrink, angle, shrink)
    current(steps);
    right(angle);
    backward(length)
  }
}