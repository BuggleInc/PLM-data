def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  var i=0
  avance(length)
  if (steps!=1){
  	droite(angle)
  	tree(steps-1,length*shrink,angle,shrink)
  	gauche(angle)
  	tree(steps-1,length*shrink,angle,shrink)
  	i=i+1
  }
  if (steps==1){
    if (i==0){
      recule(length)
    }
    else{
      for (k<-0 to i){
        recule(length)
        droite(angle)
      }
    }
    i=0
  }
}