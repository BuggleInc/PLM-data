def pentaKoch(levels:Int, length:Double) {
	if (levels == 0) forward(length)
	else {
		pentaKoch(levels-1:Int, length*0.4:Double)
		left(108)
		pentaKoch(levels-1:Int, length*0.4:Double)
		right(72)
		pentaKoch(levels-1:Int, length*0.4:Double)
		right(72)
		pentaKoch(levels-1:Int, length*0.4:Double)
		right(72)
		pentaKoch(levels-1:Int, length*0.4:Double)
		left(108)
		pentaKoch(levels-1:Int, length*0.4:Double)
		}
	
}