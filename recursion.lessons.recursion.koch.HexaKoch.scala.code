def drawCurve(levels:Int, length:Double) {
    hexaKoch(levels, length);
}
def hexaKoch(levels:Int, length:Double) {
	if (levels==0) {
		avance(length);
		return;
	}
	else {
		var tmp = length*0.14;
		hexaKoch(levels-1,tmp);
		gauche(60);
		hexaKoch(levels-1,tmp);
		droite(60);
		hexaKoch(levels-1,tmp);
		droite(60);
		hexaKoch(levels-1,tmp);
		droite(60);
		hexaKoch(levels-1,tmp);
		droite(60);
		hexaKoch(levels-1,tmp);
		gauche(120);
		hexaKoch(levels-1,tmp);
	}
}
