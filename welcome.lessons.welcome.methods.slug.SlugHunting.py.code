def isFacingTrail():
       if estFaceMur():
            return False
       forward()
       coul = getCouleurSol()
       backward()
       if coul == Color.green:
           return True

def hunt():
    if isFacingTrail() == True:
        baisseBrosse()
        avance()
        leveBrosse()
    else:
        left()
    elif estSurBiscuit():
        prendBiscuit()

while not porteBiscuit():
    hunt()