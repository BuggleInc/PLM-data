def step(rule:Array[Char], colors:Array[Color]) {
	def changerCouleur(c:Color) ={
		setCouleurBrosse(c)
		baisseBrosse
		leveBrosse
	}

	var i = 0
	while (getCouleurSol != colors(i)) i+=1
	if (i != colors.length-1) changerCouleur(colors(i+1))
	else changerCouleur(colors(0))
	if (rule(i) == 'R') droite
	else gauche
	avance
}
