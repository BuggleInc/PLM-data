boolean isFacingTrail() {
boolean greenCell = false;
	do{
    		//forward();

    		if(getGroundColor().equals(Color.green)){
    			greenCell = true;
    			forward();
    		}else{
    			forward();
    		}

    		if(isFacingWall()){
    			greenCell = false;
    		}

    		if(isOverBaggle()){
    			greenCell = true;
    		}
	}while(!greenCell);

    return greenCell;
}        
