def ChangeColor(c:Color){
	setCouleurBrosse(c);
	baisseBrosse();
	leveBrosse();
	
}

def step(rule:Array[Char], colors:Array[Color]) {
var x=getCouleurSol()
for (i <-0 to colors.length-2){

	while(colors(i)!=x){
		i==i+1
		
	}
	
	if (rule(i)=='R'){
		gauche()
	}
	else {
		droite();
	}
	if (i==colors.length-1){
		ChangeColor(colors(1))
	}
	else {
	ChangeColor(colors(i+1))
	
	}
	avance();
}

}

