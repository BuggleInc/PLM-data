def triangle (length:Double) {
  penDown();
  for (i <- 0 to 2) {
    forward(length);
    right(120.0);
  }
}

def square (steps:Double) {
  penDown();
  for (i <- 0 to 3) {
    forward(steps);
  	right(90.0);
  }
}

override def run() {
  square(100.0);
  forward(100.0);
  right(30.0);
  triangle(100.0);
  left(30.0);
  backward(100.0);
}