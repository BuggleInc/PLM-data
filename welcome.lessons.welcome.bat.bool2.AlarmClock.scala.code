def alarmClock(day:Int, vacation:Boolean): String = {

	if (vacation == false):{
		if (day==1 || day==2 ||day==3 || day==4 || day==5) {
			"7:00"
		}
		if ( day==0 || day==6 ) {
			"10:00"
		}
	
	}

	if (vacation==true) {		
		if (day <- 1 to 5) {
			"10:00"
		}
		if ( day==0 && day==6 ) {
			"off"
		}
		
	}
}
