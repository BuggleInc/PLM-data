

def butNfirst(l:List[Int], n:Int): List[Int] = {
  def compute_butNfirst(l:List[Int], n:Int, c:List[Int]):List[Int] = {
    if (n>= 1 && l != Nil){
      compute_butNfirst(l.tail, n-1, c);
    } else if (l != Nil) {
      compute_butNfirst(l.tail, 0, c ::: List(l.head));
    } else {
      return c;
    }
  }
  compute_butNfirst(l, n, List())
}
