override def run() {
  var compteur = 1
  var d= true
  ecritMessage(0)
  while(!fin()) {
    d = parcoursDouble(getX(),getY(),d)
    ecritMessage(compteur)
    compteur =compteur+1
  }
}

def fin() :Boolean={
  if (getX()==getMondeLargeur()-1 && getY()==getMondeHauteur()-1) return true
  else return false
}


