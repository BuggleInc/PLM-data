def step(rule:Array[Char], colors:Array[Color]) {
  var r:Int =0
  var j:Int=0
  for (i<- 0 to colors.length-1){
    if (getCouleurSol()==colors(i)){
      r=i
      j=i
      if (r==colors.length-1){r=0}
    }  
  }
  rule(j) match{
    case 'R' => setCouleurBrosse(colors(r));baisseBrosse();leveBrosse();droite();avance()
    case 'L' => setCouleurBrosse(colors(r));baisseBrosse();leveBrosse();gauche();avance() 
  }
  
  
  
}