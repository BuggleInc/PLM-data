def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels == 0) {
		avance(length);
	}
	else {
		val lengths = length/3.0;
		snowSide(levels-1, lengths);
		gauche(60);
		snowSide(levels-1, lengths);
		droite(120);
		snowSide(levels-1, lengths);
		gauche(60);
		snowSide(levels-1, lengths);
	}
}
