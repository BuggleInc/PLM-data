def step(rule:Array[Char], colors:Array[Color]) 
{

	var colorId = 0;


	
	for(i <- 0 to colors.length - 1)
	{
		if(colors(i) == getCouleurSol())
		{
			colorId = i;
			printf(""+colorId+" ");
		}
	}
		colorId = (colorId + 1) % colors.length
		setCouleurBrosse(colors(colorId));
		baisseBrosse();
		leveBrosse();

	
	
		if(rule(colorId + 1) == 'L')
		{
			gauche();
			avance();
		}
		else if (rule(colorId) == 'R')
		{
			droite();
			avance();
		}
	
	



}
