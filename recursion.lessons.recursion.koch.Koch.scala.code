def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if (levels==0) {
		avance(length);
	}
	else {
		var tmp = length/3;
		avance(tmp);
		gauche(60);
		avance(tmp);
		droite(120);
		avance(tmp);
		gauche(60);
		avance(tmp);
		snowSide(levels-1,tmp);
	}
}
