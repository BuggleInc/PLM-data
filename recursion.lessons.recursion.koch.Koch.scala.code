def snowFlake (levels:Int, length:Double) {
	setCouleur(Color.red:Color);
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {	
	if ( levels != 0 ) {
	     snowSide(levels-1,length/3);
	     gauche(60:Double);
	     snowSide(levels-1,length/3);
	     droite(120:Double);
	     snowSide(levels-1,length/3);
	     gauche(60:Double);
	     snowSide(levels-1,length/3);	

} else { avance(length); }
}
