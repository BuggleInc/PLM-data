void pentaKoch(int levels, double length) {
  if(levels !=0)
    {
   pentaKoch(levels-1,length*0.4);
    left(108);
    pentaKoch(levels-1,length*0.4);
    right(72);
    pentaKoch(levels-1,length*0.4);
    right(72);
    pentaKoch(levels-1,length*0.4);
    right(72);
    pentaKoch(levels-1,length*0.4);
    left(108);
    pentaKoch(levels-1,length*0.4);
    
  }
  else{
    forward(length);
  }
  }
