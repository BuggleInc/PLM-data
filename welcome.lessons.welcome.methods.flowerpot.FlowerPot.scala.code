def fleur(c:Color) = {
  setCouleurBrosse(c)
  baisseBrosse()
  for (i <- 1 to 2) {avance()}
  recule()
  gauche()
  avance()
  recule()
  recule()
  avance()
  droite()
  setCouleurBrosse(Color.YELLOW)
  leveBrosse()
  avance()
}


def growFlowers() = {
  fleur(Color.RED)
  avance()
  avance()
  fleur(Color.CYAN)
  for (i <- 1 to 6) {recule()}
  droite()
  avance()
  avance()
  gauche()
  avance()
  avance()
  fleur(Color.ORANGE)
  
}
