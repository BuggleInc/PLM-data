def setCouleurSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
}


def step() {
	var c = getCouleurSol()
	c match {
	case Color.BLACK => setCouleurSol(Color.WHITE) ;gauche();avance(); leveBrosse();c=Color.WHITE
	case Color.WHITE => setCouleurSol(Color.BLACK) ;droite();avance(); leveBrosse();c=Color.BLACK
}
}
