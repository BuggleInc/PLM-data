def tag(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}


def move(lettre:Char){
  if(lettre=='R'){
    droite()
    avance()
  }
  else if(lettre=='L'){
    gauche()
    avance()
  }
  else return
}


def step(rule:Array[Char], colors:Array[Color]) {
  for(i<-0 to rule.length-1){
    if(getCouleurSol()==colors(i)){
      if(i+1==rule.length-1){
        tag(colors(0))
      }
      else tag(colors(i+1))
    }
    move(rule(i))
  }
}