def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps == 1){
    current(steps)
    avance(length)
    current(steps+1)
    recule(length)
  } else{
    current(steps)
    avance(length)
    droite(angle)
    tree(steps-1,length*shrink,angle,shrink)
    current(steps+1)
    gauche(2*angle)
    tree(steps-1,length*shrink,angle,shrink)
    current(steps+1)
    droite(angle)
    recule(length)
  }
  
  
  
}