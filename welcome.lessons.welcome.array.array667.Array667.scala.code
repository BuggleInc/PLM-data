    if (nums(i)==6) {
      if (nums(i+1)==6) {
        compteur = compteur + 1
        if (nums(i+2)==7) {
          compteur = compteur + 1
          
        }
      } else if (nums(i+1)==7) {
        compteur = compteur + 1
      }      
    }
  }
  
}
  return compteur
}