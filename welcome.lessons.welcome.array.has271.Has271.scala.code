def has271(nums:Array[Int]): Boolean = {
  var L=nums.length
  for (i <- 0 to  L-3){
    if (nums(i+1)==nums(i)+5 && ((nums(i+2)==nums(i)-1) || (nums(i+2)==nums(i)+1) || (nums(i+2)==nums(i)) || (nums(i+2)==nums(i)) || (nums(i+2)==nums(i)-2) || (nums(i+2)==nums(i)-3))){
      return true
    }
  }
  return false}