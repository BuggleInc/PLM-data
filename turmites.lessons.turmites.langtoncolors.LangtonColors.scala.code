def step(rule:Array[Char], colors:Array[Color]) {
  var color : Color = getCouleurSol()
  var indice : Int = 0
  while (colors(indice) != color) {indice = indice +1}
  if (rule(indice) == 'R'){
    marquer(colors((indice+1)%(colors.length)))
    droite()
    avance()
  }
  if (rule(indice) == 'L'){
    marquer(colors((indice+1)%(colors.length)))
    gauche()
    avance()
  }
}

def marquer(c : Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  gauche()
  droite()
  leveBrosse()
}
