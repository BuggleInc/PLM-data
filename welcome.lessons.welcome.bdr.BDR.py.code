12 public class BDR extends ExerciseTemplated { 
13 
 
14     BuggleWorld myWorld; 
15     void set(int x, int y, String clue) { 
16         BuggleWorldCell c = (BuggleWorldCell) myWorld.getCell(x, y); 
17         if (!c.hasContent()) 
18             c.addContent(clue); 
19          
20         if (!c.getContent().equals(clue)) 
21             throw new RuntimeException("Cell ("+x+","+y+") already contains "+c.getContent()+". Cannot put "+clue); 
22     } 
23     void plus1(int x, int y){  set(x, y, "A"); } 
24     void plus2(int x, int y){  set(x, y, "B"); } 
25     void plus3(int x, int y){  set(x, y, "C"); } 
26 
 
27     void minus1 (int x, int y){  set(x, y, "Z"); } 
28     void minus2 (int x, int y){  set(x, y, "Y"); } 
29     void minus3 (int x, int y){  set(x, y, "X"); } 
30 
 
31     void right(int x, int y){  set(x, y, "R"); } 
32     void left (int x, int y){  set(x, y, "L"); } 
33     void back (int x, int y){  set(x, y, "I"); } 
34 
 
35     public BDR(Lesson lesson) { 
36         super(lesson); 
37         tabName = "BDRBuggle";             
38 
 
39         myWorld = new BuggleWorld("Dance Floor",7,7); 
