def hunt() {
  baisseBrosse()
  var capture:Boolean = false
  while (capture==false) {
    var peutAvancer:Boolean = isFacingTrail()
  	while (peutAvancer==true) {
    	avance()
 	 	}
    gauche()
    if (estSurBiscuit()) {
      capture = true
    }
	prendBiscuit()
	}
}

def isFacingTrail():Boolean = {
  if (!estFaceMur) {
  	avance()
  	var couleurCase = getCouleurSol()
  	recule()
  	return couleurCase == Color.green
  } else {return false}
}