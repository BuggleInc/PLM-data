public void run() {
	makeRows(9);
}//end run

void makeRows(int rows){

	for(int x = 0; x < rows; x++){
		rowOfPatterns();
		if(x < rows - 1){
			shiftBuggle();
		}else{
			resetBuggle();
		}
	}	
}//end makeRows

void makePattern() {
	//this draws 4 V's of different colours
		makeV(Color.yellow);
		makeV(Color.red);
		makeV(Color.blue);
		makeV(Color.green);
		forward(5);
}//end makePattern()

void makeV(Color c){
int steps = 5;

	//this loop draws a V
	for(int x = 0; x <= steps; x++){
			
		if(x == 1 || x == 3 || x == 5){
			setBrushColor(c);
			brushDown();
			brushUp();
		}

		if(x == 3 || x == 4){
			left();
		}

		if(x < steps){
			forward();
		}
				
		if(x == 5){
			left();
			forward();
			left();
			forward();
			forward();
			left();
		}
	}//end for
}// end makeV

