def hunt(c:Color) {
  while (estSurBiscuit()!=true){
    if (isFacingTrail(c)){
      avance()
      tampon()
    }else{
      droite()
    }
  }
  prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur()==true){
    return false
  }
  avance()
  if (getCouleurSol()==c){
    recule()
    return true
  }else{
    recule()
    return false
  }
}

def tampon(){
  baisseBrosse()
  leveBrosse()
}