def isMember(l:List[Int], v:Int): Boolean = {
  if (l==Nil) {
    return false
  } else {
    if (l.head==v) {
      return true
    } else {
      return isMember(l.tail,v)
    }
  }
}

def occurrences(l:List[Int], v:Int): Int = {
  if (!isMember(l,v)) {
    return 0
  } else { if (l.head==v) {
    return 1+occurrences(l.tail,v)
  } else {
    return occurrences(l.tail,v)}
    
  }
}


