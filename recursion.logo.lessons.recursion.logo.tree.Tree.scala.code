def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  var a:Double=length
  var b:Int= steps
  if (b==1){
    avance(a)
    recule(a)
  }else {
    avance(a)
    droite(angle)
    tree(b-1,shrink*a,angle,shrink)
  	gauche(2*angle)
  	tree(b-1,shrink*a,angle,shrink)
    recule(a)
  }
}