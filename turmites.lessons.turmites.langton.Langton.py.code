def setCouleurSol(couleur):
    setCouleurBrosse(couleur)
    baisseBrosse()
    leveBrosse()
def step():
    if getCouleurSol()==Color.black:
        setCouleurSol(Color.white)
        gauche()
        avance() 
    elif getCouleurSol()==Color.white:
        setCouleurSol(Color.black)    
        droite()    
        avance() 