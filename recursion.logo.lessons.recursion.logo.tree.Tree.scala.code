def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  var i=0
  if (steps!=0){
  	avance(length)
  	droite(angle)
  	tree(steps-1,length*shrink,angle,shrink)
  	avance(length)
 	 	gauche(angle)
  	tree(steps-1,length*shrink,angle,shrink)
 		 i=i+1
  }
  if (steps==0){
    for (k<-0 to i){
    	recule(length)
      droite(angle)
    }
    i=0
  }
}