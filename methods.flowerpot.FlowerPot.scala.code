def motif1(c : Color) {
  
  var n = 0
  
  baisseBrosse();
  setCouleurBrosse(c);
  
  for (n <- 1 to 2) {
    avance();
  }
  recule();
  gauche();
  avance();
  for (n <- 1 to 2) {
    recule();
  }
  avance();
  
  setCouleurBrosse(Color.YELLOW);
  droite();
  leveBrosse();
  
}

def growFlowers() {
  
  motif1(Color.RED)
  for (n <- 1 to 3) {
    avance();
  }
  motif1(Color.CYAN)
}