def hunt() {
  while (!estSurBiscuit) {
   if (isFacingTrail) avance;
   else {
     gauche;
     if (isFacingTrail) avance;
     else {
       droite;droite;avance;
     }
   }
  }
}

def isFacingTrail():Boolean = {
  if (estFaceMur) return false;
  else {
    avance;
    var color = getCouleurSol;
    recule;
    return color == Color.green;
  }  
}