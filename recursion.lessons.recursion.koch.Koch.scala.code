def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	levels match {
		case 0 => avance(length)
		case 1 => avance(length/3)
				gauche(60);
				avance(length/3)
				droite(120)
				snowSide(levels-1,length/3)
		case _ => avance(length/9)
				gauche(60);
				avance(length/9)
				droite(120)
				snowSide(levels-1,length/3)
	}
}
