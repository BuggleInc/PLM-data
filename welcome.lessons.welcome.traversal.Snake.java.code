public void run() {
	boolean left = true;
	while (!isFacingWall()){
		while (!isFacingWall()) forward();
		if (left) goLeft(); else goRight();
		left = !left;
	}
}

void goRight(){	
	right();
	if (!isFacingWall()) {
		forward();
		right();
	} else left();
}

void goLeft(){
	left();
	if (!isFacingWall()){
		forward();
		left();
	} else right();
}
