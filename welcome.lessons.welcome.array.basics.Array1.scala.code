def brosse(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}

def getMotif(){
  var tab =new Array[Color](getMondeHauteur())
  tab(0)=getCouleurSol()
  for (i<-0 to getMondeHauteur()-1){
    avance()
    tab(i+1)=getCouleurSol()
    return tab
  }
}


override def run() {
  tab=getMotif()
}