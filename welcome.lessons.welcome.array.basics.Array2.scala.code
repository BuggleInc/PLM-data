override def run() {
  var x:Int = getMondeHauteur()
  var T = new Array[Color](x)
  T(0)=getCouleurSol()
  for(i<- 1 to x-1){
  	avance()
    T(i)=getCouleurSol()
  }
  for(i<- 1 to x-1){recule()}
  for(k<- 1 to x-2){
    val decalage = litMessage().toInt
    gauche()
    avance()
    droite()
    for(j<- 1 to x-1){
      setCouleurBrosse(T((j+decalage)))
      baisseBrosse()
      leveBrosse()
      avance()
    }
    for(j<- 1 to x-1){recule()}
  }
}