def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

	if (steps==0) {
		avance(length);
		recule(length);
	}
	else {
		baisseCrayon();
		current(steps);
		avance(length);
		droite(angle);
		tree(steps-1,shrink*length,angle,shrink);
		gauche(2*angle);
		tree(steps-1,shrink*length,angle,shrink);
		droite(angle);
		leveCrayon();
		recule(length);
		
		

	}

	
}
