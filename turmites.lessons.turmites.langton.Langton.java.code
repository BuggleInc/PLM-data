public void step() {
	if (getGroundColor().equals(Color.BLACK)) {
		setGroundColor(Color.WHITE);
		left();
	} else {
		setGroundColor(Color.BLACK);
		right();
	}
	forward();
}

public void setGroundColor(Color c) {
	setBrushColor(c);
	brushDown();
	brushUp();
}

/*
 * If it's white, change it to black, 
 * turn right and move forward by one cell. 
 * If the ground is currently black, change it to white, 
 * turn left and move forward by one cell.
 */