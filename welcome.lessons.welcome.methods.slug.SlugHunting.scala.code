def hunt() {
  while (estSurBiscuit() == false) {
    while (isFacingTrail() == false) {
      gauche()
    }
    baisseBrosse()
    leveBrosse()
    avance()
  }
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  if (estFaceMur) {
    return false
  } else {
    avance()
    if (getCouleurSol() == Color.green) {
      recule()
      return true
    } else {
      recule()
      return false
    }
  }
}