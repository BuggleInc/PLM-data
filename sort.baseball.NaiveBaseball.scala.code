var mem = 0
var pos1 = 0
var pos2 = 0
var finale=0
override def run() {
  while(finale==0) {
    finale=1
    mem=getTrouBase()+1
    while (mem>getNombreBases()) {
      mem=mem-getNombreBases()
    }
    pos1 = abs(getCouleurJoueur(mem,0)-mem)
    pos2 = abs(getCouleurJoueur(mem,1)-mem)
    if (pos1 < pos2) {
      deplace(mem,1)
      finale=0
    } else {
      deplace(mem,0)
      finale=0
    }
  }
}

def abs(i:Int):Int={
  if (i>=0) {
    return i
  } else {
    return -i
  }
}