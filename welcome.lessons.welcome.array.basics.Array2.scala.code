override def run() {
var n= getMondeHauteur()
var m= getMondeLargeur()
var T= new Array[Color](n)
var decalage = litMessage().toInt
	for (k <- 0 to n-1){
		T(k)=getCouleurSol()
		avance()
	} 
	recule(n)
	gauche()
	avance()
	droite()
	 for (i<-0 to m-1){
		setCouleurBrosse(T((i+decalage)%n))
		baisseBrosse()
		leveBrosse()
		avance()
}
}