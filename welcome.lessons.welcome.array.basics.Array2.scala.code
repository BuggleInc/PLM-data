override def run() {
  var T =new Array[Color] (getMondeHauteur())
  T(0)=getCouleurSol
  avance()
  var p:Int =1
  while ( !estFaceMur ){
    T(p)=getCouleurSol
    avance()
    p=p+1
  }
  recule(p)
  for (i<-0 to getMondeHauteur()-2){
    gauche()
    avance()
    droite()
    var m:String=litMessage()
    var me:Int=m.toInt
    baisseBrosse()
    for (j<- 0 to getMondeHauteur()-2){
      setCouleurBrosse(T((j+me) % 6))
      baisseBrosse()
      leveBrosse()
      avance()
    }
    recule(p)
  }
}