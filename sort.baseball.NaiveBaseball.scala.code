override def run() {
  val n = getNombreBases()
  var trou = getTrouBase()
  var posJoueur = trou
  while (!estTrie()) {
    trou = getTrouBase()
    if (trou == n-1) {
      posJoueur = 0
    } else {
      posJoueur += 1
    }
    if (((getCouleurJoueur(posJoueur,0))-trou)*((getCouleurJoueur(posJoueur,0))-trou) > ((getCouleurJoueur(posJoueur,0))-trou)*((getCouleurJoueur(posJoueur,0))-trou)) {
      deplace(n,0)
    } else {
      deplace(n,1)
    }
  }
}