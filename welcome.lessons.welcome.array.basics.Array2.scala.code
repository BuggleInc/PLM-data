def marque() {baisseBrosse();leveBrosse()}

override def run() {var n:Int=getMondeHauteur()
                    var T= new Array[Color](n)
                   T(0)=getCouleurSol()
                    for (i<-1 to n-1) {avance();T(i)=getCouleurSol()}
                    recule(n-1)
                    
                    
                    for (i<-1 to n-1) {gauche()
                                       avance()
                                       droite()
                                       var dec:Int=litMessage().toInt
                                       for (i<-dec to n-1) {setCouleurBrosse(T(i));marque();avance()}
                                       if (dec<3) {
                                         	if (dec==1) {setCouleurBrosse(T(1));marque()}
                                       		if (dec==2) {setCouleurBrosse(T(0));marque();avance();setCouleurBrosse(T(1));marque()}}
                                       else for (i<-0 to dec-2){setCouleurBrosse(T(i));marque();avance()}
                                       setCouleurBrosse(T(dec-1))
                                       marque()
                                       recule(n)}}