def alarmClock(day:Int, vacation:Boolean): String = {
	while( in16(day)){
		if (vacation){
			return "10:00" ;
		}else{
			return "7:00"
		}
	}


	while( !in16(day)){
		if (vacation){
			return "OFF" ;
		}else{
			return "10:00"
		}
	}
}



def in16(day):Boolean = {
	
	if (day == 0 ){
		return false;
	}
	if ( day == 6){
		return false;
	}
	if ( day < 6 && day > 0){
		return true;
		
	}else{
		return false;
	}
	
	
}
