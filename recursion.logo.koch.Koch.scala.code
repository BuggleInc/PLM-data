def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
  if (levels == 0){
  	avance(length);
  }
  else {
    snowSide(levels-1, length*0.1);
    gauche(60);
    snowSide(levels-1, length*0.1);
    droite(120);
    snowSide(levels-1, length*0.1);
    gauche(60);
  }
  }
