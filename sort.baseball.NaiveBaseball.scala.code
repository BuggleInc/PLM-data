def cible() {
  var (x,y) = (getTrouBase(),getTrouPosition())
  var (m,p) = (x,y)
  var max = 0
  var n = getNombreBases()-1
  var i = x+1
  if (i == n+1) {i=0}
    for (j <- 0 to 1) {
      var d = getCouleurJoueur(i,j)-i
      if (d < 0) {d = d + n}
      if (d > max) {m=i;p=j}
    }
  deplace(m,p)
}





override def run() {
  while (!estTrie()) {
    cible()
  }
 
}