def hunt() 
{
	while(isFacingTrail())
  	{
      baisseBrosse()
      leveBrosse()
      avance()
      if (estSurBiscuit())
      	{
          prendBiscuit()
        }
    }
  while(!isFacingTrail())
  	{
      baisseBrosse()
      leveBrosse()
      droite()
    }
}



def isFacingTrail():Boolean = 
{
  var couleur=getCouleurSol()
	if (estFaceMur())
  	{
      return false
    }
  else
  	{
      avance()
  		couleur=getCouleurSol()
      recule()
      return couleur==Color.green
    }
}