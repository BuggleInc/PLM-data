def drawCurve(levels:Int, length:Double) {
    hexaKoch(levels, length);
}
def hexaKoch(levels:Int, length:Double) {
	if(levels == 0)
	return avance(length)
	else {
		hexaKoch(levels-1, 0.14*length);
		gauche(120);
		hexaKoch(levels-1, 0.14*length);
		droite(60);
		hexaKoch(levels-1, 0.14*length);
		droite(60);
		hexaKoch(levels-1, 0.14*length);
		droite(60);
		hexaKoch(levels-1, 0.14*length);
		droite(60);
		hexaKoch(levels-1, 0.14*length);
		gauche(120);
		hexaKoch(levels-1, 0.14*length);	
	}
}
