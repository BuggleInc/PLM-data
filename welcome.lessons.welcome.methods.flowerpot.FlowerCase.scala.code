def dessineFleur (c:Color) {setCouleurBrosse(c);baisseBrosse();avance();avance;();recule();gauche();avance();recule();recule();avance();setCouleurBrosse(Color.YELLOW);leveBrosse();droite()}

def jarDroite() {avance();avance();avance();avance();avance();avance();gauche();avance();avance();droite();dessineFleur(Color.BLUE);avance();gauche;avance();avance();droite()}

def jardin() {dessineFleur(Color.RED);avance();avance();avance();dessineFleur(Color.CYAN);recule();recule();recule();recule();recule();droite();avance();avance();gauche();avance();avance();dessineFleur(Color.ORANGE);recule();recule();recule();droite();avance();avance();gauche();dessineFleur(Color.PINK);avance();avance();avance();dessineFleur(Color.GREEN);recule();recule();recule();recule();recule()}

def growFlowers() {jardin();jarDroite();jardin()}