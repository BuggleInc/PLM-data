def step(rule:Array[Char], colors:Array[Color]) {
  
  //---
  def setCouleurSol(c:Color)
  		{setCouleurBrosse(c); baisseBrosse() ; leveBrosse()}
  
  //---
  def direction(ind:Int) {
    if (rule(ind) == 'R') {droite(); avance()}
    else {gauche(); avance()}
  }
  
  //---
  var ind : Int = 0
  while (colors(ind)!=getCouleurSol()) {ind+=1}
  // on a ind
  if (ind==colors.length-1) {setCouleurSol(colors(0))}
  else {setCouleurSol(colors(ind+1))}
  direction(ind)
  
}
