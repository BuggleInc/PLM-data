override def run() {

	var T = new Array[Color](getMondeHauteur())
	for (i<-0 to getMondeHauteur()-1) {
		avance();
		T(i)=getCouleurSol()
	}
	recule(getMondeHauteur()-1)

	for (i<-1 to getMondeLargeur()-1) {
		gauche();avance();droite();
		val decalage = litMessage().toInt
		
		setCouleurBrosse(T((i + decalage) % getMondeHauteur));baisseBrosse();leveBrosse();
		
		for (i<-0 to getMondeHauteur()-2) {
			avance();
			setCouleurBrosse(T((i + decalage) % getMondeHauteur));
			baisseBrosse();
			leveBrosse();
		}
		recule(getMondeHauteur()-1)
	}
}

