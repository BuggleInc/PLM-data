def hunt() {
    while(!estSurBiscuit()){
      if (isFacingTrail()==true){
        avance()
        marquerSol()
      }else{
        droite()
      }
    }
  prendBiscuit()
}

def marquerSol(){
  baisseBrosse()
  leveBrosse()
}

def isFacingTrail():Boolean = {
  var couleurSol:Boolean=false // Indique si le sol est vert ou non.
  if (estFaceMur()){
    return false
  }
  avance()
  if (getCouleurSol()==Color.green){
    couleurSol=true
  }
    
  recule()
	return couleurSol
}
