def alarmClock(day:Int, vacation:Boolean): String = {

	var time = "";
	if(vacation)
	{
		time = "off"	;
		
		if(weekDay(day))
		{
		time = "10:00"	;		
		}

	}
	else
	{
		time = "10:00"	;	
		
		if(weekDay(day))
		{
		time = "7:00";
		}
	}
	return time;
}


def weekDay(day:Int): Boolean = {
var weekDayBool = true;
	if(day == 0 || day == 6)
	{
		weekDayBool = false;	
	}

	return weekDayBool;	
}
	

