override def run() {
	
	var T=new Array[Color](getMondeHauteur())
	
	def retour() {
		for (j <- 1 to getMondeHauteur()-1) {
			recule();
		}
		droite();
	}
	
	T(0) = getCouleurSol();
	for (i <- 2 to getMondeHauteur()) {
		avance();
		T(i-1) = getCouleurSol();
	}
	for (k <- 1 to getMondeLargeur-2) {
			val valeur=litMessage().toInt;
			setCouleurBrosse(T((k-1+ valeur) % getMondeHauteur()));
			retour();
			
	}

	
	
}
