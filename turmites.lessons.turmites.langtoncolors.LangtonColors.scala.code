def step(rule:Array[Char], colors:Array[Color]) {
  var couleur = getCouleurSol()
  var indice = 0
  for (i <- 0 to colors.length-1){
    if (couleur==colors(i)){
      indice = i
    }    
  }
  if (rule(indice)=="R"){
    droite() 
  } else if (rule(indice)=="L"){gauche()}
  if (indice==colors.length-1){
    indice = 0
  } else {indice = indice + 1}
  setCouleurBrosse(colors(indice))
  baisseBrosse()
  leveBrosse()
  avance()}
  
