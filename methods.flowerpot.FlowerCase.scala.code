def marquer() {baisseBrosse();leveBrosse();}
def fleur(c:Color) {setCouleurBrosse(c);marquer();avance();setCouleurBrosse(Color.YELLOW);marquer();setCouleurBrosse(c);avance();marquer();recule();droite();avance();marquer();recule();recule();marquer()}


def growFlowers() {fleur(Color.RED);changeFleur();fleur(Color.CYAN);changeEtage();fleur(Color.ORANGE);changeEtage();fleur(Color.PINK);changeFleur();fleur(Color.GREEN);gauche();avance();gauche();avance();droite();fleur(Color.BLUE);gauche();avance();gauche();avance();droite();fleur(Color.RED);changeFleur();fleur(Color.CYAN);changeEtage();fleur(Color.ORANGE);changeEtage();fleur(Color.PINK);changeFleur();fleur(Color.GREEN);}


def changeFleur() {gauche();avance();avance();avance();droite();avance();gauche();}
def changeEtage() {avance();avance();avance();droite();avance();avance();avance();gauche();gauche()}