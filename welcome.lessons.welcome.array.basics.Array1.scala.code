override def run() {
  var taille = getMondeHauteur()
  var tab = new Array[Color](taille)
  for (i <- 0 to tab.length-2) {
    tab(i) = getCouleurSol()
    avance()
  }
  var largeur = getMondeLargeur()
  for (i <- 0 to largeur - 2) {
    recule(taille-1)
    gauche()
    avance()
    droite()
    for (k <- 0 to taille - 1) {
      	 var indice = k
         marquageSol(tab(indice))
      	 avance()
         }
  }
  
  def marquageSol(couleur:Color) {
    setCouleurBrosse(couleur)
    baisseBrosse()
    leveBrosse()
  }
}