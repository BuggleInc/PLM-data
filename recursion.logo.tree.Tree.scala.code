def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  avance(length)
  if (steps==0) {
    gauche(angle)
    avance(length)
    recule(length)
    droite(2*angle)
    avance(length)
    recule(length)
  }
  else {
    current(steps)
    gauche(angle)
    avance(length)
    recule(length)
    droite(2*angle)
    avance(length)
    recule(length)
    return tree(steps-1, length*shrink, angle, shrink)
  }
  
}