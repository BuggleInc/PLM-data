var diag = 0
var cpt = 0
override def run() {
  mark(cpt)
  cpt=cpt+1
  for (i<-1 to 6){
    setPos(0,i)
    for (j<-1 to i){
      mark(cpt)
      cpt=cpt+1
      diago()
    }
    mark(cpt)
    cpt=cpt+1
  }
  for (j<-1 to 6){
    setPos(j,6)
    for (k<-1 to 6-j){
      mark(cpt)
      cpt=cpt+1
      diago()
    }
    mark(cpt)
    cpt=cpt+1
  }
}

def diago(){
  setPos(getX()+1,getY-1)
}
def mark(cpt:Int){
  if (estSurMessage()==false){
    ecritMessage(cpt)
  }
}