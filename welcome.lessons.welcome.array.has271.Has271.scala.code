def has271(nums:Array[Int]): Boolean = {
  if (nums(0) == 2 && nums(1) == 7 && nums(2) == 3) {return true}
  if (nums(0) == 2 && nums(1) == 7 && nums(2) == -1) {return true}
  for (i <- 0 to nums.length-3) {
    if (nums(i+1) == nums(i)+5 && nums(i+2) == nums(i)-1) {return true}
  }
  return false
}