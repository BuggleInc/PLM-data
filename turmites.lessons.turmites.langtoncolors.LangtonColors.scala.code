
var a:Int=0
var trouve: Boolean=false


def step(rule:Array[Char], colors:Array[Color])
{

var i:Int=0
	
	while (!trouve)
	{
		if (getCouleurSol()==colors(i))
		{
			trouve=true
			if (i!=colors.length-1)
			{
				setCouleurBrosse(colors(i+1))
				a=i
			}
			else
			{
				setCouleurBrosse(colors(0))
			}
		}
		else
		{
			i=i+1
		}
	}

	baisseBrosse()
	leveBrosse()

	if (rule(a)=='L')
	{
		gauche()
		avance()
	}
	else
	{
		droite()
		avance()
	}

}