def sierpinski(level:Int, length:Double) {
  if (level==0) {
    avance(length)
    droite(120)
    avance(length)
    droite(120)
    avance(length)
    droite(120)
  }
  else{
   
    sierpinski(level-1,length/2)
   	avance(length/2)
    sierpinski(level-1,length/2)
    avance(length/2)
    droite(120)
    avance(length/2)
    sierpinski(level-1,length/2)
    avance(length/2)
    droite(120)
    avance(length)
    
  }
}