/**
 * moves forward by stepCount steps if forward is true
 * moves back by stepCount steps if forward is false
 */
public void move(int stepCount, boolean forward)
{
	if(forward == true)
	{
		for(int i = 0;i<stepCount;i++)
		forward();
	}
	else
	{
		for(int j =0;j<stepCount;j++)
		backward();
	}
}
