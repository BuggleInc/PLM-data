{
	while(isFacingTrail)
	{
		avance();
		baisseBrosse();
		leveBrosse();
	}
	
	gauche();
	if (!isFacingTrail)
		retourne();
}

}

def isFacingTrail():Boolean = {

if (estFaceMur())
	return false;
else
{
	avance();
	if (getCouleurSol() == Color.green)
	{
		recule();
		return true;
	}
	else
	{
		recule();
		return false;
	}
}


}   

