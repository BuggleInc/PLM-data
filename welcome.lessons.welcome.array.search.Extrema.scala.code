def extrema(nums:Array[Int]): Int = {
  var e:Int=nums(0)
  var min:Int=nums(0)
  for (i<-0 to nums.length-1){
    if (nums(i)>e){
      e=nums(i)
    }else{
      e=e
    }
  }
   for (i<-0 to nums.length-1){
    if (nums(i)<min){
      min=nums(i)
    }else{
      min=min
    }
  }
  return e-min
}
