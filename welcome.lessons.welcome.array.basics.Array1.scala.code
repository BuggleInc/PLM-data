override def run() {
  
  var C = new Array[Color](getMondeHauteur())
  for( i<-0 to getMondeHauteur()-1 )
  {
    C(i) = getCouleurSol()
    avance()
  }
  for(i<-1 to getMondeLargeur()-1)
  {
    init()
    write(C)
  }
  
}



def paint() {
  baisseBrosse()
  leveBrosse()
}

def write(C:Array[Color]) = {
  for(i <- C )
  {
    setCouleurBrosse(i)
    paint()
    avance()
  }  
}

def init() {
  gauche()
  avance()
  droite()
  avance()
}