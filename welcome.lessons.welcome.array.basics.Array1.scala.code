override def run() {
  var couleurs=new Array[Color](getMondeHauteur())
  lireCol1(couleurs)
}

def lireCol1(c:Array[Color]){
  c(1)=getCouleurSol()
  for (i <- 2 to getMondeHauteur()){
    avance()
    c(i)=getCouleurSol()
  }
  recule(getMondeHauteur()-1)
}

def avanceCol(c:Array[Color]){
  for (k<- 1 to getMondeHauteur()){
    setCouleurBrosse(c(k))
    baisseBrosse()
    leveBrosse()
    avance()
  }
}