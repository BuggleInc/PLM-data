def solve() {
  var size: Int = getStackSize()
  var nonSorted:Int =size
  while (nonSorted>0) {
    flip(rkMaxRad(nonSorted)+1)
    if (! isPancakeUpsideDown(0)) {
      flip(0)
    }
    flip(nonSorted)
    nonSorted-=1
  }
  
  def rkMaxRad(nb:Int) :Int ={
    var maxRad:Int = 0
    var rkMax : Int = 0
    for (i <- 0 to nb-1) {
      if (getPancakeRadius(i) > maxRad ) {
        rkMax=i
        maxRad=getPancakeRadius(i)
      }
    }
    return rkMax
  }
}