public void run() {
	for (int y = 0; y < getWorldWidth(); y++) {
		for (int x = 0; x < getWorldHeight() - y; x++){
			setPos(y,x);
			int message = (int) ((((x + y) * (x + y + 1)) / 2) + y);
			writeMessage(message);
		}
	}
	for (int y = getWorldWidth() - 1; y > 0; y--){
		for (int x = getWorldHeight() - 1; x > 0; y--){
			setPos(y,x);
			//writeMessage(99);
		}
	}
}