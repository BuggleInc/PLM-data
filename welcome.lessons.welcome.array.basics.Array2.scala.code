override def run() {
  var Tab = new Array [Color](getMondeHauteur())
for (i <- 0 to Tab.length-2) {
  Tab(i)=getCouleurSol()
  avance()
}
  Tab(getMondeHauteur()-1)=getCouleurSol()
  for (i<- 1 to getMondeLargeur()) {
    reculemul(getMondeHauteur()-1)
    gauche()
    avance()
    droite()
    val decalage = litMessage().toInt
    for (i <- 0 to Tab.length-2) {      
      peinture(Tab((i+decalage)%getMondeHauteur()))
      avance()
    }
    peinture(Tab((getMondeHauteur()-1+decalage)%getMondeHauteur()))
  }
  
              }
  
def avancemul(nb:Int) {
  for (i<- 1 to nb) {
    avance()
  }
}

def reculemul(nb:Int) {
  for (i<- 1 to nb) {
    recule()
  }
}
def peinture(c:Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
	}
