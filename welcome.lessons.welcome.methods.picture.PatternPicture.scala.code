def peindreSol(c: Color) {
  setCouleurBrosse(c)
  
  // On marque le sol.
  baisseBrosse()
  leveBrosse()
}

def dessineCarre() {
  // Zone rouge.
  avance()
  peindreSol(Color.RED)
  
  gauche()
  avance()
  gauche()
  avance()
  peindreSol(Color.RED)
  
  // Zone bleu.
  gauche()
  avance()
  gauche()
  avance(2)
}

override def run() {
  dessineCarre()
}
