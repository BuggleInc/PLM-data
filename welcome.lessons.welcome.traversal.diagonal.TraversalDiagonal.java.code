public void run() {
	for (int x = 0; x < getWorldWidth(); x++) {
		for (int y = 0; y < getWorldHeight() - x; y++){
			setPos(x,y);
			int message = (int) ((((x + y) * (x + y + 1)) / 2) + x);
			writeMessage(message);
		}
	}
	for (int y = 1; y < getWorldWidth(); y--){
		for (int x = 1; x < getWorldWidth(); x++){
			setPos(x,y);
			int a = x;
			int b = y;
			int message = (int) (a * b + a + b);
			writeMessage(message);
		}
	}
}