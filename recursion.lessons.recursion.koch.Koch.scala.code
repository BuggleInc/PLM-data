def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels==0) 
		forward(length);
	else{	
		forward(length/3);
		left(60);
		left(-60);
		forward(length/3);
		snowSide(levels-1,length-1)
	}
	
	
}


