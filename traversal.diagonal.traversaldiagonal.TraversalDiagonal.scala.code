var diag = 0;
override def run() {
  var count = 0
  while (PositionFinale()==false){
    if (getX()<=diag-1 && getY()<=diag-1){
      setX(getX()+1);setY(getY()+1)
    }
    else{
      diag=diag+1
      setX(0);setY(diag-1)
    }
    ecritMessage(count)
    count=count+1
  }
}


def PositionFinale() : Boolean = {
  var H=getMondeHauteur()
  var L=getMondeLargeur()
  if (getX()+1==L && getY()+1==H){
    return true
  }
  return false
}