def drawCurve(levels:Int, length:Double) {
    hexaKoch(levels, length);
}
def hexaKoch(levels:Int, length:Double) {
if(levels==0){
		avance(length)
	}else{
		drawCurve(levels-1,length*0.14)
		gauche(120)
		drawCurve(levels-1,length*0.14)
		droite(60)
		drawCurve(levels-1,length*0.14)
		droite(60)
		drawCurve(levels-1,length*0.14)
		droite(60)
		drawCurve(levels-1,length*0.14)
		droite(60)
		drawCurve(levels-1,length*0.14)
		gauche(120)
		drawCurve(levels-1,length*0.14)
	}	
}
