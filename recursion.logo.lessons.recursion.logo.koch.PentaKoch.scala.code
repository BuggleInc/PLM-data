def pentaKoch(levels:Int, length:Double) {
  
  if(levels==0){
    avance(length)
  }else{
    
    var newLength = length*0.4
    
    pentaKoch(levels-1,newLength)
    gauche(180-360/5)
    pentaKoch(levels-1,newLength)
    droite(360/5)
    pentaKoch(levels-1,newLength)
    droite(360/5)
    pentaKoch(levels-1,newLength)
    droite(360/5)
    pentaKoch(levels-1,newLength)
    gauche(180-360/5)
    pentaKoch(levels-1,newLength)
    
  }
  
}