override def run() {
  var T = new Array[Color](getMondeHauteur())
  for (i <- 1 to (getMondeHauteur())) {
    T(i-1) = getCouleurSol()
    avance()
  }
  for (j <- 1 to (getMondeLargeur())) {
  	gauche()
    avance()
    droite()
    val decalage = litMessage().toInt
  	for (k <- 1 to (getMondeHauteur())) {
      setCouleurBrosse(T((k+decalage)%(getMondeHauteur())))
      baisseBrosse()
      leveBrosse()
      avance()
    }
  }
}