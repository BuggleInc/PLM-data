  var diag = 0;
  var cpt = 0;

def fini():Boolean={
  return cpt == (getMondeHauteur()+getMondeLargeur()-1) 
}

def traceDiag(){
  if (diag<8){
    var x = diag
    var y = 0
    while(y != diag || diag==0){
      setPos(y,x);
      ecritMessage(cpt)
      cpt += 1;
      if (x!=0)
      	x -= 1;
      if (diag!=0)
      	y += 1;
    }
  }
}

override def run() {
  while(!fini()){
    traceDiag();
    diag += 1;
  }
}