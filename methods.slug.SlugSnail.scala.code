def hunt(c:Color) {
  do {
    if (isFacingTrail(c)){
      avance()
    } else {
      gauche()
    }
  } while (estSurBiscuit())
}

def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur()) {
    return false
  } else {
    avance()
  	var res = getCouleurSol() == c
  	recule()
  	return res
  }
}