def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
	var x = getX();
	var y = getY();
	var cap = getCap();
	var longueur = length*shrink;
	
	current(steps);
	avance(length);

	droite(angle);
	if(steps-1 != 0)
		tree(steps-1, longueur, angle, shrink);
	else{
		setPos(x, y);
		setCap(cap);

		gauche(angle);
		gauche(angle);
		avance(length);

		setPos(x, y);
		setCap(cap);
	}	
		
}
