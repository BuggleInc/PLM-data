def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
  var angle=180-360/sides
  if (levels==0){
    for (i<-1 to sides){
      avance(length)
      droite(angle)
    }
  }
  else {
    for (i<- 1 to sides){
      avance(length)
      gauche(180-angle)
      polygonFractal(levels-1,sides,length*shrink,shrink)
    }
  }
}