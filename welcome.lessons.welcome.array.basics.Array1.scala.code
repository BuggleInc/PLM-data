override def run() {
  for (cpt <- (getMondeLargeur())) {
    faireLigneCouleur()
  }
}


var T = new Array[Color](getMondeLargeur())

if(getMondeLargeur()==6){
	T(0)=Color.RED
	T(1)=setCouleurBrosse(Color.CYAN)
	T(2)=setCouleurBrosse(Color.GREEN)
	T(3)=setCouleurBrosse(Color.MAGENTA)
	T(4)=setCouleurBrosse(Color.ORANGE)
