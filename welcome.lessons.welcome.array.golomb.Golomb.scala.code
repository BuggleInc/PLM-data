def golomb(num:Int): Int = {
  if (num > 2) {    
	  var T = new Array[Int](num+1)
	  T(1) = 1
	  T(2) = 2
	  T(num) = 0
	  var p = 2
	  while (T(num)==0) {
 	   remplir(T, p, T(p))
	    p = p + 1
	  }
	  return T(num)
  } else if (num==1) {return 1}
  else if (num==2) {return 2}
}

def remplir(T:Array[Int], x:Int, n:Int) = { //ajoute au tableau T l'élément x n fois
  var p = 0
  while (T(p) != 0) {
    p = p + 1
  }
  for (i <- 0 to n-2) {
    if ((p+i)<T.length) {T(p+i) = x}
  }
}