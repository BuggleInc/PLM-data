public void tree(int steps, double length, double angle, double shrink)    {
	if (steps == 0) return;
	int color = current(steps);
	forward(length);
	right(angle);
	tree(steps - 1, length * shrink, angle, shrink);
	left(angle);
	left(angle);
	tree(steps - 1, length * shrink, angle, shrink);
	right(angle);
	backward(length);
}