def step(rule:Array[Char], colors:Array[Color]) {
  
	var color = getCouleurSol()
  var index = 0
  
  for ((c, i) <- colors.zipWithIndex){
    if (color == c){
      index = i
    }
  }
  
  rule(index) match{
    case 'R' => right()
    case 'L' => left()
  }
  
  if (index == rule.length - 1){
    setBrushColor(colors(0))
  }else{
    setBrushColor(colors(index + 1))
  }
  
  brushDown()
  brushUp()
  forward()
}
