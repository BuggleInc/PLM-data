

def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
	if (length> length*shrink){
    avance(length)
 	  droite(angle)
  	current(steps)
  	tree(steps-1, length*shrink, angle, shrink)   
    gauche(angle)
    recule(length)
  	gauche(angle*2)
  	avance(length)
  	tree(steps-1, length*shrink, angle, shrink )
    recule(length*shrink)
    droite(angle)
    recule(length)
      
  
  }
  
  


}