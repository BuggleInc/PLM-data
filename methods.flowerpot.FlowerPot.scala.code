def paintTile(){
  brushDown()
  brushUp()
}

def growFlower(c: Color){
  setBrushColor(c)
  paintTile()
  forward()
  setBrushColor(Color.YELLOW)
  paintTile()
  left()
  setBrushColor(c)
  forward()
  paintTile()
  backward(2)
  paintTile()
  forward()
  right()
  forward()
  paintTile()
  backward(2)
}


def growFlowers(){
  growFlower(Color.RED)
  forward(4)
  growFlower(Color.CYAN)
}