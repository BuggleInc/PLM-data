def noTriples(nums:Array[Int]): Boolean = {
  
  var premierTriplet:Int = nums(0)
  var deuxiemeTriplet:Boolean = false
  var troisiemeTriplet:Boolean = false
  
  for (i <- 1 to nums.length -2) {
    
    if (nums(i) == premierTriplet) {deuxiemeTriplet = true}
    if (nums(i+1) == premierTriplet) {troisiemeTriplet = true}
    
  }
  
  if ((deuxiemeTriplet == troisiemeTriplet) && (troisiemeTriplet = true)) {return false}
  else {return true}
}