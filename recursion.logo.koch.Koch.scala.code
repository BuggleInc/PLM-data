def snowFlake (levels:Int, length:Double) {
  
    snowSide(levels, length);
  
    right(120);
  
    setColor(Color.blue);
  
    snowSide(levels, length);
  
    right(120);
  
    setColor(Color.orange);
  
    snowSide(levels, length);
  
    right(120);
}
def snowSide(levels:Int, length:Double) {
  if(levels==0){
    avance(length/2:Double)
    droite(120)
    avance(length/2:Double)
    droite(120)
    avance(length/2:Double)
  }
  
  
  snowSide(levels, length/3)
  gauche(60)
  snowSide(levels, length/6)
  droite(120)
  snowSide(levels, length)
  gauche(60)
  snowSide(levels, length)
  
}