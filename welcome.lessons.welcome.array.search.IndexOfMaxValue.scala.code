def maxValue(nums:Array[Int]): Int = {
  var m = nums(0)
  for (i<- 0 to nums.length -1) {m=Math.max(m,nums(i))}
  return m}
def indexOfValue(nums:Array[Int] ,lookingFor:Int): Int = {var a = -1;for (i <- 0 to nums.length-1) {if (nums(i)==lookingFor && a==(-1)) a=i};return a}

def indexOfMaxValue(nums:Array[Int]):Int = {
  indexOfValue(nums,maxValue(nums))
}