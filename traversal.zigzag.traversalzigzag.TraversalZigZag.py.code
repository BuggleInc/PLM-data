def ecrit(posY,debut,l,inv=False) :
  '''
  Fonction qui ecrit le numero de case sur la largeur l ? la ligne posY donn?e
  Si reverse, on va de droite ? gauche
  '''
  msg=debut
  
  if inv :
    for i in range(l-1,-1,-1):
      setPos(i,posY)
      ecritMessage(msg)
      msg+=1

  else :
    for i in range(l):
      setPos(i,posY)
      ecritMessage(msg)
      msg+=1



