def dessinerFleur(c:Color)
{
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
  avance()
  setCouleurBrosse(Color.YELLOW)
  leveBrosse()
  droite()
  recule()
}

def growFlowers()
{
  dessinerFleur(Color.RED)
  avance(4)
  dessinerFleur(Color.CYAN)
  recule(2)
  gauche()
  recule(2)
  gauche()
  dessinerFleur(Color.ORANGE)
}