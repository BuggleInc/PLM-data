override def run() {
  
  var cpt : Int = 0
  var x: = 0
  var y = 0
  var dirEst = true 
  
  do
  {
    ecritMessage(cpt)
 	  cpt = cpt+1
    
    if (dirEst)
      x = x+1
    else
      x = x-1

    if (x==-1)
    {
      y=y+1
      dirEst = !dirEst
      x=0
    }
    
    if (x==getMondeLargeur()+1)
    {
      y=y+1
      dirEst = !dirEst
      x= getMondeLargeur()-1
    }
    
  } while (!end)
  
}

def end():Boolean = {
  return getX == getMondeLargeur && getY == getMondeHauteur 
}