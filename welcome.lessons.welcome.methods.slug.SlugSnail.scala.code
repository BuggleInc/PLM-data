def hunt(c:Color) {
  while (!porteBiscuit()){
    if (estSurBiscuit()){
      prendBiscuit()
    } else if (isFacingTrail(c)){
      avance()
      baisseBrosse()
      leveBrosse()
    } else {
      gauche()
    }  
  }
}

def isFacingTrail(c:Color):Boolean = {
    if (estFaceMur()){
      return false
    } else {
      avance()
      if (getCouleurSol()==c){
        recule()
        return true
      } else {
        recule()
        return false
      }
    }
}
