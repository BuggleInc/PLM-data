def hunt() {
  while (!estSurBiscuit()) {
    if (isFacingTrail()) {
      baisseBrosse();
      leveBrosse();
      avance()
    } else {
      gauche();
    }
  }
  baisseBrosse();
  leveBrosse();
  prendBiscuit();
}

def isFacingTrail():Boolean = {
  var colorGreen: Boolean = false
  if (!estFaceMur()) {
    avance();
    if (getCouleurSol() == Color.green) {
      colorGreen = true;
    }
    recule();
  }
  return colorGreen
}
