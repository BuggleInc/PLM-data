def setCouleurSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}


def step() {	
	var c = getCouleurSol()
	c match {
	case Color.BLACK => setCouleurSol(Color.WHITE) 
					gauche()	
					avance() 
					
	case Color.WHITE => setCouleurSol(Color.BLACK)
					droite()
					avance()
					}
}
