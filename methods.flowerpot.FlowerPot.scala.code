def motif(c:Color) {
  setCouleurBrosse(c)
  gauche()
  avance()
  marqueSol()
  recule()
  droite()
  avance()
  marqueSol()
  avance(2)
  gauche()
}

def marqueSol() {
  baisseBrosse()
  leveBrosse()
}

def pollen() {
  setCouleurBrosse(Color.YELLOW)
  for (compteur <- 1 to 4) {
    marqueSol()
    avance(4)
    gauche()
  }
  avance(2)
  gauche()
  avance(2)
  marqueSol()
}