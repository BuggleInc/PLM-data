def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps >1)
  {
    baisseCrayon()
    current(steps)
    avance(length)
    droite(angle)
    tree(steps-1,length*shrink,angle,shrink)
    gauche(2*angle)
    tree(steps-1,length*shrink,angle,shrink)
    leveCrayon()
    recule(length)
  }
  if (steps == 1)
  {
    baisseCrayon()
    current(steps)
    avance(length)
    recule(length)
	}
}