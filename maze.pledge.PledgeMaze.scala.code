var virages = 0
var first = true

def murAGauche():Boolean = {
  
  var res = false
  gauche()
  res = estFaceMur()
  droite()
  return res 
  
}

def fonceAuNord() {
  
  setDirection(Direction.NORD)
  while (!estFaceMur()) {avance()}
  
}

def longerMurGauche() {
  
  if (virages == 0 && !first) {
    
    fonceAuNord()
    
  }
  
  if (murAGauche()) {
    
    if (estFaceMur()) {
      
      droite()
      virages = virages - 1
      first = false
      return
    
    } else {
      
      avance()
      
    }
    
  } else {
      
    	gauche()
    	virages = virages + 1
    	first = false
      avance()
    
  }
  
}


override def run() {
  
  while (!estSurBiscuit()) {
    
    longerMurGauche()
    
  }
  
  prendBiscuit()
  
}