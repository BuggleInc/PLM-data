def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps<0){recule(length/shrink)}
  else{
    current(steps)
    avance(length)
    droite(angle)
    avance(length)
    tree(steps-1,length*shrink,angle,shrink)
    gauche(2*angle)
    avance(length)
    tree(steps-1,length*shrink,angle,shrink)   
  }
}