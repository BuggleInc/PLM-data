override def run() {
  var H: Int = getMondeHauteur()
  var L: Int = getMondeLargeur()
  var T : Array[Color] = definirCouleurs()
  val D = litMessage().toInt //Transforme le caractere en entier !
  definirCouleurs()
  recule(H-1)
  seDeplacer()
  for (i <- 0 to getMondeLargeur()-2){
    faireLigneCouleurs(T:Array[Color],D:Int)
  }
  
}

def marquerSol(){
  baisseBrosse()
  leveBrosse()
}

def seDeplacer(){
  gauche()
  avance()
  droite()
}

def definirCouleurs():Array[Color]={
  var T = new Array[Color](getMondeLargeur())
  for (i <- 0 to getMondeLargeur()-2){
    T(i)=(getCouleurSol())
    avance()
  }
  T(getMondeLargeur()-1)=(getCouleurSol())
  return T
}

def faireLigneCouleurs(T:Array[Color], D:Int){
  for (i <- 0 to getMondeLargeur()-1){
    setCouleurBrosse(T((i+D)%getMondeHauteur())
    marquerSol()
    avance()
  }
  seDeplacer()
}