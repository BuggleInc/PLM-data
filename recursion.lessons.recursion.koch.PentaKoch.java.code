void pentaKoch(int levels, double length) {
	if (levels == 0) {
		forward(length);
	} else {
		pentaKoch(levels - 1, length * 0.4);
		left(180 - (360 / 5));
		pentaKoch(levels - 1, length * 0.4);
		right(360 / 5);
		pentaKoch(levels - 1, length * 0.4);
		right(360 / 5);
		pentaKoch(levels - 1, length * 0.4);
		right(360 / 5);
		pentaKoch(levels - 1, length * 0.4);
		left(180 - (360 / 5);
		pentaKoch(levels - 1, length * 0.4);
	}
}
