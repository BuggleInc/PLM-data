var diag = 0;
var pos = 0;
var compteur = 0;
override def run() {

while(!fini){
	if(diag<=getMondeHauteur){
		pos = diag+1
	}
	else{
		pos = getMondeHauteur-math.abs(getMondeHauteur-diag)
	}

	for (i<-0 to pos-1){
		ecritMessage(compteur)
		if(i!=pos-1){
		setPos(getX+1,getY-1)
		}
		compteur=compteur+1
	}
	diag=diag+1
	if(diag<=getMondeHauteur-1){
		setPos(0,diag)
	}
	else{
		setPos(getMondeHauteur-math.abs(getMondeHauteur-diag),getMondeHauteur)
	}

}

def fini():Boolean={
	if(getX== getMondeLargeur()-1&&getY == getMondeHauteur()-1){
		return true
	}
	else return false
}

}