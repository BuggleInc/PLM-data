def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels == 0)
	return 0
	else{
	avance(length-1);
	droite(120);
	snowside(levels,length);
	avance(length-1);
	droite(120);
	snowside(levels,length);
	avance(length-1);
	droite(120);
	snowside(levels,length);
	
}
}