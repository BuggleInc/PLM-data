def chemin(c:Color) {
  var fini:Boolean=false;
  
  while( fini != true){
    
    if( estFaceMur()){gauche();}
    
    else if ( isFacingTrail(c) ){fini=true;}
    
    else{gauche();} 
  }
  
}







