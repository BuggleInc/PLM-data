def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
if (steps==0) {return }
else { 
	avance(length)
	droite(angle)
	avance(shrink*length)
	droite(angle)
	avance(shrink*shrink*length)
	droite(angle)
	avance(length)
	tree(steps-1,shrink*length,angle,shrink)
	



     }
                                                                    }









