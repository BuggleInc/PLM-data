def vaChercher() {
  var nbPas = 0
  while (!estSurBiscuit()) {
    avance()
    nbPas = nbPas + 1
  }
  if (estSurBiscuit()) {
    prendBiscuit()
  }
  while (porteBiscuit() && nbPas != 0) {
    recule()
    nbPas = nbPas - 1
  }
  if (porteBiscuit() && nbPas == 0) {
    poseBiscuit()
  }
}

for (compteur <- 1 to 7) {
  vaChercher()
  droite()
  avance()
  gauche()                 
}
