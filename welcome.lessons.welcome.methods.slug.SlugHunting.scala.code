def hunt() {
  while (estSurBiscuit()==false) {
    if (isFacingTrail()==true) {
      avance();
      baisseBrosse();
      leveBrosse();
    } else {
      gauche();
    }
  }
  prendBiscuit();
}

def isFacingTrail():Boolean = {
  if (estFaceMur()==true) {
    return false;
  } else {
    avance();
    if (getCouleurSol()==Color.green) {
      recule()
      return true;
    } else {
      recule()
      return false;
    }
  }
}
