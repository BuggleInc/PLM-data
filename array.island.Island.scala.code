def island(num:Array[Int]): Int =
{
  var statut = 0 //0: plaine, 1:montee, 2:descente
  var nbNiveaux = 0;

  for (i <- 1 to num.length-2)
  {
    if (num(i) < num(i+1) && statut == 0) //debut de colline
    {
      statut = 1;
      nbNiveaux += 1;
    }
    else if (num(i) > num(i+1)) statut = 2;
    else if (num(i) == num(i+1)) statut = 0;
  }
  return nbNiveaux;
}