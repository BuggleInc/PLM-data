var x = 0
def hunt(c:Color) {
  while(x==0) {
    if (isFacingTrail()==true) {
      avance()
      baisseBrosse()
      leveBrosse()
    } else if (isFacingTrail==false) {
      gauche()
    }
    if (estSurBiscuit()) {
      prendBiscuit()
      x=1
    }
  }
}

def isFacingTrail():Boolean = {
    if (!estFaceMur){
    	avance()
      if (getCouleurSol==Color.green){
        recule()
        return true
      }
      if (getCouleurSol!=Color.green) {
        recule()
        return false
      }
    }
  return false
}