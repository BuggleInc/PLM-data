def makeFlowers() {
  setBrushColor(Color.red)
  brushDown()
  forward(2)
  backward()
  left()
  forward()
  backward(2)
  forward()
  setBrushColor(Color.yellow)
  right()
  brushUp()
  setBrushColor(Color.red)
}

def growFlowers() {
  makeFlowers()
  forward(3)
  for (i <- 1 to 3) {
    makeFlowers()
    right()
    forward(3)
  }
  setPos(3,4)	
}