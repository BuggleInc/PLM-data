override def run() {
  for(j<- 0 to 1){
    for(i<- 0 to 1){faireMotif();avance();avance();avance()}
    reposition()
  }
}

def marquerSol(){baisseBrosse();leveBrosse()}

def faireDiago(c:Color){setCouleurBrosse(c);avance();marquerSol();avance();gauche();avance();marquerSol()}

def faireMotif(){avance();faireDiago(Color.BLUE);faireDiago(Color.GREEN);faireDiago(Color.YELLOW);faireDiago(Color.RED)}

def reposition(){avance();gauche();avance();avance();avance();droite()}
