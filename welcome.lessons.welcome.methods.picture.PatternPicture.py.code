def faireMotif():
    for i in range(4):
        if i == 0:
            c = Color.RED
        elif i == 1:
            c = Color.BLUE
        elif i == 2:
            c = Color.GREEN
        else :
            c = Color.YELLOW
        faireBase(c)
        avance(3)
        gauche()

def faireBande():
    for i in range(2):
        faireMotif()
        if i == 0:
            avance(4)


for j in range(2):
