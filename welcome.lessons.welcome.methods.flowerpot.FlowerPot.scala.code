def faireFleur(c: Color ) {

	baisseBrosse()
	setCouleurBrosse(c)
	avance(2)
	recule()
	gauche()
	avance()
	recule(2)
	avance()
	setCouleurBrosse(Color.YELLOW)
	leveBrosse()

	
	
}

def growFlowers() {
	faireFleur(Color.RED)
	droite()
	avance(3)
	faireFleur(Color.CYAN)
	recule(4)
	gauche()
	avance()
	droite();droite()
	faireFleur(Color.GREEN)
}
