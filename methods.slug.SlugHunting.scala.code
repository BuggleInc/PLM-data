def hunt() { brushDown() ;
  	while (! isOverBaggle()) {
    if isFacingTrail() {forward()}
  	else {left(); 
          if isFacingTrail() {forward()}}
  	else {right() ; right() ; 
          if isFacingTrail() {forward()}}
    } ;
  pickupBaggle()}

def isFacingTrail():Boolean = {
    if (isFacingWall()) {return false}
  	else {forward(); var color = getGroundColor() ; backward()
      return (color == Color.green)}
}