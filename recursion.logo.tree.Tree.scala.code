def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if(steps!=0){
  	avance(length);
    gauche(angle);
    avance(length);
    leveCrayon();
    gauche(-angle);
    recule(length);
    baisseCrayon();
    gauche(-angle);
    avance(length);
    tree(steps-1,length*shrink,angle,shrink);
    tree(steps-1,length*shrink,-angle,shrink); 
  }
}