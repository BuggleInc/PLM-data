}

def isFacingTrail():Boolean = {
  if (estFaceMur()){
    return false;
  }
  avance();
  if (getCouleurSol() == Color.green) {
    baisseBrosse();
    leveBrosse();
    recule();
    return true;
  }
  recule();
  return false
}