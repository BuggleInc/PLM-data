override def run() {
  var taille = getMondeHauteur()
  var tab = new Array[Color](taille)
  tab(0) = getCouleurSol()
  for (i <- 1 to tab.length-1) {
    avance()
    tab(i) = getCouleurSol()
  }
  var largeur = getMondeLargeur()
  for (i <- 0 to largeur - 2) {
    recule(taille-1)
    gauche()
    avance()
    droite()
    val decalage = litMessage().toInt
    marquageSol(tab(decalage))
    for (k <- 1 to taille-1) {
         avance()
      	 var indice = (k + decalage) % taille
         marquageSol(tab(indice))
         }
  }
  
  def marquageSol(couleur:Color) {
    setCouleurBrosse(couleur)
    baisseBrosse()
    leveBrosse()
  }
}