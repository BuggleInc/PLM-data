		droite(120.)
		avance(length)
		droite(120.)
	}
	else {sierpinski(level-1,length / 2.)
		droite(60.)
		avance(length / 2.)
		gauche(60.)
		sierpinski(level-1, length / 2.)
		gauche(60.)
		avance(length / 2.)
		droite(60.)
		sierpinski(level-1, length / 2.)
		recule(legnth / 2.)
	}
}
