def pentaKoch(levels:Int, length:Double) {
  
    if(levels == 0){
    
    avance(length);
    
  } else{
    
    pentaKoch(levels-1, length*0.4);
    gauche(100.00);
    
    pentaKoch(levels-1, length*0.4);
    right(60.00);
    
    pentaKoch(levels-1, length*0.4);
    right(60.00);
    
    pentaKoch(levels-1, length*0.4);
    right(60.00);
    
    pentaKoch(levels-1, length*0.4);
    right(60.00);
      
    pentaKoch(levels-1, length*0.4);
    gauche(100.00);
    
  }
  
  
}