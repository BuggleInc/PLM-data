def marquerSol(){
  baisseBrosse()
  leveBrosse()
}

def isFacingTrail():Boolean = {
  var couleurSol:Boolean=false // Indique si le sol est vert ou non.
  for (cpt <- 1 to 15){
    avance()
    if (getCouleurSol()==Color.green){
      couleurSol=true
      marquerSol()
    }
    recule()
    if (couleurSol==true){
      avance()
    }else{
      droite()
    }
  }
}