var couleurs=new Array[Color](getMondeHauteur())

override def run() {
  lireCol1()
  for(j<- 1 to getMondeLargeur()-1){
    gauche()
    avance()
    droite()
    avance()
    avanceCol()
  }
}

def lireCol1(){
  for (i <- 1 to getMondeHauteur()-1){
    couleurs(i)=getCouleurSol()
    avance()
  }
  recule(getMondeHauteur()-1)
}

def avanceCol(){
  for (k<- 1 to getMondeHauteur()-1){
    setCouleurBrosse(couleurs(k))
    baisseBrosse()
    leveBrosse()
    avance()
  }
}