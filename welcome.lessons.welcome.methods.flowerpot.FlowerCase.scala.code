def grow2Flowers(b:Boolean) {
	var c1:Color = null;
	var c2:Color = null;
	if(b) {
		c1 = Color.red;
		c2 = Color.cyan;
	}
	else {
		c1 = Color.pink;
		c2 = Color.green;
	}
	growFlower(c1);
	avance(3);
	growFlower(c2);
	recule(5);
}

def grow4Flowers() {
	grow2Flowers(true);
	droite();
	avance(4);
	gauche();
	grow2Flowers(false);
}

