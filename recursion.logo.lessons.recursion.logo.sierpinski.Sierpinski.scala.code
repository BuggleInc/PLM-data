def sierpinski(level:Int, length:Double) {
   if(level==0) {
     droite(120)	
     avance(length)
     droite(120)	
     avance(length)
     droite(120)	
     avance(length)
    } else  {
    droite(120)
 		sierpinski(level-1,length/2)
  	droite(120)
 		sierpinski(level-1,length/2)
    droite(120)
 		sierpinski(level-1,length/2)
	}
}