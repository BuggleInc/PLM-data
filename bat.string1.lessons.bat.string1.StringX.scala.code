def stringX(str:String):String = {
  
  var pointer:Int = 0;
  
  var debut:String = "";
  var fin:String = "";

  while(str.charAt(pointer)=="x"){
    pointer+=1;
    debut+="x";
  }
  
  pointer = 0;
  
  while(str.charAt(str.length-1-pointer)=="x"){
    pointer+=1;
    fin+="x";
  }
  
  println(debut)
  
  var entre:String = "";
  
  for(i<-0 to str.length-1){
    if(str.charAt(i)!="x"){
      entre+=str.charAt(i);
    }
  }
  
  return debut+entre+fin;
}