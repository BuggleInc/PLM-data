def withoutDoubles(die1:Int, die2:Int, noDoubles:Boolean):Int = {
  if (noDoubles == false) {
    return die1 + die2
  }
  else if (noDoubles == true && die1 == die2) {
    if (die1 + die2 == 6){
      return die1+die2+1
    }
    else {
      return die1+die2
    }
  }
  else {
    return die1+die2
  }
}