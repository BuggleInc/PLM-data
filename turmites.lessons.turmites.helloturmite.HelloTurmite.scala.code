var state = 0;

def step(colors:Array[Color], rule:Array[Array[Array[Int]]] ) {
  var cou=getCouleurSol()
 	var test = 0
  for (i <- 0 to colors.length-1){
    if (cou==colors(i)){
      dir = i
    }
  }
  setCouleurBrosse(colors((dir+1)%(colors.length)))
 	baisseBrosse()
 	leveBrosse()
  if (rule(test)=='L'){
   	gauche()
    avance()
  }
  else {
    droite()
    avance()
  }
}
