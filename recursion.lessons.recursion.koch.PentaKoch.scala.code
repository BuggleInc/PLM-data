def pentaKoch(levels:Int, length:Double) {
	if (levels!=0) {
		pentaKoch(levels-1, length*0.4);
		gauche(10);
		pentaKoch(levels-1, length*0.4);
		droite(75);
		pentaKoch(levels-1, length*0.4);
		droite(75);
		pentaKoch(levels-1, length*0.4);
		droite(60);
		pentaKoch(levels-1, length*0.4);
		droite(60);
		pentaKoch(levels-1, length*0.4);
		gauche(120);
		pentaKoch(levels-1, length*0.4);
	}
	else {
		avance(length);
	}
}
