def pentaKoch(levels:Int, length:Double) {
  if (levels==0) {
    avance(length)
  } else {
    pentaKoch(levels-1,length*0.4)
    gauche(113)
    pentaKoch(levels-1,length*0.4)
    droite(65)
    pentaKoch(levels-1,length*0.4)
    droite(75)
    pentaKoch(levels-1,length*0.4)
    droite(65)
    pentaKoch(levels-1,length*0.4)
    gauche(11)
    pentaKoch(levels-1,length*0.4)
  }
}