override def run() {
  var color0=0
  var color1=0
  var FarColor=0
  while(isSorted()==false){
    for (i <- 0 to 4){
      color0=getPlayerColor(i,0)
      color1=getPlayerColor(i,1)
      if (getHoleBase()==0){
        FarColor=3
      }
      else if (getHoleBase()==3){
        FarColor=1
      }
      else{
        FarColor=getHoleBase()-1
      }
      if (color0==FarColor){
        move(i,0)
      }
                else {
        move(i,1)
      }
    }
  }
}