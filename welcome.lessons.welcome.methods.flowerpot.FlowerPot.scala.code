def growFlowers() {
  Fleur(Color.red);
  avance(3);
  Fleur(Color.cyan);
  recule(5);
  droite();
  avance(2);
  gauche();
  avance(2);
  Fleur(Color.orange);
  recule(3);
  droite();
  avance(2);
  gauche();
  Fleur(Color.pink)
  avance(3);
  Fleur(Color.green);
  recule(5);
}



def Fleur(c:Color) {
  setCouleurBrosse(c);
  baisseBrosse();
  avance(2);
  recule();
  gauche();
  avance();
  recule(2);
  avance();
  setCouleurBrosse(Color.yellow)
  droite();
  leveBrosse();
}

