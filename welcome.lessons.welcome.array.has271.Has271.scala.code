def has271(nums:Array[Int]): Boolean = {
	for (i<- 0 to nums.length-3) {
		if (nums(i+1)==5+nums(i)) {
			if (nums(i+2)==nums(i)-1) {
				return true
			}
			if (nums(i+2)==nums(i)) {
				return true
		}
		if (nums(i+2)==nums(i)+1) {
				return true
		}
		if (nums(i+2)==nums(i)-2) {
				return true
		}
		if (nums(i+2)==nums(i)-3) {
				return true
	}
		}
	}
	return false
}
