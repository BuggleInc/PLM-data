def sierpinski(level:Int, length:Double) {
  if (level != 0){
    sierpinski(level-1,length/2)
    forward(length)
    right(120)
    sierpinski(level-1,length/2)
    forward(length)
    right(120)
    sierpinski(level-1,length/2)
    forward(length)
    right(120)
	}else{
    forward(length)
  	right(120)
  	forward(length)
  	right(120)
  	forward(length)
  	right(120)
  }
}