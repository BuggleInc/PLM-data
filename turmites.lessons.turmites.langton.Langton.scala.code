def setCouleurSol(c:Color)
{
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}

def step()
{
  var couleurSol = getCouleurSol()
  
  if (couleurSol == Color.white)
  {
    setCouleurSol(Color.black)
    droite()
    avance()
  }
  else if (couleurSol == Color.black)
  {
    setCouleurSol(Color.white)
    gauche()
    avance()
  }
}
