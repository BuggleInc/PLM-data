while (estSurMessage()==true){
  if (litMessage=="A") {
    avance();
  } else if (litMessage=="B"){
    avance(2);
  } else if (litMessage=="L"){
    gauche();
  } else if (litMessage=="R"){
    droite();
  } else if (litMessage=="Z"){
    recule();
  } else if (litMessage=="X"){
    recule(3);
  } else if (litMessage=="I"){
    retourne();  
    avance();
  }
}