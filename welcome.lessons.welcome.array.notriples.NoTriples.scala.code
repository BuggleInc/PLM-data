def noTriples(nums:Array[Int]): Boolean = {
  
  var premierTriplet:Int = 0
  var deuxiemeTriplet:Boolean = false
  var troisiemeTriplet:Boolean = false
  
  for (i <- 0 to nums.length -3) {
    
    premierTriplet = nums(i)
    if (nums(i+1) == premierTriplet) {deuxiemeTriplet = true}
    else if (nums(i+2) == premierTriplet) {troisiemeTriplet = true}
    else if ((deuxiemeTriplet == troisiemeTriplet) && (troisiemeTriplet)) {return false}
  	else {return true}
    
  }
  

}