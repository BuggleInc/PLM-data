def fleur(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  recule()
  avance(2)
  recule()
  setCouleurBrosse(Color.YELLOW)
  baisseBrosse()
  droite()
  gauche()
  leveBrosse()
}

def growFlowers(){
  fleur(Color.RED)
  droite()
  avance(3)
  fleur(Color.CYAN)
  recule()
  droite()
  recule(2)
  droite()
  fleur(Color.ORANGE)	
  recule(2)
  gauche()
  recule(2)
  droite()
  recule()
  fleur(Color.PINK)
  droite()
  avance(3)
  fleur(Color.GREEN)
}

