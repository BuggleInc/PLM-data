def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
	levels match {
		case 1 => {
			for (i<-1 to sides) {
				avance(length)
				droite(360/sides)
			}
		}
		case _ => {
			for(j<-1 to sides) {
				avance(length)
				droite(360/sides+180)
				polygonFractal(levels-1,sides,length*shrink,shrink)
				droite(180)
			}
		}
		 	
	}
}
