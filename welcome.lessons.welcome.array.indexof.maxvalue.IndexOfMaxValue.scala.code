def indexOfMaxValue(nums:Array[Int]):Int = {
	var i = 0
	while(i < nums.length && nums(i) != maxValue(nums)){
  	i = i + 1
  }
  if(i < nums.length){
  	return i 
  }else{
  	return -1
  }
}

	



def maxValue(nums:Array[Int]): Int = {
	var p:Int= 0
	p= max(nums(0),nums(1));
	for ( i<-2 to nums.length -1 ){
		p = max(p,nums(i))
	}
	return p ;
}






def max (a:Int , b:Int): Int = {
	return   (  (a + b + Math.abs(b - a))/2);
}