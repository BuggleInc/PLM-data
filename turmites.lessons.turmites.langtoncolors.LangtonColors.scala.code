def brosse(couleur:Color)
{
	setCouleurBrosse(couleur); baisseBrosse(); leveBrosse()
}

def step(rule:Array[Char], colors:Array[Color]) 
{
	var pos = 0
	
	for(i <- 0 to colors.length)
	{
		if(colors(i)==getCouleurSol())
			pos = pos+1
	}

	rule(pos) match
	{
		case 'L' => gauche()
		case 'R' => droite()
	}

	if(pos!=colors.length-1)
		brosse(colors(pos+1))
	else brosse(colors(0))

	avance()
}

