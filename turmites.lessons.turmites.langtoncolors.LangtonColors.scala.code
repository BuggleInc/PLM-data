def step(rule:Array[Char], colors:Array[Color]) {
  letsDoThis(rule, colors)
}


def letsDoThis(rule:Array[Char], colors:Array[Color]) {
  val couleur:Color = getCouleurSol()
  for (i <- 0 to colors.length - 1) {
    if (colors(i) == couleur) {
      setCouleurSol(colors(i+1))
      if (rule(i) == 'R') {
        droite()
      } else {
        gauche()
      }
      avance()
    }
  }
}


def setCouleurSol(couleur:Color) {
  setCouleurBrosse(couleur)
  baisseBrosse()
  leveBrosse()
}
