def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  avance(length:Double);
  if(steps==1){
    droite(angle:Double);
    avance(length/2:Double);
    droite(angle:Double)
    avance(length/4);
		droite(angle:Double);   
  }
  else{
    avance(length:Double)
    droite(angle:Double);
    tree(steps-1, shrink*length, angle, shrink);
    gauche(2*angle:Double);
    tree(steps-1, shrink*length, angle, shrink);
    recule(length:Double);
  }
  
}