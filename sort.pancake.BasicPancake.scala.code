def solve() {
  var lgr = getTaillePile()
  var i = 1
  var maxtemp = getRayonCrepe(0)
  var indicemax = 0
  var rayon = 0
  while (!estTriee()) {
    maxtemp = getRayonCrepe(lgr-i)
    indicemax=i-1
    for (j <- 0 to lgr-i) {
      rayon = getRayonCrepe(j)
    	if (rayon>maxtemp) {
      	maxtemp = rayon
        indicemax=j
      }
    }
    retourne(indicemax+1)
    retourne(lgr-i+1)
    i+=1
  }
}