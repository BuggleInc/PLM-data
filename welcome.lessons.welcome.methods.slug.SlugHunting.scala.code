def hunt() {
  while (!estSurBiscuit()) {
    while (isFacingTrail() and !porteBiscuit()) {
      avance()
      if (estSurBiscuit()) {
        prendBiscuit()
      }
      }
      baisseBrosse()
      leveBrosse()
    }
    droite()
  }
}

