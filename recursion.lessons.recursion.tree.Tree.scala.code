def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
		var x = getX();
		var y = getY();
		var cap = getCap();
	
		current(steps);
		
		avance(length);
		var longueur = length * shrink;
	
		droite(angle);
		tree(steps-1, longueur, angle, shrink);
	
		setPos(x, y);
		setCap(cap);
	
		gauche(angle);
		gauche(angle);
		tree(steps-1, longueur, angle, shrink);

		setPos(x, y);
		setCap(cap);
}
