def colorie (c: Color) {
  setCouleurBrosse(c);
  baisseBrosse;leveBrosse;
}

def courrir (x:Int) {
  for (i <- 1 to x ) avance;
}

def courrirB ( x:Int) {
  for (i <- 1 to x ) recule;
}

def deux (c:Color) {
  avance;
  colorie(c);
  recule;gauche;avance;
  colorie(c);
  recule;droite;
}

def carre {
  deux(Color.RED);
  courrir(3);gauche;
  deux(Color.BLUE);
  courrir(3);gauche;
  deux(Color.GREEN);
  courrir(3);gauche;
  deux(Color.YELLOW);
  courrir(3);gauche; 
}

override def run() {
  carre;
  courrir(4);
  carre;
   courrirB(4);gauche;courrir(4);droite;
  carre;
  courrir(4);
  carre
}