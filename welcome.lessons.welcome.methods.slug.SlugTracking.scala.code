def isFacingTrail():Boolean = {
  var limace=false
  while (limace!=true){
    avance()
    if (estSurBiscuit()){
      limace=true
    }
    if (getCouleurSol()!=Color.green){
      recule()
      gauche()
      avance()
      if (estSurBiscuit){
        limace=true
      }
      if (getCouleurSol()!=Color.green){
        recule()
        droite()
        droite()
        avance()
        if (estSurBiscuit){
          limace=true
        }
      }
    }
  }
  return estSurBiscuit()
}