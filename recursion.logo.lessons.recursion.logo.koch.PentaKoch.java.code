void pentaKoch(int levels, double length) {
  if(levels !=0)
    {
   pentakoch(levels-1,length*0.4);
    left(108);
    pentakoch(levels-1,length*0.4);
    right(72);
    pentakoch(levels-1,length*0.4);
    right(72);
    pentakoch(levels-1,length*0.4);
    right(72);
    pentakoch(levels-1,length*0.4);
    left(108);
    pentakoch(levels-1,length*0.4);
    
  }
  else{
    forward(length);
  }
  }
