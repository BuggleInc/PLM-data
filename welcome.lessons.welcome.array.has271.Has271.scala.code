def has271(nums:Array[Int]): Boolean = {
  var n  = nums.length
  var a271 = false
  for (k<-0 to n-3){
    if (nums(k)!=2){
      if(nums(k+1)==nums(k)+5 && nums(k+2)==nums(k)-1)||{
        a271=true
      }
      else a271=a271
    }
    else{
      if ( (nums(k)==7 ) && (nums(k+2)==1 || nums(k+2)==2 || nums(k+2)==0 || nums(k+2)==-1 || nums(k+2)==3)){
        a271=true
      }
      else a271=a271
    }
  }
  return a271
}