var c: Color = Color.YELLOW

def point(c : Color)
{
	setCouleurBrosse(c: Color);
	baisseBrosse;
	leveBrosse;
}


def fleur (c : Color)
{
	point (c : Color);
	avance;
	point(Color.YELLOW);
	gauche; avance; 
	point (c : Color)
	recule; recule;
	point (c : Color);
	avance; droite; avance;
	point (c : Color)
	
}

def growFlowers()
{
	fleur(Color.PINK);
}
