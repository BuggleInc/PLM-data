  T(5)=setCouleurBrosse(Color.PINK)
  T(6)=setCouleurBrosse(Color.MAGENTA)
  T(7)=setCouleurBrosse(Color.CYAN)
}

def marquerSol {
  baisseBrosse()
  leveBrosse()
}

def faireLigneCouleur(){
	for (i <- T){
  	T(i)
  	marquerSol()
  	avance()
	}
  gauche()
  avance()
  droite()
  avance()
}