def hunt() = {
	while(!estSurBiscuit){
		leveBrosse()
		if(isFacingTrail == true) {
			baisseBrosse()
			avance()
		}
		else {
			gauche()
		}
	}
	prendBiscuit()	
}

def isFacingTrail():Boolean = {
	var solVert:Boolean = false
	if(!estFaceMur) {
		avance()
		if(getCouleurSol == Color.green) {
			solVert = true
		}
		recule()
	}
	return solVert
}