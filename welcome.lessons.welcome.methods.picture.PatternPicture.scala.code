override def run() {
  for (compteur <- 1 to 2){
    repMotif()
  }
}


def repMotif(){
  for (compteur <- 1 to 2){
    Motif()
  }
  recule(3)
  gauche()
  avance(3)
  droite()
}

def Motif(){
  faireMotif(Color.RED)
  avance(2)
  faireMotif(Color.BLUE)
  recule(3)
  gauche()
  avance(2)
  droite()
  faireMotif(Color.YELLOW)
  avance()
  faireMotif(Color.GREEN)
  avance(3)
}

def faireMotif(c:Color){
  setCouleurBrosse(c)
  avance()
  brosse()
  gauche()
  avance()
  gauche()
  avance()
  brosse()
  gauche()
  avance()
  gauche()
}


def brosse(){
  baisseBrosse()
  leveBrosse()
}