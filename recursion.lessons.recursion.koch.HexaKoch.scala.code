def drawCurve(levels:Int, length:Double) {
    hexaKoch(levels, length);
}
def hexaKoch(levels:Int, length:Double) {
	if (levels == 0) 
	{
		avance(length);
	} 
	else {
			hexaKoch(levels-1, length*.14);
			gauche(120);
			hexaKoch(levels-1, length*.14);
			droite(60);
			hexaKoch(levels-1, length*.14);
			droite(60);
			hexaKoch(levels-1, length*.14);
			droite(60);
		}
		gauche(180);
		hexaKoch(levels-1, length*.14);

}
