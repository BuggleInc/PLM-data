def marquerSol(c:Color){
  setCouleurBrosse(c)
 	baisseBrosse()
 	leveBrosse()
}

def fleur(c:Color,c2:Color){
  setCouleurBrosse(c)
 	baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
  avance()
  setCouleurBrosse(c2)
  droite()
 	leveBrosse()
}

def growFlowers(){
  fleur(Color.RED,Color.YELLOW)
  avance(2)
  fleur(Color.CYAN,Color.YELLOW)
  recule(5)
  droite()
  avance(2)
  gauche()
  avance(2)
  fleur(Color.ORANGE,Color.YELLOW)
  recule(3)
  droite()
  avance(2)
  gauche()
  fleur(Color.PINK,Color.YELLOW)
  avance(3)
  fleur(Color.GREEN,Color.YELLOW)
  recule(5)
}