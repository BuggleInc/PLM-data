def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  def treet(steps:Int, length:Double, angle:Double, shrink:Double, i:Int) {
    if (steps <= 0){
      return
    }
    current(i)
    avance(length)
    droite(angle)
    treet(steps-1, shrink * length, angle, shrink,i+1)
    gauche(2*angle)
    treet(steps-1, shrink * length, angle, shrink, i+1)
    droite(angle)
  	recule(length)
}
  return treet(steps, length, angle, shrink, 0)
}