
def pentaKoch(levels:Int, length:Double) {
  if(levels==0){
    avance(length)
  }
  else{
    var alpha = 360/5
    pentaKoch(levels-1,length*0.4)
    gauche(2*alpha)
    
    pentaKoch(levels-1,length*0.4)
    droite(alpha)
    
    pentaKoch(levels-1,length*0.4)
    droite(alpha)
    
    pentaKoch(levels-1,length*0.4)
    droite(alpha)
    
    pentaKoch(levels-1,length*0.4)
    gauche(2*alpha)
  }
}