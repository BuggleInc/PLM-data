public void run() { 
	boolean topOfStairs = false;
	boolean stairsReached = false;
	while(!topOfStairs) {
		for(int i=0;i<3&&!isFacingWall();i++) {
			forward();
			if(stairsReached && i > 2) {
				topOfStairs = true;
				break;
			}
		}
		if(topOfStairs) {
			break;
		}
		stairsReached = true;
		left();
		forward();
		right();
	}
}
