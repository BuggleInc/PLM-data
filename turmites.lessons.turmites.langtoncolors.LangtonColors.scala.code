def step(rule:Array[Char], colors:Array[Color]) {
	def changerCouleur(c:Color) ={
		setCouleurBrosse(c)
		baisseBrosse
		leveBrosse
	}

	for (i<- 0 to colors.length-1) {
		if (getCouleurSol == colors(i)) {
			if (i!=colors.length) changerCouleur(colors(i+1))
			else changerCouleur(colors(1))
			if (rule(i) == 'R') droite
			else gauche
			avance
		}
	}
}
