override def run() {
  baisseBrosse()
  while (!positionFinale()){
    pasDeSerpent()
  }

}


def positionFinale():Boolean = {
  if (!estFaceMur()) return(false);
  if (getDirection()== Direction.EAST){
    gauche()
    if (!estFaceMur()) {droite();return true}
    else {droite();return false}
  }
  if (getDirection() == Direction.WEST) {
    droite()
    if (estFaceMur()) {gauche();return true}
    else {gauche();return false}
  }
  else return false
}

def pasDeSerpent(){
  if (!estFaceMur){
    avance()
  }
  else{
    if (getDirection()== Direction.WEST){
      droite()
      avance()
      droite()
    }
    if (getDirection()== Direction.EAST){
      gauche()
      avance()
      gauche()
    }
  }
}