def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps==0){
    avance(length)
    recule(length)
  }else{
    avance(length)
    droite(angle)
    current(steps)
    tree(steps-1,length*shrink,angle,shrink)
    gauche(angle)
    recule(length)
    tree(steps-1,length*shrink,angle,shrink)
  }
}