def has271(nums:Array[Int]): Boolean = {
  var res=false
  var temp:Int=0
  var marge:Int=0
  val taille=nums.length
  
  for (i<-0 to (taille-3)){
    if (nums(i+1)==(nums(i)+5)){
      temp=(nums(i))-1
      marge=Math.abs((nums(i+2))-temp)
      if ((marge==0)||(marge<=2)){
        res=true
      }
    }
  }
  
  return res
}