69         right(5,6); 
70         plus2(5,5); 
71         plus2(5,4); 
72         plus2(4,6); 
73         minus1(2, 6); 
74         right(3,6); 
75         plus2(3,5); 
76          
77         setup(myWorld); 
78     } 
79 } 
