def golomb(num:Int): Int = {
  var suite=new Array[Int](num)
  var crescendo=new Array[Int](num)
  var repetition:Int=0
  var k:Int=0
  
  if(num==1){
    return 1
    
  } else{
    
    suite(0)=1
  	suite(1)=2
    
    for(i<-1 to num){
      crescendo(i) = i+1
    }
    
    for(i <- crescendo){
      repetition=suite(i-1)
      
      while(k < repetition){
        suite(i+k)=crescendo(i-1)
        k = k+1
      }
    }
  }
  return suite(num)
}
