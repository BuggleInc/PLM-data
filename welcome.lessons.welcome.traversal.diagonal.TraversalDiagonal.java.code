public void run() {
	int count = 0;
	int initY = 0;
	while (initY < getWorldWidth()) {
		int x = 0;
		int y = initY;
		while (x <= getWorldWidth() && y >= 0){
			setPos(x,y);
			x++;
			y--;
			writeMessage(count);
			count++;
		}
		initY++;
	}

	initX = 1;
	while (){
		int x = initX;
		int y = getWorldWidth();
		while(){
			setPos(x,y);
			x++;
			y--;
			writeMessage(count);
			count++;
		}
		initX++;
	}
}