def growFlowers() {
  dessin2Fleurs(Color.RED, Color.CYAN)
  droite()
  avance(2)
  gauche()
  avance(2)
  dessinFleur(Color.ORANGE)
  recule(3)
  droite()
  avance(2)
  gauche()
}

def dessinFleur(c:Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  avance(3)
  recule()
  gauche()
  avance()
  recule(2)
  avance()
  setCouleurBrosse(Color.YELLOW)
  droite()
}

def dessin2Fleurs(c1:Color, c2:Color) {
  dessinFleur(c1)
  avance(3)
  dessinFleur(c2)
  recule(5)
}