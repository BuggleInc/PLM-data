override def run() {
  var etat = 0
  while (!estSurBiscuit() && etat == 0) {
    while (getDirection != Direction.NORTH) {
      gauche()
    }
    while (!estFaceMur && etat == 0) {
      avance()
    }
    if (getDirection != Direction.NORTH && !estFaceMur) {
      etat = 1
    }
    while (estFaceMur() && etat == 1) {
      keepHandOnSideWall()
    }
  }
}

def keepHandOnSideWall() = {
  if (!estFaceMur()) {
    gauche()
  }
  while (estFaceMur()) {
    droite()
  }
  avance()
}

