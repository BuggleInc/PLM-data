  recule() ; recule() ; recule() ;recule() ; recule() ; recule()
  droite() ; avance() ; avance() ; gauche() ; avance() ; avance() 
  fleur(Color.orange) ; recule() ; recule() ;recule() ; recule()
  droite() ; avance() ; avance() ; gauche() 
  fleur(Color.pink) ;avance(); avance() ; fleur(Color.green)
}




def growFlowers() {
