def mark(color):
    setBrushColor(color)
    brushDown()
    brushUp()
def step(rule, colors):
    a = 0
    while colors[a] != getGroundColor():
        a+=1
    if a >= len(colors)-1:
        color = colors[0]
        mark(color)
    else:
        color = colors[a+1]
        mark(color)
    if rule[a] == 'R':
        right()
    elif rule[a] == 'L':
        left()
    forward()
    
