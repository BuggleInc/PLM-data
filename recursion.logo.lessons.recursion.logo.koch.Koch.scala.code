def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
  
  forward(length);  
  left(60);
  forward(length);  
  right(120);
  forward(length);  
  left(60);
  forward(length);  
  //snowSide(levels,length/(levels));
  
}