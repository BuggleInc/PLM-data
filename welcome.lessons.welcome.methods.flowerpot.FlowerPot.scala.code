}




def fleur(c:Color) {
  setCouleurBrosse(c:Color)
  Brosse() ; avance() ; avance() ; Brosse() ; recule() ; gauche() ; avance() ; Brosse() ; recule() ; recule() ; Brosse() 
  setCouleurBrosse(Color.yellow)
  avance() ; Brosse() ;droite(); avance() 
}


def jardin() {
