def growFlowers() {
  makeFlowers(Color.red)
  forward(3)
  for (i <- 1 to 4) {
    makeFlowers(Color.red)
    right()
    forward(3)
  }
  setPos(4,4)
}

def makeFlowers(c:Color) {
  setBrushColor(c)
  brushDown()
  forward()
  forward()
  backward()
  left()
  forward()
  backward(2)
  forward()
  setBrushColor(Color.yellow)
  right()
  brushDown()
  brushUp()
}