def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  
  if (steps==steps) {
    recule(length)
  }
  else {
    current(steps) ; avance(length) ; droite(angle) ; tree(steps-1,length*shrink,angle,shrink) ;  gauche(2*angle) ; tree(steps-1,length*shrink,angle,shrink) ; recule(length) ; droite(angle)
     
  }
}