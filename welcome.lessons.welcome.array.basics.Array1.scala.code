  T(0)=setCouleurBrosse(Color.PINK)
	T(1)=setCouleurBrosse(Color.YELLOW)
	T(2)=setCouleurBrosse(Color.RED)
	T(3)=setCouleurBrosse(Color.ORANGE)
	T(4)=setCouleurBrosse(Color.MAGENTA)
