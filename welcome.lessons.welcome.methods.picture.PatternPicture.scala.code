def marqueSol(){
  baisseBrosse()
  leveBrosse()
}

def faireCarreCouleur1(c:Color){
  setCouleurBrosse(c)
  avance()
  marqueSol()
  droite()
  avance()
  droite()
  avance()
  marqueSol()
  droite()
  avance()
  droite()
}

def faireCarreCouleur2(c:Color){
  setCouleurBrosse(c)
  marqueSol()
  avance()
  droite()
  avance()
  marqueSol()
  droite()
  avance()
  droite()
  avance()
