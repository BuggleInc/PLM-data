def posNeg(a:Int, b:Int, negative:Boolean):Boolean = {
  (a,b,negative) match {
    case (a,b,false) if Math.abs(a)!=a && Math.abs(b)==b =>true
    case (a,b,false) if Math.abs(a)==a && Math.abs(b)!=b =>true
    case (a,b,true) if Math.abs(a)!=a && Math.abs(b)!=b =>true
    case (_,_,_) =>false
  }}