def marquer()
{
	baisseBrosse()
	leveBrosse()
}
def DiagHautGauche(c:Color)
{
	setCouleurBrosse(c)
	avance()
	marquer()
	gauche()
	avance()
	gauche()
	avance()
	marquer()
	gauche()
	avance()
	gauche()
}
def DiagHautDroite(c:Color)
{
	setCouleurBrosse(c)
	avance()
	marquer()
	droite()
	avance()
	droite()
	avance()
	marquer()
	droite()
	avance()
	droite()
}
def motif()
{
	DiagHautGauche(Color.RED)
	avance(2)
	gauche()
	avance(2)
	droite()
	DiagHautGauche(Color.GREEN)
	recule()
	gauche()
	gauche()
	DiagHautDroite(Color.YELLOW)
	recule(2)
	gauche()
	avance(2)
	DiagHautDroite(Color.BLUE)
	avance(3)
	droite()
	droite()
	
}
def ligne_motif(n:Int)
{
	for(k<-1 to n)
	{
		motif()
		avance(4)
	}
}

override def run() {
	for(k<-1 to 2)
	{
		ligne_motif(2)
		gauche()
		avance(4)
	}
}
