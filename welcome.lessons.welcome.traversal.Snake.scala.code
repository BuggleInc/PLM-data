override def run() {
  while(!posfinale()){
    serpent()
  }
}

def posfinale():Boolean={
  if((estFaceMur && getDirection()==Direction.EST) || (estFaceMur && getDirection()==Direction.OUEST)){
    return true
  } else{
    return false
  }
}

def serpent(){
  if(!estFaceMur()){
    avance()
  } else{
    if(getDirection()==Direction.OUEST){
      droite()
      avance()
      droite()
    } else if(getDirection()==Direction.EST){
      gauche()
      avance()
      gauche()
    }
  }
}