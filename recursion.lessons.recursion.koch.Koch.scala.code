def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels==0) forward(length);
	else{
		var lg=length/3	
		snowSide(levels-1,lg)
		left(60)
		snowSide(levels-1,lg)
		right(120)
		snowSide(levels-1,lg)
		forward(60);
		
	}	
}


