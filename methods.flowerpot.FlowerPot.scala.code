def growFlowers(){
  Motif(Color.RED)
  for (n<-1 to 3){
    avance()
  }
  Motif(Color.CYAN)
  for (p<- 1 to 5){
    recule()
  }
  droite()
  for (r<-1 to 2){
    avance()
  }
  gauche()
  for (s<-1 to 2){
    avance()
  }
  Motif(Color.ORANGE)
}

def Motif(c:Color){
  setCouleurBrosse(c:Color)
  baisseBrosse()
  for (k<-1 to 2){
    avance()
  }
  recule()
  gauche()
  avance()
  for (l<-1 to 2){
    recule()
  }
  avance()
  leveBrosse()
  setCouleurBrosse(Color.YELLOW)
  baisseBrosse()
  leveBrosse()
  droite()
}