def hunt() {
	while(estSurBiscuit == false) {
		isFacingTrail();
		if (isFacingTrail() == true) {
    		baisseBrosse();
    		avance();
    		leveBrosse();
    		} else {
    			gauche();
    			if (isFacingTrail == false) {
    				droite();droite();
    			}
    		}
	}
	prendBiscuit();
}
 
def isFacingTrail():Boolean = {
	var couleur : String = "non"
	if (estFaceMur()==false) {
		avance();
		if ((getCouleurSol()== Color.yellow)||(getCouleurSol()== Color.pink)) {
			couleur = "oui";
		} else { 
			couleur = "non";
		}
		recule();
		if (couleur == "oui") {
			return true;
		} else {
			return false;
		}
    } else {
    	return false;
    } 
}        
