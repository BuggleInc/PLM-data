def sierpinski(level:Int, length:Double) {
  if (level==0) {
    avance(length)
  } else {
    for (i <- 1 to 3) {
        sierpinski(level-1, length/2)
        droite(120)
        sierpinski(level-1, length/2)
        droite(120)
        sierpinski(level-1, length/2)
        droite(120)
        sierpinski(level-1, 2*length/2)
        droite(120)
    }
  }
}