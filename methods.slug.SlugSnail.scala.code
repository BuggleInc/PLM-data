// permet de savoir si on est bien orient? vers le bon chemin
def isFacingTrail(c:Color):Boolean = {
  var is:Boolean=false;
  if (estFaceMur()){return false}
  else{
    avance();
    if ( getCouleurSol()==c){is = true;}
    recule();
  }
  return is
}

