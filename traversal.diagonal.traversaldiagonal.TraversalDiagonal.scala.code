def posFinale():Boolean = {
  if (getX() == (getMondeLargeur() - 1) && getY() == (getMondeHauteur() - 1)){
    return true
  }
  return false
}
      
def diago(cpt:Int,diag:Int):Int = {
  ecritMessage(cpt)
	if (diag <= 6){
    if (getY() != 0){
      setPos(getX()+1, getY()-1)
    } else if (diag != 6) {
      setPos(0,diag)
      diag += 1
    } else {
      diag += 1
      setPos(diag - 6,6)
    }
  } else {
    if (getX() != 6){
    	setPos(getX()+1, getY()-1)
    } else {
      diag += 1
      setPos(diag - 6,6)
    }
  }
  return diag
}

override def run() {
  var cpt:Int = 0
  var diag:Int = 0
  while(!posFinale()){
    diag = diago(cpt, diag)
    cpt += 1
  }
  ecritMessage(cpt)
}