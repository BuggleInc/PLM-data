def step(rule:Array[Char], colors:Array[Color]) {
  var a = getCouleurSol();
  var pos =0;
  var taille = rule.length;
  for (i <- 0 to taille-1) {
    if (colors(i)==a) {
      pos = i}
  }

  if (rule(pos)=="L") {
    gauche();

  } else {
    droite();
  }

  setCouleurBrosse(colors((pos+1)%taille));
  baisseBrosse();
  leveBrosse();
  avance();
}