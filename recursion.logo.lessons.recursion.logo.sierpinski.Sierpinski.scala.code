def sierpinski(level:Int, length:Double) {
  if (level < 1){
    avance(length)
    droite(60)
    avance(length)
    droite(60)
    avance(length)
    droite(60)
    return
  }
  sierpinski(level - 1 , length / 3)
  avance(length)
  droite(60)
  sierpinski(level - 1 , length / 3)
  avance(length)
  droite(60)
  sierpinski(level - 1 , length / 3)
  avance(length)
  droite(60)
}