def has271(nums:Array[Int]): Boolean = {
	var taille: Int = nums.length;
	var n: Int = 0;
	var retour: Boolean = false;
	for(n <- 0 to taille - 3){
		if((nums(n) + 5 == nums(n + 1)) && (nums(n) + 1 >= nums(n + 2)) && (nums(n) - 3 <= nums(n + 2))){
			retour = true;  
		}
		else{
			retour = false;
		}
	}
	return retour;
}
