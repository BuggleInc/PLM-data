def pentaKoch(levels:Int, length:Double) {
  if(levels == 0){
    avance(length)
  }else if(levels >= 1){
    pentaKoch(levels-1,length*0.4)
    gauche(100.0)
    pentaKoch(levels-1,length*0.4)
    droite(80.0)
    pentaKoch(levels-1,length*0.4)
    droite(80.0)
    pentaKoch(levels-1,length*0.4)
    droite(80.0)
    pentaKoch(levels-1, length*0.4)
    gauche(80.0)
    pentaKoch(levels-1, length*0.4)
    
  }
}