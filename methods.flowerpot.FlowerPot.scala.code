def growFlowers() {
  fairemotif(Color.red)
  fairemotif(Color.cyan)
   
  
}

def fairemotif(c: Color) {
  baisseBrosse();
  setCouleurBrosse(c:Color)
  avance(3);
  baisseBrosse();
  setCouleurBrosse(c:Color)
  recule();
  gauche();
  avance();
  recule(2);
  avance();
  setCouleurBrosse(Color.yellow)
  droite();
  leveBrosse();
  avance(3);
  
  
}