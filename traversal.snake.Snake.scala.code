override def run() {
  baisseBrosse()
  while (!fin) {
    explorer()
  }
}

def fin(): Boolean = {
  if ((estFaceMur) && (getDirection() == Direction.EST)) {
    gauche()
    if (estFaceMur) {
      return true
    }
  } else if ((estFaceMur) && (getDirection() == Direction.OUEST)) {
    droite()
    if (estFaceMur) {
      return true
    }
  }
  return false
}

def explorer() {
  if (!estFaceMur) {
    avance()
  } else if ((estFaceMur) && (getDirection() == Direction.EST)) {
    gauche() ; avance() ; gauche()
  } else if ((estFaceMur) && (getDirection() == Direction.OUEST)) {
    droite() ; avance() ; droite()
  }
}