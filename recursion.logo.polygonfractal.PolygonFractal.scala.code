def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
  var angle1=360/sides
  var angle=(180-angle1)
  if (levels==1){
    for (i<-1 to sides){
      avance(length)
      gauche(angle1)
    }
    gauche(angle1)
    
  }
  else {
    for (i<-1 to sides){
      avance(length)
      droite(angle1)
      polygonFractal(levels-1,sides,length*shrink,shrink)
    }
  }
}