def hunt() {
  setCouleurBrosse(c:lightGray)
  while (estSurBiscuit()==false){
    if (isFacingTrail()==true){
      avance()
      baisseBrosse()
      leveBrosse()
    }
    else{
      droite()
    }
  }
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  
  var color=Color.white
  if (estFaceMur()==false){
    avance()
    color=getCouleurSol()
    recule()
    
    if (color==Color.green){
      return true
    }
    else {
      return false
    }
  }
  else{
    return false
  }
}