def hunt() {
  while (!estSurBiscuit){
    if (isFacingTrail()){
      avance()
      baisseBrosse()
      leveBrosse
    }
    else{
      gauche()
      if (isFacingTrail()){
        avance()
        baisseBrosse()
        leveBrosse()
      }
      else
      	retourne()
    }
  }
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  if (estFaceMur())
  	return false
 	else {
  	avance()
