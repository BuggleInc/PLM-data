def growFlowers() {
  fleur(Color.RED)
  avance(2)
  fleur(Color.CYAN)
  droite()
  avance(2)
  droite()
  avance(2)
  fleur(Color.ORANGE)
  avance(2)
  droite()
  avance(2)
  droite()
  fleur(Color.PINK)
  avance(2)
  fleur(Color.GREEN)
}

def fleur(c: Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  avance()
  gauche()
  avance()
  recule(2)
  avance()
  droite()
  avance()
  recule()
  setCouleurBrosse(Color.YELLOW)
  leveBrosse()
  avance()
}