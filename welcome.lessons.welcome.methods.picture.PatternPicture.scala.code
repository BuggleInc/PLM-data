def marquerSol() {
  baisseBrosse(); leveBrosse()
}

def peindreCarre(c:Color) {
  setCouleurBrosse(c)
  
  avance()
  marquerSol()
  
  gauche()
  avance()
  gauche()
  avance()
  marquerSol()
  
  gauche()
  avance()
  gauche()
  avance()
}

def peindreMotif() {
 	peindreCarre(Color.RED)
  peindreCarre(Color.BLUE)
  peindreCarre(Color.GREEN)
  peindreCarre(Color.YELLOW)
}

override def run() {
  peindreMotif()
}