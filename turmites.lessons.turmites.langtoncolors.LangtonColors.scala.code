def step(rule:Array[Char], colors:Array[Color]) {
  var c = getCouleurSol()
  var id = 0
  for (i<- 0 to colors.length-1){
    if (colors(i) == c){
      id = i
    }
  }
  if (rule(id)=='R'){
    droite()
    setCouleurBrosse(colors(id))
    baisseBrosse()
    leveBrosse()
    avance()
  }
  if (rule(id)=='L'){
    gauche()
    setCouleurBrosse(colors(id))
    baisseBrosse()
    leveBrosse()
    avance()
  }
}