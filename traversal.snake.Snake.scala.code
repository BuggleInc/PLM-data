override def run() 
{
  baisseBrosse()
  while(!posFinale())
  	{
      avanceSerpent()
    }
}



def avanceSerpent()
{
  if (estFaceMur())
  	{
      if (getDirection()==Direction.EST)
  			{
          gauche()
          avance()
          gauche()
        }
      else if (getDirection()==Direction.OUEST)
      	{
          droite()
          avance()
          droite()
        }
    }
  else
  	{
      avance()
    }
}



def posFinale():Boolean=
{
  var murNord=false
  do (
  if (getDirection()==Direction.EST)
  			{
      		gauche()
      		murNord=estFaceMur()
      		droite()
    		}
	  	else if (getDirection()==Direction.OUEST)
  			{
    	  	droite()
      		murNord=estFaceMur()
      		gauche()
    		})
  while(estFaceMur)
    
  return (murNord&&estFaceMur())
}

