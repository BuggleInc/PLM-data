def tree(steps:Int, length:Double, angle:Double, shrink:Double){
	
	baisseCrayon
	current(steps)
	avance(length)

	if (steps!=1) {
		droite(angle)
		tree(steps-1, length*shrink, angle, shrink)
	}
	else {
		for (i<- 1 to 2) {
			leveCrayon
			recule(length)
			gauche(2*angle)
			tree(steps, length, angle, shrink)
			leveCrayon
			recule(length)
			
			
		
	}
	}
}
	
	
	
	



