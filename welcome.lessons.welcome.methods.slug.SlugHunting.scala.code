def hunt() {
  var capture:Boolean = false
  while (!capture) {
  	while (isFacingTrail()) {
    	avance()
      baisseBrosse()
      leveBrosse()
 	 	}
    gauche()
    if (estSurBiscuit()) {
      capture = true
    }
	prendBiscuit()
	}
}

def isFacingTrail():Boolean = {
  if (!estFaceMur) {
  	avance()
  	var couleurCase = getCouleurSol()
  	recule()
  	return couleurCase == Color.green
  } else {return false}
}