def pentaKoch(levels:Int, length:Double) {
  
  if(levels==0){
    avance(length)
  }else{
    pentaKoch(levels-1,length/3.0)
    gauche(180-360/5)
    pentaKoch(levels-1,length/3.0)
    droite(360/5)
    pentaKoch(levels-1,length/3.0)
    droite(360/5)
    pentaKoch(levels-1,length/3.0)
    droite(360/5)
    pentaKoch(levels-1,length/3.0)
    gauche(180-360/5)
    pentaKoch(levels-1,length/3.0)
    
  }
  
}