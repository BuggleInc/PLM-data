void polygonFractal (int levels, int sides, double length, double shrink) {
	if (levels == 0) {
		//forward(length);
		return;
	}
	for (int i = 0; i < sides; i++) {
	forward(length);
	polygonFractal(levels-1, sides, length*shrink, shrink);
	if (levels % 2 != 0) {
		left(360 / sides);	
	} else {
		right(360 / sides);
	}
	}
	if (levels % 2 != 0) {
		right(360 / sides * 2);
	} else {
		left(360 / sides * 2);
	}
}