override def run()
{
  var nbBases = getNombreBases();
  var nbPos = getNombrePositions();
  var posMaxBuggle = 0;
  var maxDist = 0;
  var currBase = 0;
  
  while(!estTrie)
  {
    currBase = (getTrouBase()+1)%nbBases;
    posMaxBuggle = 0;
    maxDist = 0;

    for (i <- 1 to nbPos)
    {
      if (getCouleurJoueur(currBase, i)-i > maxDist)
      {
        maxDist = getCouleurJoueur(currBase, i)-i;
        posMaxBuggle = i;
      }
    }
    
  	deplace(currBase, posMaxBuggle);
  }
}