def island(num:Array[Int]): Int = {
  var taille = num.length;
  var position = 0;
  var niveaux = 0;
  var memoire = num(0);
  do { 
    if (num(position)==1 && memoire==0){memoire=1;niveaux=niveaux+1}
    else {
      if (num(position)==2 && memoire==1){memoire=2;niveaux=niveaux+1}
    }
  position = position + 1
  } while (!(position==taille))
}
  