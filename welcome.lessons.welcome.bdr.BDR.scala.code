def dance(test:String):Unit= {
  test match {
    case "R" => droite(); avance
    case "L" =>gauche();avance(); dance(litMessage)
    case "I"=>retourne();dance(litMessage)
    case "A"=>avance();dance(litMessage)
    case "B"=>avance(2);dance(litMessage)
    case "C"=>avance(3);dance(litMessage)
 
    case "Z"=>recule(1);dance(litMessage)
    case "Y"=>recule(2);dance(litMessage)
    case "X"=>recule(3);dance(litMessage)

    case _ =>
      
}
}

dance(litMessage)