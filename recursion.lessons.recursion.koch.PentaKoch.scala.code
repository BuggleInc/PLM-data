def pentaKoch(levels:Int, length:Double) {
	if (levels!=0) {
		pentaKoch(levels-1, length*0.4);
		gauche(180-360/5);
		pentaKoch(levels-1, length*0.4);
		droite(360/5);
		pentaKoch(levels-1, length*0.4);
		droite(360/5);
		pentaKoch(levels-1, length*0.4);
		droite(360/5);
		pentaKoch(levels-1, length*0.4);
		gauche(180-360/5);
		pentaKoch(levels-1, length*0.4);
	}
	else {
		avance(length);
	}
}
