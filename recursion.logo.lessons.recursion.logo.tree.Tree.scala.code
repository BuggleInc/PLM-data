def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  avance(length)
  if (steps==0) {
    avance(length)
    recule(length)
    gauche(angle)
    avance(length)
    recule(length)
    return
   }
  else {
    avance(length)
    tree(steps-1,length*shrink,angle,shrink)
    recule(length)
    tree(steps-1,length*shrink,angle,shrink)
  }
}