def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
if (levels == 1) {
	for (k<-1 to sides)	{	
				avance(length)
				droite(360.0/sides)
				}}

else{

					for (l<-1 to sides)	{
				avance(length)	
				droite(360/sides)
				gauche(180)
				polygonFractal(levels-1,sides,length*shrink,shrink)
				gauche(180.0)
				
}}
	
}
