  if (levels!=0) {
    hexaKoch(levels-1,length*0.4)
    gauche(108);
    hexaKoch(levels-1,length*0.4);
    droite(72);
    hexaKoch(levels-1,length*0.4);
    droite(72);
    hexaKoch(levels-1,length*0.4);
    droite(72);
    hexaKoch(levels-1,length*0.4);
    gauche(108);
    hexaKoch(levels-1,length*0.4)
    } else {
      avance(length)
    }
}
