public void tree(int steps, double length, double angle, double shrink)    {
	current(step);
	forward(length);
	right(angle);
	subtree();
	//tree(steps - 1, length * shrink, angle, shrink * shrink);
	left(angle);
	left(angle);
	subtree();
	//tree(steps - 1, length * shrink, angle, shrink * shrink);
	right(angle);
	backward(length);
}