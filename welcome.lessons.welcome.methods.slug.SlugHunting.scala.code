def hunt() {
  while(!estSurBiscuit()){
    baisseBrosse()
    leveBrosse()
    if(isFacingTrail()){avance()}
    else{droite()}
  }
  baisseBrosse()
  leveBrosse()
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  if(estFaceMur()){return false}
  else{
    avance()
    if(getCouleurSol() == Color.green){
      recule()
      return true
    } 
    else{
      recule()
      return false
    }
  }
}
