def sierpinski(level:Int, length:Double) {
  for(i<-0 to 2) {
		motif(level,length)
  	droite(120)
  }
}

def motif(level:Int, length:Double) {
    if (level == 0) {
    avance(length)
  	}
  	else{
  	  motif(level-1,length/2)
 		  droite(120)
    	motif(level-1,length/2)
    	droite(120)
    	motif(level-1,length/2)
    	droite(120)
    	motif(level-1,length)
  }
}
