def extrema(nums:Array[Int]): Int = {
  var max = 0
  var min = 0
  var indmax = 0
  var indmin = 0
  max = nums(indmax)
  min = nums(indmin)
  
  for(i<-1 to nums.length-1)
  {
    if (nums(i)>max)
    {
      max = nums(i)
    	indmax = i
    }
    if (nums(i)<min)
    {
      min = nums(i)
    	indmin = i
    }
  }
  return max - min
}
