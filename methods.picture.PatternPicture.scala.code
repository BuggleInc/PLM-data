override def run() {
  ligne()
  for(j <- 1 to 4){
    avance()
  }
  gauche()
  for(j <- 1 to 4){
    avance()
  }
  ligne()
}

def marquer(c:Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}

def bord(c1:Color,c2:Color){
  avance()
  marquer(c1)
  avance()
  marquer(c2)
  avance()
  gauche()
}

def carre(){
  bord(Color.RED,Color.BLUE)
  bord(Color.BLUE,Color.GREEN)
  bord(Color.GREEN,Color.YELLOW)
  bord(Color.YELLOW,Color.RED)
}

def ligne(){
  carre()
  for(i <- 1 to 4){
    avance()
  }
  carre()
}