var mem = 0
var pos1 = 0
var pos2 = 0
override def run() {
  while(!estTrie) {
    mem=getTrouBase()+1
    while (mem>getNombreBases()-1) {
      mem=mem-getNombreBases()-1
    }
    pos1 = abs(getCouleurJoueur(mem,0)-mem)
    pos2 = abs(getCouleurJoueur(mem,1)-mem)
    if (pos1 < pos2) {
      deplace(mem,1)
    } else {
      deplace(mem,0)
    }
  }
}

def abs(i:Int):Int={
  if (i>=0) {
    return i
  } else {
    return -i
  }
}