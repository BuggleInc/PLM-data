void crab(int levels, double length) {
	if (levels == 0) {
		forward(length);
	} else {
		crab (levels - 1, length * Math.sqrt(2));
		left (45);
		crab (levels - 1, length * Math.sqrt(2));
		right (90);
		crab (levels - 1, length * Math.sqrt(2));
		left (45);
		crab(levels - 1, length * Math.sqrt(2));
	}
}
