def extrema(nums:Array[Int]): Int = {
	
	var p:Int= 0
	var q:Int= 0
	p= max(nums(0),nums(1));
	q= min(nums(0),nums(1));
	for ( i<-2 to nums.length -1 ){
		p = max(p,nums(i))
		q = min(p,nums(i))
	}
	return p-q ;
}






def max (a:Int , b:Int): Int = {
	return   (  (a + b + Math.abs(b - a))/2);
}


def min (a:Int , b:Int): Int = {
	return   (  (a + b - Math.abs(b - a))/2);
}
