override def run() {
  var cpt:Int = 0
  while (!estSurFin) {
    ecritMessage(cpt)
    parcours()
    cpt = cpt +1
  }
  ecritMessage(cpt)
}

def estSurFin():Boolean = {
  if ((getMondeHauteur()-1 == getY)&&(getMondeLargeur-1 == getX)){
    return true
  } else {
    return false
  }
}

def parcours():Unit = {
  var sensPositif:Boolean = true
  if (sensPositif){
    if (getX() == getMondeLargeur()-1){
      sensPositif = !sensPositif
      setPos(getX, getY +1)
    } else {
      setPos(getX +1, getY)
    }
  } else {
    if (getX() == 0){
      sensPositif = !sensPositif
      setPos(getX, getY +1)
    } else {
      setPos(getX -1, getY)
    }
  }
}