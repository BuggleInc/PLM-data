override def run() {
  var T = new Array[Color](getMondeHauteur())
  for (i <- 0 to T.length-1){
    T(i) = getCouleurSol()
    avance()
  }
  for (L <- 0 to getMondeLargeur()-2) {
    //Positionnement
    gauche()
    avance()
    droite()
    avance()
    for (h <- 0 to getMondeHauteur-1) {
      marquer( T(h) )
      avance()
    }
  }

}

def marquer(c : Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}
