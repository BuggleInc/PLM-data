def step(rule:Array[Char], colors:Array[Color]) {
	var groundColor:Color = getGroundColor()
  var rank:Int = 0
  
  for (i <- 0 to colors.length -1) {
    if (colors(i) == groundColor) {
    	rank = i
    }
  }
  
  mark(colors((rank+1)%colors.length))
  
  if (rule(rank) == 'R')     
  	right()
       
  if (rule(rank) == 'L')     
  	left()
  
  forward()
}


def mark(c:Color) {
  setBrushColor(c);
  brushDown();
  brushUp();
}
