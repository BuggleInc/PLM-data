def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if (levels < 0) {
		return;
	}
	avance(length);
	gauche(60);
	avance(length);
	droite(240);
	avance(length);
	gauche(120);
	avance(length);
	return snowSide(levels-1,length);
}
