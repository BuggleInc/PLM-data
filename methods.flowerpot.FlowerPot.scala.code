def growFlowers() {
  makeFlowers(Color.red)
  forward(3)
  for (i <- 1 to 3) {
    if (i==1) {
    makeFlowers(Color.cyan)
    } else if (i==2) {
      makeFlowers(Color.pink)
    } else if (i==3) {
      makeFlowers(Color.green)
    }
    right()
    right()
    forward(3)
  }
  setPos(3,4)
  makeFlowers(Color.orange)
  setPos(1,2)
}

def makeFlowers(c:Color) {
  setBrushColor(c)
  brushDown()
  forward()
  forward()
  backward()
  left()
  forward()
  backward(2)
  forward()
  setBrushColor(Color.yellow)
  right()
  brushDown()
  brushUp()
}