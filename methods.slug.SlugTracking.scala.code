var caseVerte = false

def isFacingTrail():Boolean = {
  setCouleurBrosse(Color.green :Color)
  leveBrosse()
  caseVerte=false
  if (estFaceMur()){
    return caseVerte
  } else {
    avance()
    if (getCouleurSol() == Color.green ){
      caseVerte = true
      baisseBrosse()
    }
  }
  return caseVerte
}