def isFacingTrail():Boolean = {
	var estVerte = false
  if (!estFaceMur()) {
  	avance()
  } 
  if (estFaceMur()) {
    estVerte = false
    gauche()
  }
  if (getCouleurSol() == Color.green) {
    estVerte = true
  } else {
    estVerte = false
  }
  if (!estFaceMur()) {
  	recule()
  }
  return estVerte
  }