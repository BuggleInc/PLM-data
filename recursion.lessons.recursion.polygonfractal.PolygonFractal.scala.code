def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {

if(levels==1){
	for(x<-1 to sides){
	avance(length)
	droite(360/sides)
}
	
}else{
		for(x<-1 to sides){
	avance(length)
	polygonFractal(levels-1, sides, length*shrink, shrink)
	if(levels%2==1){
		droite(360/sides)
	}else{gauche(360/sides)}
}
}
}

