def pentaKoch(levels:Int, length:Double) {
	if (levels == 0) {
		avance(length)
	}
	else {pentaKoch(levels-1,length / 2.)
		gauche(100.)
		pentaKoch(levels-1,length / 2.)
		droite(2. * 360. / 3.)
		pentaKoch(levels-1,length / 2.)
		droite(100.)
		pentaKoch(levels-1,length / 2.)
		droite(100.)
		pentaKoch(levels-1,length / 2.)
		gauche(2. * 360. / 3.)
		pentaKoch(levels-1,length / 2.)
	}
}
