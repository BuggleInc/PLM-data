def hunt() {
    forward()
    while (!isFacingTrail()){
      left()
    }
  	brushDown()
  	brushUp()
  	hunt()
}



def isFacingTrail():Boolean = {
  	if (isFacingWall()){
      return false
    }
    forward()
  	if (getGroundColor() == Color.green){
      backward()
      return true
    }
  	backward()
  	return false
}