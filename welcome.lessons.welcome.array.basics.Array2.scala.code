override def run() {
var a = getMondeHauteur
  var t = new Array[Color] (a)
  for (i<-0 to a-2) {
    t(i)=getCouleurSol()
    avance()
  }
  recule(a-1)
  var b = getMondeLargeur()
  for (x<-0 to b-1) {
    gauche()
    avance()
    droite()
    val decalage = litMessage().toInt
    for (i<-0 to a-2) {
      setCouleurBrosse(t((i+decalage)%a))
      avance()
      baisseBrosse()
      leveBrosse()
      
    }
    recule(a-1)
  }
}