def step() {
var couleur:Color=Color.white
for (k <- 1 to 10000) {
	couleur=getCouleurSol()
	if (couleur==Color.white){
		setCouleurBrosse(Color.black)
		baisseBrosse()
		leveBrosse()
		droite()
		avance()
	} else if (couleur==Color.black) {
		setCouleurBrosse(Color.white)
		baisseBrosse()
		leveBrosse()
		gauche()
		avance()
	}	
}
}
