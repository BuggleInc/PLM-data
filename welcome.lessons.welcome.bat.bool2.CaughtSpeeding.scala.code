def caughtSpeeding(speed:Int, isBirthday:Boolean):Int = {
var rep=0;
if(speed <= 60 & isBirthday == false)
{
	return rep; 
}
if(speed > 60 & speed < 80 & isBirthday == false)
{
	rep = 1;
	return rep; 
}
if(speed > 80 & isBirthday == false)
{
	rep = 2;
	return rep; 
}
if(speed <= 65 & isBirthday == true)
{
	return rep; 
}
if(speed > 65 & isBirthday == true)
{
	rep = 1;
	return rep; 
}
if(speed > 85 & isBirthday == true)
{
	rep = 2;
	return rep; 
}
return rep;
}