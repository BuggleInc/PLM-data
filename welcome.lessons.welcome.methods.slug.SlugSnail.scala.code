def hunt(c:Color) {
  while (estSurBiscuit() == false) {
    while (isFacingTrail(c) == false) {
      gauche()
    }
    baisseBrosse()
    leveBrosse()
    avance()
  }
  baisseBrosse()
  leveBrosse()
  prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur) {
    return false
  } else {
    avance()
    if (getCouleurSol() == c) {
      recule()
      return true
    } else {
      recule()
      return false
    }
  }
}