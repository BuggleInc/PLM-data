override def run() {
  while (!positionFinale()){
    baisseBrosse()
    leveBrosse()
    avance()
  }
}



def finDeLigne(){
  if (estFaceMur){
    gauche()
    avance()
    gauche()
  }
}


def positionFinale():Boolean={
  if (estFaceMur){
    if (getDirection()==Direction.EST){
      gauche()
      if (estFaceMur){
        droite()
        return true
      }else{
        droite()
        finDeLigne()
        return false
      }
    }else if (getDirection()==Direction.OUEST){
      droite()
      if (estFaceMur){
        gauche()
        return true
      }else{
        gauche()
        finDeLigne()
        return false
      }
    }else{
      return false
    }
  }
  return false
}