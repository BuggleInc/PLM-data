def pentaKoch(levels:Int, length:Double) {
    if ( levels == 0 ){
    avance(length);
  } else {
    pentaKoch(levels-1,length*0.4);
    gauche(105);
    pentaKoch(levels-1,length*0.4);
    droite(105);
    pentaKoch(levels-1,length*0.4);
    droite(105);
    pentaKoch(levels-1,length*0.4);
    droite(105);
    pentaKoch(levels-1,length*0.4);
    gauche(105);
    pentaKoch(levels-1,length*0.4);
  }
}