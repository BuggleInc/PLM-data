var test:Boolean = true

def isFacingTrail():Boolean = {
  test = false
  if (!(estFaceMur())
  {
    return false
  }
  else
  {
    while (test)
    {
      avance()
      if (getCouleurSol()==Color.green)
      {
        test = false
        recule()
      }
      else
      {
        recule()
        gauche()
      }
      return true
    }
  }
}