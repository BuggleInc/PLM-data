void growFlowers(){
	shiftRight();
}//end run

void shiftRight(){
int steps = 4;

	//go right 4 steps
	for(int i = 0; i < steps; i++){
		forward();
	}
}//end shiftRight

void shiftUp(){
int steps = 4;

	left();
	//go up 4 steps
	for(int i = 0; i < steps; i++){
		forward();
	}

	right();
}//end shiftUp

void shiftLeft(){
int steps = 4;
	//go left 4 steps
	back();
	
	for(int i = 0; i < steps; i++){
		forward();
	}

	right();
}//end shiftLeft
