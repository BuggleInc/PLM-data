def sierpinski(levels:Int, length:Double) {
    if (levels==0){
    avance(length)
    right(360/3)
    avance(length)
    right(360/3)
    avance(length)
    right(360/3)
  }
  else {
    
    avance(length/2)
    right(360/3)
    sierpinski(levels-1, length/2)
    left(360/3)
    avance(length/2)
    sierpinski(levels-1, length/2)
    
  }
}