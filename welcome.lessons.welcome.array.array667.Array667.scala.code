def array667(nums:Array[Int]): Int = {
  val n = nums.length
  var vu6 = false
  var vu66 = false
  var nb66 = 0
  var nb667 = 0
  for (i <- 0 to n-1) {
    if ((nums(i) == 6) && vu6) {
      nb66 = nb66 + 1
      vu66 = true}
    else if ((nums(i) == 6) && (vu6 == false)) {
      vu6 = true}
    else if ((nums(i)==7) && (vu66 == true)) {
      nb667 = nb667 + 1
      vu6 = false
      vu66 = false}
    else {
      vu6 = false
      vu66 = false
    }
  }
  return (nb66 + nb667)
}
    