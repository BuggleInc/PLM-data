def island(num:Array[Int]): Int = {
	var niveau = 0
	var plat = 0
	var result = 0
	var max = maxValue(num)
	for (j<-1 to max){
		for (i<-1 to num.length-1){
			if(plat == 0 && num(i)==j){
				plat = 1			
			}
			if(plat == 1 && num(i)==j){
				plat = 0
				result = result+1
			}
		}
	}
return result
	
}

def maxValue(nums:Array[Int]): Int = {
	var max=0;
	for (i<-0 to nums.length-1){
		max=Math.max(max,nums(i))
	}
	return max
}
