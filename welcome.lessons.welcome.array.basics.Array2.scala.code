override def run() {
var x = getMondeHauteur()
var y = getMondeLargeur()
var T = new Array[Color](x)
	T(1)=getCouleurSol()
	for (i <- 3 to x+1)
	 {avance()
	 	T(i-1) = getCouleurSol()}
	 recule(x-1)
	 gauche();avance();droite()
	 for (k <- 1 to y -1)
	 	{val decalage = litMessage().toInt
	 	 for (z <- 1 to x-1)
	 	   {setCouleurBrosse(T((z+decalage)% T.length))
	 	   	baisseBrosse();leveBrosse()
	 	   	avance()
	 	   	}
	 	recule(y-1);gauche();avance();droite()}	 
}
