def hunt(c:Color) {
  while (!estSurBiscuit()) {
    if (isFacingTrail(c) == true) {
      avance()
      baisseBrosse()
      leveBrosse()
    } else {
      droite()
    }
  }
  prendBiscuit()
}


def isFacingTrail(c : Color):Boolean = {
  if (!estFaceMur()) {
    avance()
    if (getCouleurSol() == c) {
      recule()
      return true
    } else {
      recule()
      return false
    }
  } else {
    return false
  }
}
