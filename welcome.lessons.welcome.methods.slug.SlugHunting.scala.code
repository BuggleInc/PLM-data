def hunt() {
  while (!estSurBiscuit()) {
    if (isFacingTrail() == true) {
      avance()
      baisseBrosse()
      leveBrosse()
    } else {
      droite()
    }
  }
  prendBiscuit()
}


def isFacingTrail():Boolean = {
  if (!estFaceMur()) {
    avance()
    if (getCouleurSol() == Color.green) {
      recule()
      return true
    } else {
      recule()
      return false
    }
  } else {
    return false
  }
}