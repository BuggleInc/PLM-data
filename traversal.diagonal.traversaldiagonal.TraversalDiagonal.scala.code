def makeMoving () = {
  var (mC, mL) = (getWorldWidth(), getWorldHeight());
  var cpt = 0;
  for (i <- 0 to mC-1) {
    for (j <- 0 to i) {
      setPos (j, i-j);
      writeMessage(cpt);
      cpt += 1;
    }
  }
  for (i <- 1 to mC-1) {
    for (j <- i to mC-1) {
      setPos (j, mC-j+i-1);
      writeMessage(cpt);
      cpt += 1;
    }
  }
  
}
override def run() {
  makeMoving();
}