def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  current (steps)
  avance (length)
  if (steps > 1) {
    droite (angle)
    tree (steps - 1, length * shrink, angle, shrink)
    gauche (angle * 2)
    tree (steps - 1, length * shrink, angle, shrink)
    droite (angle)
  }
  current (steps)   
  recule (length)
}