public void run() {
int baggleCount = 0;
int stepCount = 0;

	do{
		forward();
		
		if(isOverBaggle()){
			baggleCount++;
		}
		
		stepCount++;

		if(crossing()){
			if(baggleCount >= 3){
				left();
			}else{
				right();
			}
			baggleCount = 0;
			stepCount = 0;
		}

		if(exitReached()){
			forward();
		}
		
	}while(!exitReached()); 
}
