
public void run() {
	int wh = getWorldHeight();
	Color[] c;
	c = new Color[wh];
	for(int x=0; x<wh; x++) {
		c[x] = getGroundColor();
		forward();
	}
	for(int i=1; i<wh; i++) {
		left();
		forward();
		right();
		forward();
		for(int j=0; j<wh; j++) {
			paint(c[j]);
			forward();
		}
	}
}
void paint(Color d) {
	setBrushColor(d);
	brushDown();
	brushUp();
}
