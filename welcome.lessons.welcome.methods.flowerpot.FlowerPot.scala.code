def fleur(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	avance();avance()
	recule()
	gauche()
	avance()
	recule();recule()
	avance()
	setCouleurBrosse(Color.YELLOW)
	leveBrosse()
	droite()
	recule()
	}

def growFlowers() {
	fleur(Color.RED)
	for (i<-1 to 4) avance()
	fleur(Color.CYAN)
	droite()
	avance();avance()
	gauche()
	recule();recule()
	fleur(Color.ORANGE)
	droite()
	avance();avance()
	gauche()
	recule();recule()
	fleur(Color.PINK)
	for (i<-1 to 4) recule()
	fleur(Color.GREEN)
}
