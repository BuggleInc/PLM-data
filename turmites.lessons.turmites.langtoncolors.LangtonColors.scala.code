def step(rule:Array[Char], colors:Array[Color]) {
  val c=getCouleurSol()
  val ci=posi(c,colors)
  if (rule(ci)=='R') {droite()} else {left()}
  if (ci==colors.length-1) {colorie(colors(0))} else {colorie (colors(ci+1))}
  avance()
}

def colorie (c:Color):Unit={
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}

def posi(c:Color,tab:Array[Color]):Int={
  for (i<-0 to tab.length-1){
    if (tab(i)==c){return i}
  }
  return 0
}