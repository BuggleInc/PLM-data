def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
	var a = 360/sides;
	if (levels == 1) {
		for(i<-1 to sides) {
			avance(length);
			droite(a);
		}
	}
	else{
		for(i<-1 to sides) {
			avance(length);
			gauche(180-a);
			polygonFractal(levels-1, sides, shrink*length, shrink);
			
		}
		
		
		
		
	}
}
