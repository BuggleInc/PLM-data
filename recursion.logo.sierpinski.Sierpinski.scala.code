def sierpinski(level:Int, length:Double) {
  if (level==0){
   avance(length)
   droite(120)
   avance(length)
	 droite(120)
   avance(length)
   droite(120)//dessine le triangle et revient a la position initiale
   avance(2*length)
  }
  else {
   
    
   sierpinski(level-1,length/2)
    avance(length)
    droite(120)
   sierpinski(level-1,length/2)
    avance(length)
    droite(120)
   sierpinski(level-1,length/2)
    avance(length)
    droite(120)
    
  }
}