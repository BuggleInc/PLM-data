48         new SimpleBuggle(myWorld, "Break Dancer", 0,0,Direction.WEST, Color.magenta, Color.lightGray); 
49         minus1(0,0); 
50         left(1,0); 
51         plus2(1,1); 
52         minus3(0,3); 
53         minus1(3,3); 
54          
55         /* third one */ 
56         new SimpleBuggle(myWorld, "Moon Walker", 6,0, Direction.WEST, Color.pink,Color.lightGray); 
57         plus1(6,0); 
58         left(5,0); 
59         plus2(5,1); 
60         back(5,3); 
61         plus2(5,2); 
62         plus1(4,0); 
