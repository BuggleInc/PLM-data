def hunt() {
  while(!estSurBiscuit){
    if (isFacingTrail()){
      recule()
      avance()
      baisseBrosse()
      leveBrosse()
    }else{
      recule()
      gauche()
    }
  }
  baisseBrosse()
  leveBrosse()
  prendBiscuit()
}


def isFacingTrail():Boolean = {
  var go = true
  if (!estFaceMur()){
    avance()
    if (getCouleurSol()==Color.green){
      go=true

    }else{
      go=false
    }
    recule()
  }else{
    go=false
  }
  return go
}