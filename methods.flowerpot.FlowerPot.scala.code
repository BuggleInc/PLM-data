  leveBrosse()
  for (k<-1 to 2){
    avance()
  }
  recule()
  gauche()
  avance()
  for (l<-1 to 2){
    recule()
  }
  avance()
  setCouleurBrosse(Color.YELLOW)
  baisseBrosse()
  leveBrosse()
  droite()
}