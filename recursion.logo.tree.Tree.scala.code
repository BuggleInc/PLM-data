def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if(steps!=0){
   baisseCrayon();
   avancer(length);
   gauche(angle);
   avancer(length);
   leveCrayon();
   reculer(length);
   baisseCrayon();
   droite(2*angle);
   avancer(length);
   leveCrayon();
   tree(steps-1,length*shrink,angle,shrink) 
  }
}