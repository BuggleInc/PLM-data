def hunt(c:Color) {
  avance()
  baisseBrosse()
  leveBrosse()
  while(!estSurBiscuit()){
    if (isFacingTrail()){
    avance()
    }
    else {
      gauche()
      if (isFacingTrail()){
        avance()
      }
      else {
        droite();droite();avance()
      }
    }
  }
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  var k=false
  var c=getCouleurSol()
  if (!estFaceMur()){
    avance()
    if (getCouleurSol()==c){
      k=true
    }
    else
    recule()
  }
  return k 
}
