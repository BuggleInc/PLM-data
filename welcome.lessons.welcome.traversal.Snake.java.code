public void run() {
	snakeBuggle();
}//end run

void snakeBuggle(){
int steps = 7;

	//loop rows
//	for(int i = 0; i < steps; i++){
do{
		//paint cells
		for(int j = 1; j < steps; j++){
			setBrushColor(Color.RED);
			brushDown();
			forward();
		}

		if(!finalPos()){
			if(isFacingWall() && getDirection() == Direction.EAST){
				left();
				forward();
				left();
			}else if(isFacingWall() && getDirection() == Direction.WEST){
				right();
				forward();
				right();
			}
		}	
	}while(!finalPos());//end for	
}//end snakeBuggle

public boolean finalPos(){
int spins = 4;
boolean d = false;

	for(int i = 0; i < spins; i++){
		left();
		//check for north facing wall
		if(isFacingWall() && getDirection() == Direction.NORTH){
			d = true;
		}
	}
	return(isFacingWall() && d);
}//end finalpos
