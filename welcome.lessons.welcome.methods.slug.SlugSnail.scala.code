def hunt(c:Color) {
  while (!estSurBiscuit){
    if (isFacingTrail(c)){
      avance()
      baisseBrosse()
      leveBrosse
    } 
    else{
      gauche()
      if (isFacingTrail(c)){
        avance()
        baisseBrosse()
        leveBrosse()
      } 
      else retourne() 
    } 
  }
  prendBiscuit() 
}

 def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur())
  	return false
 	else {
  	avance()
  	if (getCouleurSol==c){
    	recule()
      return true
  	}
 		else{
    	recule()
    	return false
   	}
 	}
}
