public void run() {
	brushDown();
	boolean right = true;
	boolean atTop = false;
	boolean done = false;

	while (!done) {
		forward();
		if (isFacingWall())
			if (atTop)
				break;
			if (right) {
				left();
				forward();
				if (isFacingWall())
					atTop = true;
				left();
				right=false;		
			}
			else {
				right();
				forward();
				if (isFacingWall())
					atTop = true;
				right();
				right=true;
			}
	}
}
