def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {

	if (levels == 1)
	{
		for (i <- 1 to sides)
		{
			avance(length);
			gauche((3-sides)*180/sides);
		}
	}
	else
	{
		for (i <- 1 to sides)
		{
			avance(length);
			gauche((sides-2)*180/sides);
			polygonFractal(levels - 1, sides, length * shrink, shrink);
			droite((3-sides)*180/sides);
		}
	}
}
