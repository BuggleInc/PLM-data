def isWallOnTheLeft () : Boolean = {
  left();
  var answer = isFacingWall();
  // back to the initial position :
  right();
  return answer;

}

def makeMoving() {
  while (!isWallOnTheLeft()) {
    left();
  }
  if (!isFacingWall()) {
    forward();
  } else { right(); }
}

override def run() {
	while (!isOverBaggle()) {
    makeMoving();
  }
  pickupBaggle();
}