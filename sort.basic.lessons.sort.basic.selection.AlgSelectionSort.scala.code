def selectionSort() {

	var indice = 0
	
	for(i<-0 to getNombreValeurs()-1)
	{
		indice=i
		//On recherche la plus petite valeur de la partie non triée du tableau
		for(j<-i+1 to getNombreValeurs()-1)
		{
			if(plusPetit(j,indice))
			{
				indice=j
			}
		}
		
		//On échange la valeur de la case i courante avec la plus petite valeur trouvée si nécessaire
		if(indice!=i)
		{
			echange(i,indice)
		}
	}
}
