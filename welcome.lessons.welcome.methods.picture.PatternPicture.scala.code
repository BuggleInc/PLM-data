override def run() {
  for(i<-1 to 2)
  {
    dessinMotif()
    placementHorizontal()
    dessinMotif()
    placementHorizontal()
    placementVertical()
  }
}

def dessinDiag(c:Color)
{
  avance()
  peindre(c)
  recule()
  gauche()
  avance()
  peindre(c)
  recule()
  droite()
}

def placementQuartMotif()
{
  avance(3)
  gauche()
}

def peindre(c:Color)
{
  if (getCouleurBrosse != c)
  {
    setCouleurBrosse(c)
  }
  baisseBrosse()
  leveBrosse()
}

def placementHorizontal()
{
  avance(4)
}

def placementVertical()
{
  gauche()
  placementHorizontal()
  droite()
}

def dessinMotif()
{
  dessinDiag(Color.red)
  dessinDiag(Color.blue)
  dessinDiag(Color.green)
  dessinDiag(Color.yellow)
}