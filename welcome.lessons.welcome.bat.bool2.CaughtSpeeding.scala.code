def caughtSpeeding(speed:Int, isBirthday:Boolean):Int = {
	var rep = 0
	if (isBirthday) {
		if (speed >= 86) {
			rep = 2
		}
		else {
			if ( speed <= 66 ) {
			rep = 0 
		}
		else {
			rep = 1
		}
		}
	}
	else {
		if (speed >= 81) {
			rep = 2
			}
			else {
				if ( speed <= 61 ) {
				rep = 0 
			}
			else {
				rep = 1
			}
		}
	}
	return rep
}
