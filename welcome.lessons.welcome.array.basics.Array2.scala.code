override def run() {
	val decalage() = litMessage().toInt
	var T = new Array[Color](getMondeHauteur)
	for (i <- 0 to T.length - 2) {
		T(i)=getCouleurSol()
		avance()
	}
	for(i<-2 to getMondeLargeur()) {
		recule (getMondeHauteur())
		gauche()
		avance()
		droite()
		avance()
		for (j <- decalage to getMondeHauteur() - 1) {
			setCouleurBrosse(T(j))
			baisseBrosse()
			leveBrosse()
			avance()
		}
	}
}
