def marquer (c:Color) = {setCouleurBrosse(c);baisseBrosse();leveBrosse()}

def fleur (c:Color) = {marquer(c);avance();marquer(Color.YELLOW);gauche();avance();marquer(c);recule(2);marquer(c);avance();droite();marquer(c)
  
}


def growFlowers() {
  fleur(Color.RED);avance(2);fleur(Color.CYAN);droite();avance(2);gauche();recule(4);fleur(Color.ORANGE);droite();avance(2);gauche();recule(4);fleur(Color.PINK);avance(2);fleur(Color.GREEN);recule(6)
}