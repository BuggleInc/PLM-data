def hunt() {

while(!estSurBiscuit())
{
	while(isFacingTrail())
	{
		avance();
		baisseBrosse();
		leveBrosse();
	}

	gauche();
	if (!isFacingTrail() && estSurBiscuit())
		retourne();
}

droite();
prendBiscuit();

}

def isFacingTrail():Boolean = {

if (!estFaceMur())
{
	avance();
	if (getCouleurSol() == Color.green)
	{
		recule();
		return true;
	}
	else
	{
		recule();
		return false;
	}
}
else
	return false;

} 
