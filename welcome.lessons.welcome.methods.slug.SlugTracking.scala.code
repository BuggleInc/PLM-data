var test = false

def isFacingTrail():Boolean = {
  test = false
  if (estFaceMur())
  {
    return false
  }
  else
  {
    while (!(test))
    {
      avance()
      if (getCouleurSol()==Color.green)
      {
        test = true
        recule()
      }
      else
      {
        recule()
        gauche()
      }
    }
  }
}