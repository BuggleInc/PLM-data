def island(num:Array[Int]): Int = {
  var compt:Int=0
  var n :Int = 0
  for(i<- 1 to num.length){
    if(num(i)>0){
      compt = compt + 1
      if(num(i)>1){
        compt = compt + 1
        if(num(i)>2){
          compt = compt + 1
          if(num(i)>3){
            compt=compt+1
          }
        }
      }
    }
    n = n +1
  }
  return compt
}