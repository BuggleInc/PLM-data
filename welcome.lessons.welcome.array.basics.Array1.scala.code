override def run() {
	var T=new Array[Color](getMondeHauteur());	
	for(i<-0 to T.length-1){
		T(i)=getCouleurSol()
		avance()	
	}
	faireMotif(T)
}	
	
def faireMotif(T:Array[Color]){
	var x=getMondeLargeur()-1
	for(i<-1 to x){
		var nbPas=getMondeHauteur()
		for(i<-0 to nbPas-1){
			recule()
		}
		gauche()
		avance()
		droite()
		avance()
		faireColonne(T)
	}
}
	
def faireColonne(T:Array[Color]){
	for(i<-0 to getMondeHauteur-1){
		setCouleurBrosse(T(i))
		baisseBrosse()
		leveBrosse()
		avance()
	}
}