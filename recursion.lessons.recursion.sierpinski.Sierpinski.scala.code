def sierpinski(level:Int, length:Double) {
	if(level==0){
		avance(length);
		droite(120);
		avance(length);
		droite(120);
		avance(length);
		droite(120);
	}else{
		avance(length);
		droite(120);
		avance(length);
		droite(120);
		avance(length);
		droite(120);
		avance(length/2);
		droite(60);
		
	}
}
