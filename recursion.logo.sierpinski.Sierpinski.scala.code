def sierpinski(levels:Int, length:Double) {
  if (levels==0){
		avance(length)
    right(360/3)
    avance(length)
    right(360/3)
    avance(length)
    right(360/3)
  }
  else {
    sierpinski(levels-1, length/2)
    avance(length)
    right(360/3)
    sierpinski(levels-1, length/2)
    avance(length)
    right(360/3)
    sierpinski(levels-1, length/2)
    avance(length)
    right(360/3)
    
  }
}