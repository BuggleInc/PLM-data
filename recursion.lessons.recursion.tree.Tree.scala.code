def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

	current(steps);

	avance(length);
	
	droite(angle);

	if(steps !=1) {
		gauche(angle);
		tree(steps-1, length * shrink, angle, shrink);
	}
	
	gauche(angle);
	
	if(steps !=1)
		tree(steps-1, length * shrink, angle, shrink);

	
	
	leveCrayon();
	recule(length);
	baisseCrayon();
}
