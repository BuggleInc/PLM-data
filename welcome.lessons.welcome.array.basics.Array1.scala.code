override def run() {
  var T = new Array[Color](getMondeHauteur())
  for (i <- 0 to getMondeHauteur()-1){
    T(i) = getCouleurSol()
    avance()
  }

  for (h <- 1 to getMondeLargeur()){
    gauche()
    avance()
    droite()
    avance()
    peindre(T)
  }
}

def peindre(T: Array[Color]){
  for (j <- 0 to getMondeHauteur()-1){
    setCouleurBrosse(T(j))
    baisseBrosse()
    leveBrosse()
    avance()
  }
}
