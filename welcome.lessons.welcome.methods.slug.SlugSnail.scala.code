def hunt(c:Color) {
  while (!estSurBiscuit()) {
    if (isFacingTrail(c)) {
      baisseBrosse()
      avance()
      leveBrosse()
    } else {
      while (!isFacingTrail(c)) {
        gauche()
      }
    }
  }
  
  prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur())
  	return false
  
  // On avance d'une case
  avance()
  
  var result:Boolean = (getCouleurSol() == c)
  
  return result
}