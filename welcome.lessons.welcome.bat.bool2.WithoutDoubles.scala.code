def withoutDoubles(die1:Int, die2:Int, noDoubles:Boolean):Int = {
	if(noDoubles == false){
		return die1 + die2
	}else{
		(die1,die2) match{
			case (die1,die2) if ((die1 == die2) && (die1 == 6)) => return 1 + die2
			case (die1,die2) if ((die1 == die2) && (die2 == 6)) => return 1 + die1
			case (die1,die2) if (die1 == die2) => return die2 + die1
			case _ => return die1 + die2
		}
	}
}
