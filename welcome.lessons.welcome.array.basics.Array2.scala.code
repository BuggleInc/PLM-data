override def run() {
  var T=new Array[Color](getMondeHauteur())
  val decalage=litMessage().toInt
  T(0)=getCouleurSol()
  for (i<-1 to getMondeHauteur()-1) {
    avance;
    T(i)=getCouleurSol() 
  }
  recule(5);
  for (i<-1 to getMondeLargeur()) {
    gauche;
    avance;
    droite;
    for (i<-0 to getMondeHauteur()-1) {
      setCouleurBrosse(T((i+decalage)%getMondeHauteur()))
      baisseBrosse;
      leveBrosse
    }
  }
}

