def snowSquare (levels:Int, length:Double) {
    squareSide(levels, length);
    right(90);
    setColor(Color.blue);
    squareSide(levels, length);
    right(90);
    setColor(Color.orange);
    squareSide(levels, length);
    right(90);
    setColor(Color.magenta);
    squareSide(levels, length);
    right(90);
}
def squareSide(levels:Int, length:Double) {
if(levels == 0) {
		avance(length);
	}
	else {
		val lengths = length/3.0;
		snowSide(levels-1, lengths);
		gauche(90);
		snowSide(levels-1, lengths);
		droite(180);
		snowSide(levels-1, lengths);
		gauche(90);
		snowSide(levels-1, lengths);
	}
}
