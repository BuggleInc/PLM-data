def gnomeSort() {
  
  var positionGnome = 0
  val taille = getNombreValeurs()-1
  
  while (true) {
  
    (plusPetit(positionGnome,positionGnome+1),positionGnome) match {

      case (true,taille) => return
      case (true,_) => positionGnome = positionGnome + 2 
      case (false,0) => echange(positionGnome,positionGnome+1); positionGnome = positionGnome + 2;
      case (false,_) => echange(positionGnome,positionGnome+1); positionGnome = positionGnome - 1;

  	}
  
  }
  
}