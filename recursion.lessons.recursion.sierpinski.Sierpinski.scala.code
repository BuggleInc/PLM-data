def sierpinski(level:Int, length:Double) {
	if (level==0) {
		for (i <- 0 to 2) {
			avance(length)
			droite(120)
		}
		return
	}
	sierpinski(level-1, length/2)
	avance(length/2)
	sierpinski(level-1, length/2)
	droite(60)
	avance(length/2)
	droite(60)
	sierpinski(level-1, length/2)
	droite(60)
	avance(length/2)
	droite(60)
}
