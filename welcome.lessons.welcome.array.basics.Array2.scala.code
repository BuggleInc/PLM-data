override def run() {
  
  var C = new Array[Color](getMondeHauteur())
  var i = 0
  while(!estFaceMur())
  {
    C(i) = getCouleurSol()
    i=i+1
    avance()
  }
  
  for(i<-1 to getMondeLargeur()-1)
  {
    init()
    write(C)
  }
  
}

def paint() {
  baisseBrosse()
  leveBrosse()
}

def write(C:Array[Color]) = {
  val dec = litMessage(.toInt)
  setCouleurBrosse(C(dec)
  paint()
  for (i<-dec+1 to dec+getMondeLargeur())
  {
    avance()
    setCouleurBrosse(C(i%getMondeLargeur()))
    paint()
  }
}

def init() {
  retourne()
  while(!estFaceMur())
  {
    avance()
  }
  droite()
  avance()
  droite()
}