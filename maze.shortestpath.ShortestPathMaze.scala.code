def marquerAutour(x:Int,y:Int,indice:Int) {
  
  if (!aMurNord(x,y) && y>0) { setIndication(x,y-1,indice) }
  if (!aMurOuest(x,y) && x>0) { setIndication(x-1,y,indice) }
  if (y<getMondeHauteur-2) { if (!aMurNord(x,y+1)) { setIndication(x,y+1,indice) }}
  if (x<getMondeLargeur-2) { if (!aMurOuest(x+1,y)) { setIndication(x+1,y,indice) }}
}

