def dragon(order:Int, x:Double, y:Double, z:Double, t:Double) {
	if(order==1){
		setColor(Color.red);
		//setPos(x,y);
		allerVers(z,t);
	}else{
		var u = (x + z)/2 + (t - y)/2;
		var v = (y + t)/2 - (z - x)/2;
		dragon(order-1,x,y,u,v);
		dragonInverse(order-1,z,t,u,v);
	}
}

def dragonInverse(order:Int, x:Double, y:Double, z:Double, t:Double) {
		if(order==1){
		setColor(Color.blue);
		//setPos(x,y);
		allerVers(z,t);
	}else{
		var u = (x + z)/2 - (t - y)/2
 		var v = (y + t)/2 + (z - x)/2
		dragon(order-1,x,y,u,v);
		dragonInverse(order-1,z,t,u,v);
	}
}
