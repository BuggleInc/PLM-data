public void hunt() {
	while(!isOverBaggle()){
	if (isFacingTrail()){
		brushDown();
		forward();
		brushUp();
	}
	if (!isFacingTrail()) {
		right();
	}}
    pickupBaggle();
} 

boolean isFacingTrail() {
	boolean stillOnTrail = false;
	if (!isFacingWall()){
	forward();
	if (getGroundColor().equals(Color.green)) {
		stillOnTrail = true;
	}
	backward();}
    	return stillOnTrail;
}