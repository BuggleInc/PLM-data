def fillColumn(colors:Array[Color]){
  left(); forward(); right(); forward()
  brushDown()
  for(i <- 0 to getWorldHeight() - 1){
    forward()
    setBrushColor(colors(i))
  }
}

override def run() {
  var colors = new Array[Color] (getWorldHeight())
  for(i <- 0 to getWorldHeight() - 1){
    colors(i) = getGroundColor()
    forward()
  }
  backward()
  for(i <- 0 to getWorldHeight())
  	fillColumn(colors)
  setBrushColor(colors(colors.length - 1))
  brushUp()
  forward()
}