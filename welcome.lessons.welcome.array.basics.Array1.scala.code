override def run() {
  var longueur:Int=1
  var base:Color=getCouleurSol():Color
  avance()
  while (getCouleurSol() !=base) {
    avance()
    longueur=longueur+1}
  var T = new Array[Color](longueur)
  for (i<-0 to longueur-1) {    
    T(i)=getCouleurSol()
    avance()}
  recule()
  gauche()
  avance()
  for (j <-1 to 6) {
    avance()
    baisseBrosse()
    for (k <- 0 to 5) {
      setCouleurBrosse(T(k))
      avance()}
    gauche()
    avance()
    droite()
    avance()
  } 
}