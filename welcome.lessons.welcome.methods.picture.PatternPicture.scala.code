override def run(){
  droite()
  recule(2)
  for (i<-1 to 2){
    faireMotif
  }
}

def faireMotif(){
  faireDiag(Color.RED)
  faireDiag(Color.BLUE)
  faireDiag(Color.GREEN)
  faireDiag(Color.YELLOW)
  gauche()
  avance(4)
  droite()
}

def faireDiag(c:Color){
  avance()
  marquer(c)
  avance()
  gauche()
  avance()
  marquer(c)
}


def marquer(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}