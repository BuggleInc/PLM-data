def peindreSol(c: Color) {
  setCouleurBrosse(c)
  
  // On marque le sol.
  baisseBrosse()
  leveBrosse()
}

def dessineV(c: Color) {
  avance()
  peindreSol(c)
  
  for (compteur <- 1 to 2) {
    gauche(); avance()
  }
  
  peindreSol(c)
  
  gauche()
  avance()
  gauche()
}

def dessineVInverse(c: Color) {
  peindreSol(c)
  
  for (compteur <- 1 to 2) {
    avance(); gauche()
  }
  
  peindreSol(c)
  
  for (compteur <- 1 to 2) {
    avance(); gauche()
  }
}

override def run() {
	for (y <- 1 to 2) {
    for (x <- 1 to 2) {
      dessineV(Color.RED)
      avance(2)
      dessineVInverse(Color.BLUE)
      
      recule(2)
      gauche()
      avance(2)
      droite()
      
      dessineVInverse(Color.YELLOW)
      avance(2)
      dessineV(Color.GREEN)
      
      recule(2)
    	gauche()
    	recule(2)
      droite()
      avance(4)
    }
    
    recule(7)
  }
}
