def step(rule:Array[Char], colors:Array[Color]) {
  var couleur=getCouleurSol()
  var indice=0
  for (i<-0 to colors.length-1){
    if (couleur==colors(i)){
      indice=i
    }
  }
  if (rule(indice)=='R'){
    droite()
    setCouleurBrosse(colors((indice+1)%(colors.length)))
    baisseBrosse()
    leveBrosse()
    avance()
  }else if (rule(indice)=='L'){
    setCouleurBrosse(colors((indice+1)%(colors.length)))
    gauche()
    baisseBrosse()
    leveBrosse()
    avance()
  }
}