def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
levels match{
	case 0 => avance(length); gauche(60); avance(length); droite(120); avance(length); gauche(60); avance(length);return
	case _ => snowSide(levels-1, length/3)
}


}
