
public void run() {
	int counter = 0;
	
	for(int diag = 0; diag < getWorldHeight()/2; diag++){
		counter = drawDiag(diag, counter);
	}
}


int drawDiag(int diag, int counter){
	ccounter = counter;
	for(int x = 0; x <= diag; x++){
		setPos(x, diag - x);
		writeMessage(ccounter);
		ccounter++;
	}
	return ccounter;
}
