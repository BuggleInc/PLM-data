var ligne = 1
override def run() {
var compteur = 1
ecritMessage("0")
while (!fini){
serpent()
ecritMessage(compteur)
compteur=compteur+1
}

}

def fini():Boolean={
	if(getX== getMondeLargeur()-1&&getY == getMondeHauteur()-1){
		return true
	}
	else return false
}

def serpent(){
		if(getY==getMondeLargeur()-2&&ligne==1){
			setPos(getX,getY+1)
			ligne=(-1)
		}
		else if(getY==0&&ligne==(-1)){
			setPos(getX,getY+1)
			ligne=1
		}
		else{
			setPos(getX+ligne,getY)
		}
}