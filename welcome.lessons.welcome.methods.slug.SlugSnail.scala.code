def hunt(c:color) {
	while (!estSurBiscuit) {
		if (isFacingTrail(c)) {
			baisseBrosse()
			avance()
			leveBrosse()
		} 
		else gauche()
	}
	prendBiscuit()	
}





def isFacingTrail(c:color):Boolean = {
    if (estFaceMur) return false
    else {
    		avance()
    		if (getCouleurSol()==c) {
    			recule()
    			return true
    		}
    		else {
    			recule()
    			return false
    		}
  
    }
}        
