def dessineFleur(petale: Color) {
  // On dessine les petales.
  setCouleurBrosse(petale)
  baisseBrosse()
  
  avance(2)
  recule()
  
  gauche()
  avance()
  recule(2)
  
  avance()
  
  setCouleurBrosse(Color.YELLOW)
  
  leveBrosse()
  baisseBrosse()
  leveBrosse()
  
  droite()
  avance()
}

def fillGardenSide() {
  dessineFleur(Color.RED)
  avance(2)
  
  dessineFleur(Color.CYAN)
  
  recule(6)
  
  droite()
  avance(4)
  gauche()
  
  dessineFleur(Color.PINK)
  
  avance(2)
  
  dessineFleur(Color.GREEN)
  
  recule(6)
  gauche()
  avance(2)
  droite()
  avance(2)
  
  dessineFleur(Color.ORANGE)
  
  avance(2)
  
  dessineFleur(Color.BLUE)
  
  avance(2)
  
  dessineFleur(Color.ORANGE)
  
  recule(4)
  gauche()
  avance(2)
  droite()
  
  dessineFleur(Color.RED)
  avance(2)
  
  dessineFleur(Color.CYAN)
  
  recule(6)
  
  droite()
  avance(4)
  gauche()
  
  dessineFleur(Color.PINK)
  
  avance(2)
  
  dessineFleur(Color.GREEN)
}

def growFlowers() {
  fillGardenSide()
  
  gauche()
  recule()
  droite()
  recule(14)
  gauche()
  recule(3)
  droite()
  
  fillGardenSide()
  
  recule(6)
}
