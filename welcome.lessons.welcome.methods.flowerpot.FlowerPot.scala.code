def growFlowers()
{
  fleur(Color.red)
  avance(3)
  fleur(Color.cyan)
  recule(5)
  droite()
  avance(2)
  gauche()
  avance(2)
  fleur(Color.orange)
  recule(3)
  droite()
  avance(2)
  gauche()
  fleur(Color.pink)
  avance(3)
  fleur(Color.green)
  recule(5)
}

def fleur(c:Color)
{
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  droite()
  avance()
  recule(2)
  avance()
  setCouleurBrosse(Color.yellow)
  gauche()
  leveBrosse()
}