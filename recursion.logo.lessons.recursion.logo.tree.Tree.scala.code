def tree(steps:Int, length:Double, angle:Double, shrink:Double)
{
  if (steps > 1)
  {
    avance(length)
    droite(angle)
    tree(steps - 1, shrink * length, angle, shrink)
    recule(shrink * length)
    gauche(angle)
    
    gauche(angle)
    tree(steps - 1, shrink * length, angle, shrink)
    recule(shrink * length)
    droite(angle)
  }
  else
  {
    recule(shrink * length)
    droite(angle)
  }
}