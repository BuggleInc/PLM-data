def growFlowers()
{
  droite();
  avance();
  gauche();
  
  creerRectangle();
  for (i <- 1 to 14) recule();
  droite();
  for (i <- 1 to 4) avance();
  gauche();

  creerRectangle();
  for (i <- 1 to 6) recule();
  gauche();
  avance()
  droite();
}

def ecrire()
{
  baisseBrosse();
  leveBrosse();
}

def growFlower(c:Color)
{
  setCouleurBrosse(c);

  avance();
  ecrire();
  
  for (i <- 1 to 3)
  {
    avance();
    gauche();
    avance();
    ecrire();
  }
  
  gauche();
  avance();
  setCouleurBrosse(Color.YELLOW);
  ecrire();
  
  droite();
  avance();
  gauche();
  avance();
}

def creerRectangle()
{
  growFlower(Color.RED);
  for (i <- 1 to 2) avance();
  growFlower(Color.CYAN);
  for (i <- 1 to 2) avance();
  growFlower(Color.RED);
  for (i <- 1 to 2) avance();
  growFlower(Color.CYAN);
  
  for (i <- 1 to 12) recule();
  droite();
  for (i <- 1 to 2) avance();
  gauche();
  
  growFlower(Color.ORANGE);
  for (i <- 1 to 2) avance();
  growFlower(Color.BLUE);
  for (i <- 1 to 2) avance();
  growFlower(Color.ORANGE);
  
  for (i <- 1 to 12) recule();
  droite();
  for (i <- 1 to 2) avance();
  gauche();
  
  growFlower(Color.PINK);
  for (i <- 1 to 2) avance();
  growFlower(Color.GREEN);
  for (i <- 1 to 2) avance();
  growFlower(Color.PINK);
  for (i <- 1 to 2) avance();
  growFlower(Color.GREEN);
}