def hunt(c:Color) {
    while (isFacingTrail(c)) {
      baisseBrosse()
      avance()     
  	if (estSurBiscuit()) {
      prendBiscuit()
      
    }
     else droite() 
  }
}


def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur()) {
    return false 
  }
  var estVert= false
  avance()
  if ( getCouleurSol() == c ) {
    estVert = true
  } else estVert = false
  recule()
  return estVert 
}