def sierpinski(level:Int, length:Double) {
  if(level==0){
  	avance(length);
  	droite(120);
  	avance(length);
  	droite(120);
  	avance(length);
  }
  else{sierpinski(level-1,length/2);
       avance(length);
      sierpinski(level-1,length/2);
       avance(length);
      sierpinski(level-1,length/2);}
}