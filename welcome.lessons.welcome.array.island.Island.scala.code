def island(num:Array[Int]): Int = {
  var compt:Int=0
  var n :Int = 0
  for(i<- 1 to num.length-1){
    if(num(i)==1 && (num(i-1)<=2)){
      compt = compt + 1
      if(num(i)==2 && (num(i-1)<=3)){
      	compt = compt + 1
        if(num(i)==3 && (num(i-1)<=4)){
          compt = compt +1
        }
      }
    }
	}
  return compt
}