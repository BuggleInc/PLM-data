override def run() {
def marquerSol(c:Color)={
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}
var h = getMondeHauteur()
var T = new Array[Color](h)
var decalage : Int =0
T(0)=Color.RED
for (i<- 0 to h-2){
	avance()
	T(i)=getCouleurSol()
	
}
recule(h-1)
for(j<-0 to h-2){
	gauche();avance();droite()
	decalage = litMessage().toInt
	for(k<- 0 to h-2){
	marquerSol(T((k-1+decalage)%h)); avance()}
	marquerSol(T((h-1+decalage)%h))
	recule(h-1)
}
}

