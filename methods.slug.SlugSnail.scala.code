def hunt(c:Color) {
  while (porteBiscuit==false) {
    if (estSurBiscuit==true){
      prendBiscuit()
    }
    else if (isFacingTrail(c:Color)==true) {
      avance()
      baisseBrosse()
      leveBrosse()
    }
    else {
      gauche()
    }
  }
  
}

