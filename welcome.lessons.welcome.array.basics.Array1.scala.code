override def run() {
  var T : Array[Color] = definirCouleurs()
  gauche()
  avance()
  droite()
  avance()
  for (cpt <- 1 to getMondeLargeur()-1){
    faireLigneCouleurs(T)
    gauche()
    avance()
    droite()
    avance()
  }
  avance(getMondeLargeur()-1)
  gauche()
  avance(getMondeLargeur()-1)
}

def marquerSol(){
  baisseBrosse()
  leveBrosse()
}

def definirCouleurs():Array[Color]={
  var T = new Array[Color](getMondeLargeur())
  for (i <- 0 to getMondeLargeur()-1){
    T(i)=(getCouleurSol())
    avance()
  }
  return T
}

def faireLigneCouleurs(T:Array[Color]){
  for (i <- 0 to getMondeLargeur()-1){
    setCouleurBrosse(T(i))
    marquerSol()
    avance()
  }
}


