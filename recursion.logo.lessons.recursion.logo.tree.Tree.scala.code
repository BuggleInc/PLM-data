def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  
  if(steps == 0){
    return
  } else{
    avance(length)
    
    
    current(steps)
    droite(angle)
    tree(steps-1, length*shrink, angle, shrink)
    droite(-angle)
    
    gauche(2.0*angle)
    tree(steps-1, length*shrink, angle, shrink)
    gauche(-2.0*angle)
    
    recule(length)
  }
  
}