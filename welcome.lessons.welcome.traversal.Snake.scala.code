override def run() {
  var finished:Boolean = false
  brushDown()
  setBrushColor(Color.RED)
  while(!finished){
    if(!isFacingWall())
      forward()
    else{
      if(getDirection() == Direction.EAST)
        left()
      if(getDirection() == Direction.WEST)
        right()
      if(isFacingWall)
        finished = true
      else{
        forward(); left()
        if(isFacingWall)
          back()
      }
    }
  }
}