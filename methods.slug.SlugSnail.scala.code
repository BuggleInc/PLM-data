def hunt(c:Color) {
  while (!isOverBaggle()) {
    if (isFacingTrail(c)) {
      forward();
      brushDown();
      brushUp();
    } else {
      left();
    }
  }
  pickupBaggle();
}

def isFacingTrail(c:Color):Boolean = {
  if (!isFacingWall) {
  	forward();
  	if (getGroundColor==c) {
    	backward();
    	return true
  	} else {
    	backward();
    	return false      
  	}
  } else {
    return false
  }
}