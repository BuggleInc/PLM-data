public void run() {
int size = getWorldHeight();
int offset = 0;
Color[] cell;
cell = new Color[size];

	//loop thru columns
	for(int x = 0; x <= size - 1; x++){
		//load colours into array
		for(int j = 0; j <= size - 1; j++){
			if(x == 0){
				cell[j] = getGroundColor();
			}else{
				setBrushColor(cell[(j + offset) % size]);
				mark();
			}
			if(j < size - 1){
				forward();
			}
		}//end for
		
		back();
		//get buggle back to the top
		//for(int y = 0; y < size - 1; y++){
			forward(size - 1);
		//}
		//re-position buggle
		if(x < size - 1){
			right();
			forward();
			right();
		}else{
			back();
		}
		offset = Integer.parseInt(readMessage());
	}//end for
}//end run

void mark(){
	brushDown();
	brushUp();
}

