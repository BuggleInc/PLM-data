def step():
    getCouleurSol()
    if getCouleurSol() == Color.white:
        setCouleurBrosse(Color.black)
        baisseBrosse()
        droite()
        avance()
    elif getCouleurSol() == Color.black:
        setCouleurBrosse(Color.white)
        baisseBrosse()
        gauche()
        avance()

