def isFacingTrail():Boolean = {
  
  var color=Color.white
  if (estSurBiscuit()==false){
    avance()
    color=getCouleurSol()
    recule()
    
    if (color==Color.green){
      return true
    }
    else {
      return false
    }
  }
}

def Hunt(){
  setCouleurBrosse(Color.gray)
  if (isFacingTrail()==true){
      baisseBrosse()
    	avance()
      leveBrosse()
  }
  
}


