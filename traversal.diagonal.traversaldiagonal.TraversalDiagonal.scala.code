var diag = 0;
var count:Int = 0;
var a:Int = 1;

override def run() {
  
  avancer1()
  avancer2()  
  }
  
  
def avancer1(){
  
  for (y <- 0 to 6){
    for (x <- 0 to y){
      setPos(x,y-x);
      ecritMessage(count);
      count+=1;
    }    
  }
}

def avancer2(){
  
  for (y <- a to 6 by -1){
    for (x <- a to y){
      setPos(x,y);
      ecritMessage(count);
      count+=1;
      a+=1;
    }
  }
}