def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
baisseCrayon()
current (steps)

if (steps == 0) {return}
else {
		avance(length)
		droite(angle)
		tree(steps-1, length*shrink, angle, shrink)
		
		for (i<- steps-1 to 1 by -1)
		{recule(length*shrink*i)
		droite (180-angle)}


		
		gauche(angle*2)
		tree(steps-1, length*shrink, angle, shrink)
	}

}
