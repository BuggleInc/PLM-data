override def run() {ZigZag()
}

def fonctionTest() : Boolean={
  var L=getMondeLargeur()
  var H=getMondeHauteur()
  var X=getX()
  var Y=getY()
  if ((X,Y)!=(H-1,L-1)){return false} 
  else {return true}}


def ZigZag(){
  var mess = -1
  var L=getMondeLargeur()
  var H=getMondeHauteur()
  while (!fonctionTest){
  for (i <- 0 to L-1){
    for (j <- 0 to H-1){
      if (i%2==0){
        setPos(j,i)}
      else {setPos(L-i,j)}
      mess = mess + 1
      ecritMessage(mess)
    }
  }
  }
}