def has271(nums:Array[Int]): Boolean = {
	var c = 0
	var r = 0
	
	while(nums.length > c)
	{
		
		if(nums(c) == 6 && c < nums.length - 2)
		{
			 if (nums(c + 1 ) == nums(c) + 5)
			 {
			 	if (nums(c + 2 ) == nums(c) -1)
			 	{
			 		r = 1
			 	}
			 }
		}
		c = c+1
	}

	if (r == 1)
	{
		true
	}
	else false
}
