 def hunt(c:Color) {
    while (!estSurBiscuit) {
    	if (isFacingTrail()) { 
    		avance()
    		baisseBrosse()
    		leveBrosse()
    	}
    	else { droite() }
    }
    prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {
	var a:Boolean = false
	if ( estFaceMur() == false ) { 
		avance() 
		if (getCouleurSol() == c ) {
			a = true
		}
		else { a = false }
		recule()
		if ( a == true ) { return true}
		else { return false}
	}
	else { return false }
}       



