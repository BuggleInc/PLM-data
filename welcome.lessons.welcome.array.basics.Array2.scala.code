override def run() {
  var len:Int=getWorldHeight-1
  var T=new Array[Color](len)
  var largeur:Int=getMondeLargeur
  for (i<-0 to len-1){
    getCouleurSol;
    T(i)=getCouleurSol
    avance;
  }
  for (i<-0 to len-1){
    recule
  }
  litMessage().toInt  
  for (i<-1 to largeur){
    gauche;avance;droite;
    for (j<-0 to len-1){
      setCouleurBrosse(T((j+litMessage().toInt)%len))
      baisseBrosse;leveBrosse;avance;
    }
    for (j<-0 to len-1){
      recule
    }
  }  
}