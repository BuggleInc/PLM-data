
def fonctionTest():Boolean = {
  if (estFaceMur==true) {
    if (getDirection() == Direction.EST) {
      gauche()
      if (estFaceMur==true) {
        return true
      }
      droite()
    }
    if (getDirection() == Direction.OUEST) {
      droite()
      if (estFaceMur==true) {
        return true
      }
      gauche()
    }
  }
return false
}

   
      
def explorer() {      
baisseBrosse()
while (!fonctionTest) {
	if (!estFaceMur) {
    avance()
  }
  else {
    if (getDirection() == Direction.EST) {
      gauche()
      avance()
      gauche()
    }
    if (getDirection() == Direction.OUEST) {
      droite()
      avance()
      droite()
    }
  }
  
}
}









