fini = False

baisseBrosse()
while fini == False :
  msg = litMessage()
  if (msg = 'R'):
    droite()
    avance()
  elif (msg = 'L'):
    gauche()
    avance() 
  elif (msg = 'I'):
    demiTour()
    avance() 
  elif (msg = 'A'):
    avance() 
  elif (msg = 'B'):
