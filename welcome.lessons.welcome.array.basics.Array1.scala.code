override def run() 
{
	var T = new Array[Color](getMondeHauteur())
	
	def brosse(c:Color)
	{
		setCouleurBrosse(c); baisseBrosse(); leveBrosse()
	}

	def colonne()
	{
		for(i <- 0 to T.length-1)
		{
			brosse(T(i))
			avance()
		}
	}

	for(i <- 0 to T.length-1)
	{
		T(i) = getCouleurSol(); 
		avance;
	}

	for(i <- 1 to T.length-1)
	{
		avance(); gauche(); avance(); droite()
		colonne()
	}
}
