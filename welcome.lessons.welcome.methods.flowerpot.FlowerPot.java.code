public void growFlowers()
{
	flower(Color.red);
}
public void flower(Color color)
{
	col = color;
	paint();
	
}
color col;
/**
 * paints a cross
 * leaves buggle in centre
 */
public void paint()
{
	line();
	backward();
	left();
	forward();
	back();
	line();
	backward();
	setBrushColor(Color.yellow);
	brush();
	
}
/**
 * paints a block
 */
public void brush()
{
	
	brushDown();
	brushUp();
}
public void line()
{
	brush();
	for(int i =0;i<2;i++)
	{
	forward();
	paint();
	}
}
