override def run() {
  var T=new Array[Color](getMondeHauteur())
  T(0)=getCouleurSol()
  for (i<-1 to getMondeHauteur()-1) {
    avance;
    T(i)=getCouleurSol() 
  }
  recule(5);
  for (i<-1 to getMondeLargeur()) {
    gauche;
    avance;
    droite;
    var decalage=litMessage().toInt
    for (i<-0 to getMondeHauteur()) {
      var u:Int=((i+decalage)%getMondeHauteur)
      setCouleurBrosse(T(u));
      baisseBrosse;
      leveBrosse;
      avance
    }
  }
}

