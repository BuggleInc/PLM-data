def hunt() {
	while (!estSurBiscuit) {
    if (isFacingTrail) {
      avance()
      baisseBrosse()
      leveBrosse()
    }
    else {
      droite()
    }
  }
  prendBiscuit()
  
}

def isFacingTrail():Boolean = {
  var Couleur = false
	if (estFaceMur()) {
    return false
  }
  avance()
  if (getCouleurSol() == Color.green) {
    Couleur = true
  }
  recule()
  if (Couleur == true) {
    return true
  }
  else {
    return false
  }
  
}
