override def run() {
  
  
  faireGaucheDroite(Color.RED);
  
}



def faireGaucheDroite(c:Color){
  setCouleurBrosse(c);
  marqueSol();
  avance();
  gauche();
  avance();
  droite();
  marqueSol();
 
  
}

def faireDroiteGauche(c:Color){
  setCouleurBrosse(c);
  marqueSol();
  avance();
  droite();  
  avance();
  marqueSol();
  gauche();
  
}

def marqueSol(){
  baisseBrosse();
  leveBrosse();
}

def faireMotif(){
  avance();
  gauche();
  faireDroiteGauche(Color.RED);
  avance();
  faireGaucheDroite(Color.YELLOW);
  droite();
  avance();
  droite();
  faireGaucheDroite(Color.GREEN);
  avance();
  faireDroiteGauche(Color.BLUE);
  
}
