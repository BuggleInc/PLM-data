def makeFlowers() {
  setBrushColor(Color.red)
  brushDown()
  forward(2)
  backward()
  left()
  forward()
  backward(2)
  forward()
  setBrushColor(Color.yellow)
  right()
  brushUp()
  setBrushColor(Color.red)
  forward(3)
}

def growFlowers() {
  makeFlowers()
  for (i <- 1 to 3) {
    makeFlowers()
  }
  	
}