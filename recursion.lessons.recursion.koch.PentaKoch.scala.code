def pentaKoch(levels:Int, length:Double) {
	if(levels == 0) {
		avance(length);
	}
	else {
		val lengths = length*0.4;
		val angle = 180/2.5;
		pentaKoch(levels-1, lengths);
		gauche(180-angle);
		pentaKoch(levels-1, lengths);
		droite(angle);
		pentaKoch(levels-1, lengths);
		droite(angle);
		pentaKoch(levels-1, lengths);
		droite(angle);
		pentaKoch(levels-1, lengths);
		gauche(180-angle);
		pentaKoch(levels-1, lengths);
	}
}
