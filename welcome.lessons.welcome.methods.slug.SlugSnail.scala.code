def hunt(c:Color) 
{

while(!estSurBiscuit())
{
	while(isFacingTrail(c) && !estSurBiscuit())
	{
		avance();
		baisseBrosse();
		leveBrosse();
	}

	gauche();
	if (!isFacingTrail(c) && !estSurBiscuit())
		retourne();
}

droite();
prendBiscuit();
      
}
   

def isFacingTrail(c:Color):Boolean = {

if (!estFaceMur())
{
	avance();
	if (getCouleurSol() == c)
	{
		recule();
		return true;
	}
	else
	{
		recule();
		return false;
	}
}
else
	return false;

} 


