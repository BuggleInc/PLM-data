def pentaKoch(levels:Int, length:Double) {
  if(levels>0){
    var newLength = length*0.4
    var nL = levels-1		// newLevel
    
    pentaKoch(nL,newLength)
    left(108.0)
    pentaKoch(nL,newLength)
    right(108.0)
    pentaKoch(nL,newLength)
    right(108.0)
    pentaKoch(nL,newLength)
    right(108.0)
    pentaKoch(nL,newLength)
    left(108.0)
    pentaKoch(nL,newLength)
  }else if(levels==0){
    avance(length)
  }
}