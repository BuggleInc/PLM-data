

override def run() {
  
  var c = new Array[Color](getMondeHauteur())
  for( i<-0 to c.lenght-1 )
  {
    c(i) = getCouleurSol()
    avance()
  }
  for(i<-1 to getMondeLargeur()-1)
  {
    init()
    write()
  }
  
}



def paint() {
  baisseBrosse()
  leveBrosse()
}

def write() {
  for(i <- c )
  {
    setBrosseCouleur(i)
    paint()
    avance()
  }  
}

def init() {
  gauche()
  avance()
  droite()
}