def maxMod5(a:Int, b:Int):Int = {
	if(a==b){
		return 0;
	}else{
	
	if (a!=b  &&  irem(a)==irem(b)){
			return min(a,b);
		}else{
			return max(a,b);
		}

	
}
}
def irem(a:Int):Int = {
	return a%5;
}


def min (a:Int , b:Int): Int = {
	return   (  (a + b - Math.abs(b - a))/2);
}


def max (a:Int , b:Int): Int = {
	return   (  (a + b - Math.abs(b - a))/2);
}
