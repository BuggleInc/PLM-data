 def hunt(c:Color) {
     while(!estSurBiscuit) {	
		while (isFacingTrail(c) && !estSurBiscuit) {
			baisseBrosse()
			avance()
			leveBrosse()
		}
		if (!isFacingTrail(c) && !estFaceMur) {
			droite()
			if (!isFacingTrail(c) && estFaceMur) {
				gauche()
				gauche()
			}
		}
		if (!isFacingTrail(c) && estFaceMur && !estSurBiscuit) {
			droite()
			if (estFaceMur) {
				gauche()
				gauche()
			}
		}
	}
	prendBiscuit()
	if (!isFacingTrail(c)) {
		gauche()
	}

}



// m√©thode isFacingTrail
def isFacingTrail(c:Color):Boolean = {
	if (estFaceMur) {
		return false
	} else {
		avance()
		if (getCouleurSol() == c) {
			recule()
			return true
		}
		recule()
		return false
	}
}