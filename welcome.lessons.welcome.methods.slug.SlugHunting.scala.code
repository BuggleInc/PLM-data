def hunt() {
    while (!estSurBiscuit) {
    	if (isFacingTrail()) { 
    		avance()
    		baisseBrosse()
    		leveBrosse()
    	}
    	else { droite() }
    }
}

def isFacingTrail():Boolean = {
	var c:Boolean = false
	if ( estFaceMur() == false ) { 
		avance() 
		if (getCouleurSol() == Color.green) {
			c = true
		}
		else { c = false }
		recule()
		if ( c == true ) { return true}
		else { return false}
	}
	else { return false }
}       

