def isFacingTrail():Boolean = {
	var estVerte = false
  if (!estFaceMur()) {
  	avance()
  }
  if (getCouleurSol() == Color.green) {
    estVerte = true
  } else {
    estVerte = false
  }
  if (!estFaceMur()) {
  	recule()
  }
  return estVerte
}        

def trouveLimace() {
  	while (!estSurBiscuit) {
  	if (isFacingTrail()) {
    	avance()
  	} else {
    	gauche()
  	}
	}
}