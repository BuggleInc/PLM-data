def hunt(c:Color) {
  avance()
  while(!estSurBiscuit()){
    if (isFacingTrail()){
    baisseBrosse()
    leveBrosse
    avance()
    }
    else {
      gauche()
      if (isFacingTrail())
      avance()
      else {
        droite();droite();avance()
      }
    }
    
  prendBiscuit()
}
}

def isFacingTrail():Boolean = {
  var k=false
  var c=getCouleurSol()
  if (!estFaceMur()){
    avance()
    if (getCouleurSol()==c){
      k=true
    }
    recule()
  }
  return k 
}
