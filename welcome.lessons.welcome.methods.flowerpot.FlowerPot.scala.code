def flower(c:Color){
  setCouleurBrosse(c)
  
  baisseBrosse()
  avance(2);recule();gauche();avance();recule(2)
  leveBrosse()
  avance()
  
  setCouleurBrosse(Color.yellow)
  baisseBrosse()
  leveBrosse()
  droite()
}

def growFlowers(){
  flower(Color.red)
  
  avance(3)
  
  flower(Color.blue)
  
  recule(3);gauche();recule(2);droite()
  
  flower(Color.orange)
  
  
}