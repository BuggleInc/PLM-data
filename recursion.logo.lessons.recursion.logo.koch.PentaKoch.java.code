void pentaKoch(int levels, double length) {
  if(levels <=0){
    avance(length);
  }else{
    pentaKoch(levels-1,length*0.4);
    gauche(130);
    pentaKoch(levels-1,length*0.4);
    droite(70);
    pentaKoch(levels-1,length*0.4);
      droite(70);
    pentaKoch(levels-1,length*0.4);
    droite(70);
    pentaKoch(levels-1,length*0.4);
    gauche(130);
    pentaKoch(levels-1,length*0.4);
  }
}