def step() 
{
  if (getCouleurSol() == Color.black) 
  {
    peindreBlanc()
    gauche()
    avance()
  } else 
  {
    peindreNoir()
    droite()
    avance()
  }
}

def peindre() 
{
  baisseBrosse()
  leveBrosse()
}

def peindreNoir() 
{
  setCouleurBrosse(Color.black)
  peindre()
}

def peindreBlanc() 
{
  setCouleurBrosse(Color.white)
  peindre()
}