def step(rule:Array[Char], colors:Array[Color]) {
  var couleur : Color = getCouleurSol()
  var position : Int = 0
  for (i <- 0 to colors.length - 1){
    if (couleur == colors(i)){
      position = i
    }
  }
  if (rule(position) == 'L'){gauche()}else{droite()}
  setCouleurBrosse(colors((position + 1) % colors.length))
  baisseBrosse()
  leveBrosse()
  avance()
}
