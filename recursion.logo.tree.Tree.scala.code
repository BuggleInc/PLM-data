def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  current(steps)
  if(steps==0){
    avance(length)
    recule(length)
  }else{
    avance(length)
    droite(angle)
    tree(steps-1,length*shrink,angle, shrink)
    recule(length)
    gauche(angle*2)
    tree(steps-1,length*shrink,angle, shrink)
  }
  
}



