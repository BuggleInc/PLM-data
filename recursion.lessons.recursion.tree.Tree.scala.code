def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

steps match{
	case 0 => return
	case _ => current(length); avance(length) 
			droite(2*angle); tree(steps-1,length/shrink,angle,shrink); recule(length); gauche(2*angle)
			gauche(2*angle); tree(steps-1,length/shrink,angle,shrink); recule(length); droite(2*angle)
}

}
