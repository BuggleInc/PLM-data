def hunt() {    
	while (isFacingTrail) {
		baisseBrosse()
		avance()
		leveBrosse()
	}
	if (!isFacingTrail && !estFaceMur) {
		droite()
		if (!isFacingTrail && !estFaceMur) {
			gauche()
			gauche()
		}
	}
}

def isFacingTrail():Boolean = {
	if (estFaceMur) {
		return false;
	} else {
		avance()
		if (getCouleurSol() == Color.green) {
			recule()
			return true;
		}
		recule()
		return false
	}
}        

