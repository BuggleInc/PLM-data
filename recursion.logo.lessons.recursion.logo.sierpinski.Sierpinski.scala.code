def sierpinski(level:Int, length:Double) {
  if(level>(-1)){
    sierpinski(level-1, length/2)
    avance(length)
    droite(120)
    sierpinski(level-1, length/2)
    avance(length)
    droite(120)
    sierpinski(level-1, length/2)
    avance(length)
    droite(120)
    sierpinski(level-1, length/2)
    avance(length)
    droite(120)
    sierpinski(level-1,length/2)
  }
}