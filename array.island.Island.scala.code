
def max(liste:Array[Int]):Array[Int]={
  
  var max:Array[Int]=Array(liste(0),0)
  
  
  for(i <- 1 to liste.length -1){
   			if( max(0) < liste(i) ){
          max=Array(liste(i),i)}
    		
  }
  return max;
  
}


def island(num:Array[Int]): Int = {
	
  if (num.length == 0){return 0}
  
    
    return max(num)(1);
  
  
  
  
 
  
}