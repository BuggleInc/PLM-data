def withoutDoubles(die1:Int, die2:Int, noDoubles:Boolean):Int = {

	
	(die1, noDoubles, die2) match {
		
		case (die1, noDoubles, die2)  if (noDoubles==true && die1==die2) => return die1+die2+1
		case (die1, noDoubles, die2)  if (noDoubles==true && die1==die2 && die1==6) => return die1+die2-5
		case (_,_,_) => return die1+die2
	 
	}
	
}
