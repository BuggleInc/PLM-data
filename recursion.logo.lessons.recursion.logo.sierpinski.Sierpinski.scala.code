def sierpinski(level:Int, length:Double) {
  if (level==0){
    droite(120)
    avance(length)
    droite(120)
    avance(length)
    droite(120)
    avance(length)
    return
  }
  baisseCrayon()
  sierpinski(level-1,length/2)
  droite(120)
  avance(length)
  sierpinski(level-1,length/2)
  droite(120)
  avance(length)
  sierpinski(level-1,length/2)
  droite(120)
  avance(length)
  leveCrayon()
}
