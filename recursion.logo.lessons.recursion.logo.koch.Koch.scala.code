def snowFlake (levels:Int, length:Double)
{
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double)
{
  /*if (levels == 1)
  	avance(length)*/
  
  if (levels > 1)
  {
    avance(length/4)
    left(60);
    avance(length/4)
    right(120);
    avance(length/4)
    left(60);
    avance(length/4)
  }
}