def combSort() {
  var ecart = getNumberValue();
  do {
    var haveBeenSorted = false;
    if (ecart > 1) {
      ecart = (ecart.toDouble / 1.3).toInt;
    }
    var i = 0;
    while (i+ecart < lgr) {
      if (isSmaller(i, i+ecart)) {
        swap(i, i+ecart);
        haveBeenSorted = true;
        i += 1;
      }
    }
  } while ((ecart > 1) || !haveBeenSorted);
}