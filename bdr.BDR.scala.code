var lettre : String = ""
while (estSurMessage()) {
  lettre=litMessage():String
  if (lettre=="R") {
    droite()
    avance()
    gauche()
  } else {
    if (lettre=="L") {
      gauche()
      avance()
      droite()
    } else {
      if (lettre=="I") {
      retourne()
      avance()
      retourne()
      } else {
        if (lettre=="A") {
          avance()
        } else {
        if (lettre=="B") {
          avance()
        } else {
        if (lettre=="C") {
          avance()
      }
    }
  }  
}