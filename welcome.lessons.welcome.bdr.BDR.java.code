boolean running = true;
while(running) {
	switch(getIndication()) {
		case 'R':
			right();
			forward();
			break;
		case 'L':
			left();
			forward();
			break;
		case 'I':
			right();
			right();
			forward();
			break;
		case 'A':
			forward();
			break;
		case 'B':
			forward(2);
			break;
		case 'C':
			forward(3);
			break;
		case 'Z':
			backward();
			break;
		case 'Y':
			backward(2);
			break;
		case 'X':
			backward(3);
			break;
		default:
			running = false;
	}
}
