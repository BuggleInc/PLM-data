public void hunt() {
	while(!isOverBaggle()){
		if (!isFacingTrail()) {
			right();
		}
		if (isFacingTrail()){
			brushDown();
			forward();
			brushUp();
		}
	}
    	pickupBaggle();
} 

boolean isFacingTrail() {
	boolean stillOnTrail = false;
	if (!isFacingWall()){
	forward();
	if (getGroundColor().equals(Color.green)) {
		stillOnTrail = true;
	}
	backward();}
    	return stillOnTrail;
}