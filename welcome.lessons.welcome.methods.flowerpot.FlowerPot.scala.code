def growFlowers() {
	fairePetales(Color.RED)
}

def marqueSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}

def fairePetales(c:Color) {
	//colorier les deux carreaux (S)
	marqueSol(c)
	avance()
	droite()
	avance()
	marqueSol(c)
	gauche()
	avance()
	gauche()
	avance()
	marqueSol(c)
	avance()
	gauche()
	avance()
	marqueSol(c)
	
	if (!estFaceMur) {
		avance()
	}
}
