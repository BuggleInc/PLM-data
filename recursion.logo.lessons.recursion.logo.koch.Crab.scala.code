def crab(levels:Int, length:Double) {
  crabKoch(levels,length)
  droite(90)
  crabKoch(levels,length)
}

def crabKoch(levels:Int, length:Double) {
  if (levels!=0) {
    gauche(45)
    crabKoch(levels-1,length/math.sqrt(2));
    droite(90);
    crabKoch(levels-1,length/math.sqrt(2));
    gauche(45);
    } else {
      avance(length)
    }
}