def posNeg(a:Int, b:Int, negative:Boolean):Boolean = {
	if(negative){
  	if(a<0){
      if(b<0){
        return true
      }
      else { return false}
    }
    else{ return false}
  }
  
  
  
  
  
  
  
  else{
  	if(a>0){
    	if(b<0){
      	return true
    	}
    	else{return false}
  	}
  	else if(b>0){
    	if(a<0){
      	return true
    	}
    	else {return false}
    
    }
 
	}  
}