def island(num:Array[Int]): Int = {
  var n:Int = 0
  var nump:Int = 0
  var descend:Boolean = true
  for (i <- 0 to (num.length - 1)){
    if (num(i) < nump){
      n = n+1
      descend = true
    } else if (num(i) == 0 && !descend){
      n = n+1
      descend = false
    } else if (num(i) > nump){descend = false}
    nump = num(i)
  }
  return n
}