def hunt() {
  while (isOverBaggle==false){
  	if (isFacingTrail()==true){
   	 brushDown()
    	forward()
   	 brushUp()
    	forward()
  	}
   	else if (isOverBaggle()==true){
    	  pickupBaggle()
   	 }
    else {
      left()
    }
  }
}

def isFacingTrail():Boolean = {
  if (isFacingWall()==true){
    return false ;
  }
  else {
    forward()
    if (getGroundColor()==Color.green){
      backward()
      return true;
    }
    else {
      backward()
      return false ;
    }
  }
}