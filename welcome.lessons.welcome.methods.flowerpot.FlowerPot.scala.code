def fleur(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
  avance()
  setCouleurBrosse(Color.YELLOW)
  droite()
  leveBrosse()
  
  
}


def growFlowers(){
  fleur(Color.RED)
  avance(3)
  fleur(Color.CYAN)
  recule(5)
  droite()
  avance(2)
  gauche()
  avance(2)
  fleur(Color.ORANGE)
  recule(3)
  droite()
  avance(2)
  gauche()
  fleur(Color.PINK)
  avance(3)
  fleur(Color.GREEN)
  recule(5)
  
  
}
