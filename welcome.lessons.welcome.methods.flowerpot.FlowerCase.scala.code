}


def grow(){
  flower(Color.RED)
  avance(3)
  flower(Color.CYAN)
  recule(3)
  droite()
  avance(2)
  gauche()
  flower(Color.ORANGE)
  recule(3)
  droite()
  avance(2)
  gauche()
  flower(Color.PINK)
  avance(3)
  flower(Color.GREEN)
  recule(5)
}

def flower(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  droite()
  recule()
  avance(2)
  recule()
  setCouleurBrosse(Color.YELLOW)
  baisseBrosse()
  leveBrosse()
  gauche()
}