def hunt() {
  while(!estSurBiscuit())
  {
    var cnt = true
    while(isFacingTrail()&&cnt)
    {
      avance()
      marque()
      if(estSurBiscuit())
      	cnt = false
    }
    while(!isFacingTrail()&&cnt)
      droite()
  }
  prendBiscuit()
}

def marque()
{
  baisseBrosse()
  leveBrosse()
}

def isFacingTrail():Boolean = {
  var b = false  
  if(estFaceMur())
  	return false
  avance()
  b = (getCouleurSol()==Color.green)
  recule()
  return b
}
