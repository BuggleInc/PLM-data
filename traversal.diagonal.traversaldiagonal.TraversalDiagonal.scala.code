  var diag = 1;
  var cpt = 0;

def fini():Boolean={
  return cpt == (getMondeHauteur()+getMondeLargeur()-1) 
}

def traceDiag(){
    var x = 0
    var y = diag
    while(x != diag ){
      setPos(x%(getMondeHauteur()-1),y%(getMondeHauteur()-1)-1);
      ecritMessage(cpt)
      cpt += 1;
      y -= 1;
      x += 1;
    }
}

override def run() {
  while(!fini()){
    traceDiag();
    diag += 1;
  }
}