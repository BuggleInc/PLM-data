def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  avance(steps)
  current(steps)
  if(steps==1){
    current(steps)
    gauche(angle)
    avance(steps)
    recule(steps)
    droite(2*angle)
    avance(steps)
    recule(steps)
    gauche(angle)
  } else {
  gauche(angle)
  current(steps-1)
  tree(steps-1,shrink*length,angle,shrink)
  droite(2*angle)
  tree(steps-1,shrink*length,angle,shrink)
  }
}