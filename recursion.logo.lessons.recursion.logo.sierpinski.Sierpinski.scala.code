def sierpinski(levels:Int, length:Double) {
  if (levels==0){
    avance(length)
    droite(120.0)
    avance(length)
    droite(120.0)
    avance(length)
		droite(120.0)
  }
  else{
    sierpinski(levels-1,length/2.0)
    avance(length)
    droite(120)
    sierpinski(levels-1,length/2.0)
    avance(length)
    droite(120.0)
    sierpinski(levels-1,length/2.0)
    
    
  }
}