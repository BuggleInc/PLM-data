def step() {
  def setCouleurSol(Color){
    setCouleurBrosse(Color)
    baisseBrosse()
    leveBrosse()
  }
  if (getCouleurSol()==Color.white){
    setCouleurSol(Color.black)
    droite()
    avance()
  }
  else (getCouleurSol==Color.black){
    setCouleurSol(Color.white)
    gauche()
    avance()
  }
}