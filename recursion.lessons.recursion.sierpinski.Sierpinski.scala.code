def sierpinski(level:Int, length:Double) {
if(level==0){
	avance(length)
	droite(120)
	avance(length)
	droite(120)
	avance(length)
	droite(120)
	avance(length)
}else{
	sierpinski(level-1, length/2)
	sierpinski(level-1, length/2)
	droite(120)
	avance(length)
	droite(60)
	avance(length/2)
	droite(120)
	sierpinski(level-1, length/2)
	gauche(120)
	avance(length/2)
	droite(60)

}
}
