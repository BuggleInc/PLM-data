def golomb(num:Int): Int = {
  var c:Int = 0;
  var T1 = new Array[Int](num);
  var T2 = new Array[Int](num);
  if ( num == 1 ){
    return 1;
  } else if ( num == 2 ){
    return 2;
  } else {
  T1(0)=1;
  T1(1)=2;
  for ( i <- 1 to num ){
    while( T1(i-1) >= 1 ){
      if ( c >= num ){
        return T2(num-1);
      }
      T2(c) = i;
      T1(c) = i;
      c += 1
      T1(i-1) = T1(i-1)-1;
    }
  }
  return T2(num-1);
  }
}