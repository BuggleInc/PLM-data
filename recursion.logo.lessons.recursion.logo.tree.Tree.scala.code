def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  current(steps)
  baisseCrayon()
  if(steps==1){
    avance(length)
    recule(length)
  } else {
    avance(length)
    gauche(angle)
    tree(steps-1,shrink*length,angle,shrink)
    droite(2*angle)
    tree(steps-1,shrink*length,angle,shrink)
    gauche(angle)
    leveCrayon()
    recule(length)
  }
}
