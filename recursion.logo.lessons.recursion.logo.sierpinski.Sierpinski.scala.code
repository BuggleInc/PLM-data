def sierpinski(level:Int, length:Double) {
  if(level==0)
  {
    avance(length)
    droite(120)
    avance(length)
    droite(120)
    avance(length)
    droite(120)
    
  }else{
    gauche(60)
    sierpinski(level-1,length*0.5)
    
    droite(120)
    sierpinski(level-1,length*0.5)
    
    gauche(60)
    
  }
}