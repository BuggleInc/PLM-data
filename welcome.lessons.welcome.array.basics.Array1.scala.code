override def run() {
  tableau()
  for (l <- 1 to getMondeLargeur()){
    gauche()
    avance()
    droite()
    peindre()
  }
}

def tableau(){
  var motif=Array[Color](getMondeHauteur())
  for (compteur <- 0 to getMondeHauteur()-1 ){
    motif(compteur)=getCouleurSol()
    avance()
  }
}
def peindre(){
  for (long<- 1 to getMondeHauteur()){
    baissebrosse()
    setCouleurBrosse(motif(long-1))
    levebrosse()
    avance()
  }
}