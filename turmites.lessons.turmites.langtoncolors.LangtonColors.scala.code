def step(rule:Array[Char], colors:Array[Color]) {
  var ind:Int = 0
  var c:Color = getCouleurSol()
  for (j <- 0 to 30001) {
    c=getCouleurSol()
  	for (i<-0 to colors.length-1) {
      if (colors(i)==c) {
        ind = i
      }
    }
    setCouleurBrosse(colors((ind+1)%colors.length))
    baisseBrosse()
    leveBrosse()
    if (rule(ind)=='R') {
      droite()
      avance()
    }
    else {
      gauche()
      avance()
    }
  }
}

