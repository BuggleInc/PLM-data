void pentaKoch(int levels, double length) {
    if (levels == 0) {
		forward(length);
		return;
	}
	pentaKoch(levels - 1, length * .4);	
	left(108.0);
	pentaKoch(levels - 1, length * .4);
	right(72.0);
	pentaKoch(levels - 1, length * .4);			
	right(72.0);
	pentaKoch(levels - 1, length * .4);
	right(72.0);		
	pentaKoch(levels - 1, length * .4);
	left(108.0);
	pentaKoch(levels - 1, length * .4);
}
