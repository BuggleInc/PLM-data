def hunt() {
  while( !estSurBiscuit() ){
    if ( isFacingTrail ){
      baisseBrosse();
      leveBrosse();
      avance();
    } else {
      gauche();
    }
  }
  prendBiscuit();
  baisseBrosse();
  leveBrosse();
}

def isFacingTrail():Boolean = {
  if ( estFaceMur() ){
    return false;
  } else {
    avance();
    if ( getCouleurSol() == Color.green ){
      recule();
      return true;
    } else { 
      recule();
      return false;
    }
  }
}
