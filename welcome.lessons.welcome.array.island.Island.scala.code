def island(num:Array[Int]): Int = {
var x=0
for (i <- 0 to num.length-7) {
	if (( num(i)==1  & num(i+1)==1 & num(i+2)==2 & num(i+3)==2 & num(i+4)==1 & num(i+5)==1)){
		x=x+1	
	}	
}
for (i <- 0 to num.length-2) {
	if (num(i)==2 & num(i+1)!=2){
		x=x+1	
	}	
}
for (i <- 0 to num.length-2) {
	if (( num(i)==2  & num(i+1)==2)){
		x=x+1		
	}	
}
for (i <- 0 to num.length-5) {
	

	if (( num(i)==1  & num(i+1)==2 &  num(i+2)==1 & num(i+3)==1)){
		x=x+1
		
	}
	
}
return x
}
