def step() {
  var a = Color.blue
  a=getCouleurSol()
  if (a==Color.black){
    setCouleurSol(Color.white)
    gauche()
    avance()
  }
  if (a==Color.white){
    setCouleurSol(Color.black)
    droite()
    avance()
  } 
}

def setCouleurSol(color:Color){
  setCouleurBrosse(color)
  baisseBrosse()
  leveBrosse()
}