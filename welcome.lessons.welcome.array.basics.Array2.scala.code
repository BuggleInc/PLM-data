override def run() {
var x = getMondeHauteur
var T = new Array[Color](x)
T(0)= getCouleurSol
for (i <- 1 to x-1)
	{avance()
	T(i)= getCouleurSol}
for (i <- 0 to x-2)
{recule()}
	
	
def dessiner()
	{baisseBrosse; leveBrosse}


for (j <- 0 to (x-2)) {
	gauche()
	avance()
	droite()
for (i <- 1 to x)
{setCouleurBrosse(T((i+j)%5))
	dessiner()
	avance()	
	}
