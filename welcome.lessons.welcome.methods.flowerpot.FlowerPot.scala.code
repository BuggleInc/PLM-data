def fleur(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	avance();avance()
	recule()
	gauche()
	avance()
	recule();recule()
	avance()
	setCouleurBrosse(Color:YELLOW)
	leveBrosse()
	droite()
	recule()
	}

def growFlowers() {
	fleur(Color:RED)
	for (i<-1 to 4) avance()
	fleur(Color:CYAN)
	for (i<-1 to 4) recule()
	droite()
	avance();avance()
	gauche()
	fleur(Color:ORANGE)
	for (i<-1 to 4) recule()
	droite()
	avance();avance()
	gauche()
	fleur(Color:PINK)
	for (i<-1 to 4) avance()
	fleur(Color:GREEN)
}
