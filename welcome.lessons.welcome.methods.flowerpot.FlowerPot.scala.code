  }
  leveBrosse()
}

def flower(c:Color){
  brosse(c)
  recule()
  gauche()
  recule()
  brosse(c)
  recule()
  setCouleurBrosse(Color.yellow)
  baisseBrosse()
  leveBrosse()
  droite()
