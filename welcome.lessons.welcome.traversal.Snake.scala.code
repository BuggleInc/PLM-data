override def run() {
// Fonction qui test si le Buggle est dans un angle (position finale)


baisseBrosse()
while (fonctionTest()==false)
	{if (estFaceMur)
		{if (Direction.EST==getDirection())
			{gauche()
			avance()
			droite()}
		else {droite()
			avance()
			gauche()}
		}
	else {avance()}
	}

}
def fonctionTest() {
	(getDirection()==Direction.EST,estFaceMur) match {
		case (true,true) => gauche(); if (estFaceMur) {droite(); return true}
		case (false,true)=> droite(); if (estFaceMur) {gauche(); return true}
		case (_,_)	  => return false
	}
}