def hunt() 
{
	while (!estSurBiscuit()) 
	{
		if (isFacingTrail())
		{
			baisseBrosse();
			avance();
			leveBrosse();
		} 
		else
		{
			gauche();
		}
	}
	prendBiscuit();
}
	
def isFacingTrail():Boolean = 
{
	if(estFaceMur())
		return false;
	avance()
	var vert = getGroundColor() == Color.green;
	recule();
	return vert;
}
	
