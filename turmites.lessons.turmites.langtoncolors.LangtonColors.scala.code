
var x=getCouleurSol()
var i=0;
def step(rule:Array[Char], colors:Array[Color]) {
     x=getCouleurSol();
	while(colors(i)!=x){
		i=i+1
		
	}
	
	if (rule(i)=='R'){
		droite()
	}
	else {
		gauche();
	}
	if (i==colors.length-1){
		setCouleurBrosse(colors(0));
	baisseBrosse();
	leveBrosse();
	}
	else {
	setCouleurBrosse(colors(i+1));
	baisseBrosse();
	leveBrosse();
	}
	avance();
	i=0;
	


}

