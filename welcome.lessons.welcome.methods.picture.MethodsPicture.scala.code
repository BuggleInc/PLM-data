override def run() {
  dessinTout();
}
  
	def dessinTout(){
  	for (colonne <-1 to 3){
    	ligneMotif()
    	monterColonne()
  	}
	}
	def monterColonne(){
  	ligneMotif()
  	recule(14)
  	gauche()
  	avance(7)
  	droite()
	}
	def ligneMotif(){
  	for (plop <-1 to 2){
  	faireMotif()
  	avance(7)}
	}

	def faireMotif(){
  	var c=Color.YELLOW
    avance()
    faireV(c)
    avance()
    gauche()
    c=Color.RED
    avance()
    faireV(c)
    avance()
    gauche()
    c=Color.BLUE
    avance()
    faireV(c)
    avance()
    gauche()
    c=Color.GREEN
    avance()
    faireV(c)
    avance()
    gauche()
  	}


	def marquerSol(c:Color){
    setCouleurBrosse(c)
  	baisseBrosse()
  	leveBrosse()
	}

	def faireV(c:Color){
  	marquerSol(c)
  	avance()
  	gauche()
  	avance()
  	marquerSol(c)
  	recule()
  	droite()
  	avance()
  	marquerSol(c)
	}