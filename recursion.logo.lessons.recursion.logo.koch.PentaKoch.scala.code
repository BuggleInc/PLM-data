def pentaKoch(levels:Int, length:Double) {
  if(levels > 0){
    var nlvl = levels -1;
    var nlng = length*0.4;
    
    pentaKoch(nlvl,nlng);
    left(108);
    pentaKoch(nlvl,nlng);
    right(72);
    pentaKoch(nlvl,nlng);
    right(72);
    pentaKoch(nlvl,nlng);
    right(72);
    pentaKoch(nlvl,nlng);
    left(108);
    pentaKoch(nlvl,nlng);
  }
  else{
    forward(length);
  }
}