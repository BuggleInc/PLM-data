def hunt() {
  var capture:Boolean = false
  while (!capture) {
    if (estSurBiscuit) {
      capture = true
    } else if (isFacingTrail()) {
    	avance()
      baisseBrosse()
      leveBrosse()
    } else {gauche()}
	}
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  if (!estFaceMur) {
  	avance()
  	var couleurCase = getCouleurSol()
  	recule()
  	return couleurCase == Color.green
  } else {return false}
}
