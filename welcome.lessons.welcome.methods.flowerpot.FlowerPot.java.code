public void growFlowers() {
	flower(Color.RED);
}

public void flower(Color c) {
	mark(c);
	forward();
	mark(Color.YELLOW);
	left();
	forward();
	mark(c);
	backward(2);
	mark(c);
	forward();
	right();
	forward();
	mark(c);
}

public void mark(Color c) {
	setBrushColor(c);
	brushDown();
	brushUp();
}
