override def run() {
  setTrouToOne()
}

def couleurJoueur(pos:Int):Int = {
  return getCouleurJoueur(pos/2, pos%2)
}

def deplace(pos:Int) {
  deplace(pos/2, pos%2)
}

def trouveTrou():Int = {
  return 2*getTrouBase()+getTrouPosition()
}


def setTrouToOne() { //On amène le trou à la position 1
  var trou = trouveTrou()
  
  if (trou>1) {
    for (i <- trou-1 to 1 by -1) {
      deplace(i)
    }
  }
  
  else if (trou==0) {
    deplace(1)
  }
}