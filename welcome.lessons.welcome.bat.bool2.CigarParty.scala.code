def cigarParty(cigars:Int, isWeekend:Boolean):Boolean = {
	(cigars, isWeekend) match {
		case (cigars, isWeekend) if (cigars>=40 && cigars<=60 && isWeekend==false) => return true
		case (cigars, isWeekend) if (cigars>=40 && isWeekend==true) => return true
		case (cigars, isWeekend) if (cigars<40 && isWeekend==true) => return false
		case (cigars, isWeekend) if (cigars<40 && isWeekend==false) => return false
		case (cigars, isWeekend) if (cigars>60 && isWeekend==false) => return false
	}
	
}
