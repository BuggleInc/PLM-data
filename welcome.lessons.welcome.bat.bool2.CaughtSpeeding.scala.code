def caughtSpeeding(speed:Int, isBirthday:Boolean):Int = {
	var offset:Int = 0
  
  if (isBirthday) {
    offset = 5
  }
  
  var correctedSpeed:Int = speed - offset
  
  if (correctedSpeed < 60)
  	return 0
  else if (correctedSpeed >= 61 && correctedSpeed <= 80)
  	return 1
  else if (correctedSpeed >= 81)
  	return 2
}