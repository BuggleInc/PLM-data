var diag = 0;
override def run() {
  var c=0
  var p=0
  for (x<- 0 to 6){
    p=diag
    for (y <- 0 to diag){
      
      if (readMessage()!="0"){
        writeMessage(c);
      }
      setPos(y,p);
      if (readMessage()!="0"){
        c+=1;
      }
      p= p -1
    }
    diag= diag +1
  }
  diag=diag-1
  
  for (x<- 0 to 6){
    p=diag
    for (y <- 1 to diag){
      
      writeMessage(c);
      setPos(y,p);
      c+=1
      p= p -1
    }
    diag= diag -1
  }
  
}