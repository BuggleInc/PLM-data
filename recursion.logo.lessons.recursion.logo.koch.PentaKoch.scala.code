def pentaKoch(levels:Int, length:Double) {
  if (levels == 0) {
    forward(length);
  } else {
    pentaKoch(levels-1, length/3)
    left(108)
    pentaKoch(levels-1, length/3)
    right(108)
    pentaKoch(levels-1, length/3)
    right(108)
    pentaKoch(levels-1, length/3)
    right(108)
    pentaKoch(levels-1, length/3)
    left(198)
    pentaKoch(levels-1, length/3)
  }
}