override def run() {
  var T = new Array[Color](getMondeHauteur())
  CreationTableau(T)
  for (j <- 0 to getMondeLargeur()-2){
    gauche()
    avance()
    droite()
    avance()
    FaireUneColonne(T)
  } 
}

def CreationTableau(T:Array[Color]){
  for (i <- 0 to getMondeHauteur()-1){
  	T(i) = getCouleurSol()
    avance()
  }
}

def FaireUneColonne(T:Array[Color]){
  for (i <- T){
    setCouleurBrosse(i)
    baisseBrosse()
    leveBrosse()
    avance()
  }
}
