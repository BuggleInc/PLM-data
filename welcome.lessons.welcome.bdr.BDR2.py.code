fait = False
while not fait:
    c = litMessage()
    if c == 'R':
        droite()
        avance()
    elif c == 'L':
        gauche()
        avance()
    elif c == 'I':
        recule()
        avance()
    elif c == 'A':
        avance()
    elif c == 'B':
        avance(2)
    elif c == 'C':
        avance(3)
    elif c == 'Z':
        recule()
    elif c == 'Y':
        recule(2)
    elif c == 'X':
        recule(3)
    else:        
        fait = True