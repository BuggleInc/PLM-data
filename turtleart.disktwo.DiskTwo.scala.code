def quartier() {
  for(i<- 1 to 40){
    avance(100)
    recule(100)
    droite(1)
  }
}

def changeColor(c:Color){
  c match{
    case Color.black => setColor(Color.red)
    case Color.red => setColor(Color.black)
  }
}

override def run(){
  for (i<- 1 to 18){
    quartier()
    changeColor(getColor())
  }
}