def keepHandOnSideWall(c:Int){
  if (estFaceMur()){
    droite()
    c=c-1
  }
  else {
    avance();gauche()
    while (!estFaceMur()){
      avance();gauche()
      c=1+c
    }
    droite()
  }
}

def isDirectionFree(dir:Direction):Boolean ={
  setDirection(dir)
  if(estFaceMur()){
    return false
  }
  else {
    return true
  }
}