def Brosse(c:Color) {
  setCouleurBrosse(c:Color)
  baisseBrosse()
  leveBrosse()
}

def fleur(c:Color) {  //début pétale gauche
  Brosse(c:Color)
  avance()
  Brosse(Color.YELLOW)
  gauche()
  avance()
  Brosse(c:Color)
  recule(2:Int)
  Brosse(c:Color)
  avance()
  droite()
  avance()
  Brosse(c:Color)    //fin pétale droite
}
