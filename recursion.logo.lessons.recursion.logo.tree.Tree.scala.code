def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  current(steps)
  baisseBrosse()
  if(steps==0){
    avance(length)
    recule(length)
  } else {
    avance(length)
    gauche(angle)
    tree(steps-1,shrink*length,angle,shrink)
    droite(2*angle)
    tree(steps-1,shrink*length,angle,shrink)
    gauche(angle)
    leveBrosse()
    recule(length)
  }
}