def growFlowers() {
	faireFleur(Color.red);
	avance(3);
	faireFleur(Color.cyan);
	recule(3);
	droite();
	avance(2);
	gauche();
	faireFleur(Color.orange);
	recule(3);
	droite();
	avance(2);
	gauche();
	faireFleur(Color.pink);
	avance(3);
	faireFleur(Color.green);
	recule(6);
}

def faireFleur(c:Color) {
	setCouleurBrosse(c);
	baisseBrosse();
	avance(2);
	recule();
	gauche();
	avance();
	recule(2);
	avance();
	setCouleurBrosse(Color.yellow);
	leveBrosse();
	droite();
}