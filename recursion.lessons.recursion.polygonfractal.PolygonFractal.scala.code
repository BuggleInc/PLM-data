def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
	var angle = 360/sides;
	if(levels == 1) {
		for(i<-1 to sides) {
			avance(length);
			droite(angle);
		}
	}
	else {
		for(i<-1 to sides) {
			avance(length);
			gauche(360-angle);
			polygonFractal(levels-1, sides, length*shrink, shrink);
			gauche(360-angle);
		}
	}
}
