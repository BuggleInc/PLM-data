def dessineFleur(petale: Color, polen: Color) {
  // On dessine les petales.
  setCouleurBrosse(petale)
  baisseBrosse()
  
  avance(2)
  recule()
  
  gauche()
  avance()
  recule(2)
  
  avance()
  
  setCouleurBrosse(polen)
  
  leveBrosse()
  baisseBrosse()
  leveBrosse()
  
  droite()
  avance()
}

def growFlowers() {
  dessineFleur(Color.RED, Color.YELLOW)
}