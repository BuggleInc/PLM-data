def growFlowers(){
  fleur(Color.RED)
  droite()
  avance(3)
  fleur(Color.BLUE)
}

def fleur(c:Color){
	croix(c)
  point()
}

def croix(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
}

def point(){
  avance()
  setCouleurBrosse(Color.YELLOW)
  leveBrosse()
}