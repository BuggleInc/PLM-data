


def step(rule:Array[Char], colors:Array[Color]) {
var n:Int=0

while( (getCouleurSol()==colors(n)) ==false){
	n=n+1
}



if (rule(n)=='R'){
	right();
}else{	
	left();
}


if(n<colors.length-1){
	setCouleurBrosse(colors(n+1))
}else{
	setCouleurBrosse(colors(0))
}
baisseBrosse();
leveBrosse();
avance();
}
