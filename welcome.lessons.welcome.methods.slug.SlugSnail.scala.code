def hunt(c:Color) {
  while (! isOverBaggle() ) {
    if (isFacingTrail(c) ) {
      mark();
      forward();
    } else {
      left();
    }
  }
 }


def isFacingTrail(c:Color):Boolean = {
  var colorOfTile:Color = Color.white;
  
  if (! isFacingWall()) {
    forward();
    colorOfTile = getGroundColor();
    backward();
  }
  
  if (colorOfTile == c)
  	return true;
  
  return false;
  
}

def mark() {
  brushDown();
  brushUp();
}