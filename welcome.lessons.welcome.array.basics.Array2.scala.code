override def run() {
  var T = new Array[Color](getMondeHauteur())
  T(0) = getCouleurSol()
  for (i <- 1 to (getMondeHauteur())) {
    avance()
    T(i) = getCouleurSol()
  }
  for (j <- 1 to (getMondeLargeur()-1)) {
    recule(getMondeHauteur()-1)
  	gauche()
    avance()
    droite()
    val decalage = litMessage().toInt
  	for (k <- 1 to (getMondeHauteur())) {
      setCouleurBrosse(T((k-1+decalage)%(getMondeHauteur()-1)))
      baisseBrosse()
      leveBrosse()
      avance()
    }
  }
}