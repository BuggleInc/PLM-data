def pentaKoch(levels:Int, length:Double) {
	if(levels == 0)
	return avance(length);
	else {
		pentaKoch(levels-1,0.4*length);
		gauche(108);
		pentaKoch(levels-1,0.4*length);
		droite(72);
		pentaKoch(levels-1,0.4*length);
		droite(72);
		pentaKoch(levels-1,0.4*length);
		droite(72);
		pentaKoch(levels-1,0.4*length);
		gauche(108);
		pentaKoch(levels-1,0.4*length);
	}
}
