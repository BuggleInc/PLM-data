def withoutDoubles(die1:Int, die2:Int, noDoubles:Boolean):Int = {
  
  if ((noDoubles) & ((die1 == die2) & (die1 != 6))) {
  
  	var de1:Int = die1
  	de1 = de1 + 1 ;                                         return (de1 + die2)}
  
  else if ((noDoubles) & (die1 == die2) & (die1 == 6)) {
    var de1bis:Int = die1
    de1bis = 1 ;                                           return de1bis + die2}
  
  else {return die1 + die2}

}