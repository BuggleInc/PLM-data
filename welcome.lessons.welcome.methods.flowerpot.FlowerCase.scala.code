def fleur(c:Color){
	croix(c)
  point()
}

def croix(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
}

def point(){
  avance()
  setCouleurBrosse(Color.YELLOW)
  leveBrosse()
}
def inter(){
  avance(2)
  droite()
  avance(2)
  fleur(Color.BLUE)
}