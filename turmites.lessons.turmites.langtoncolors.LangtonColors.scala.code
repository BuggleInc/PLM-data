def step(rule:Array[Char], colors:Array[Color]) {

	for (i <- 0 to colors.length-1) {
		if (getCouleurSol() == colors(i)) {
			if (rule(i) == 'R') {
				setCouleurSol(colors(i))
				droite()
				avance()
			} else {
				setCouleurSol(colors(i))
				gauche()
				avance()
			}
		}
	}
}

def setCouleurSol(c:Color) {
	setCouleurBrosse(c)
	baisseBrosse()
	leveBrosse()
}
