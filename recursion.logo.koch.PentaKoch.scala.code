def pentaKoch(levels:Int, length:Double) {
  if (levels==0) {
    avance(length)
  } else {
    pentaKoch(levels-1,mength*0.4)
    left(60)
    pentaKoch(levels-1,mength*0.4)
    right(60)
    pentaKoch(levels-1,mength*0.4)
    right(60)
    pentaKoch(levels-1,mength*0.4)
    right(60)
    pentaKoch(levels-1,mength*0.4)
    left(60)
    pentaKoch(levels-1,mength*0.4)
  }
}