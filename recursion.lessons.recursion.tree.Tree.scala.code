def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
	
	var etape = steps;

	current(etape);
	avance(length);

	var x = getX();
	var y = getY();
	var cap = getCap();
	
	current(etape+1);
	droite(angle);
	var longueur = length * shrink;
	avance(longueur);
	
	setPos(x,y);
	setCap(cap);
	
	gauche(angle);
	avance(longueur);
}
