def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

  if(steps > 0) {
    current(steps);
    
    //On avance
    forward(length);
    
    //Arbre droit
    right(angle);
    tree(steps-1, length*shrink, angle, shrink);
    
    //Arbre gauche
    left(angle*2);
    tree(steps-1, length*shrink, angle, shrink);
    
    //On recule
    right(angle);
    backward(steps);
  }
  
}