def efface {
  baisseBrosse;leveBrosse;
}

def hunt(c:Color) {
   while (!estSurBiscuit) {
   if (isFacingTrail(c)){
     avance;efface;
   } else {
     gauche;
     if (isFacingTrail(c)) {
       avance;efface;
     } else {
       droite;droite;avance;efface;
     }
   }
  }
  prendBiscuit;
}

def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur) return false;
  else {
    avance;
    var color = getCouleurSol;
    recule;
    return color == c;
  }  
}