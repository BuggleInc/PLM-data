var autour = Color.RED
var coeur = Color.PINK

def growFlowers (){
  patternFlower(Color.RED,Color.YELLOW)
  forward()
  patternFlower(Color.CYAN,Color.YELLOW)
}

def patternFlower(autour:Color,coeur:Color) {
setBrushColor(autour)
  brushDown()
  forward(2)
  backward()
  left()
  forward()
  backward(2)

  forward()  
  setBrushColor(coeur)
  right()
  brushUp()
  forward()
}