def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	if(levels == 0)
	return avance(length) 
	else{
		avance(length/(3^levels));
		gauche(60);
		snowSide(levels,length/(3^(levels+1)));
		avance(length/(3^levels));
		droite(120);
		snowSide(levels,length/(3^(levels+1)));
		avance(length/(3^levels));
		gauche(60);
		snowSide(levels,length/(3^(levels+1)));
	}
}	
		
		
		
		
		
	

	
	
	

