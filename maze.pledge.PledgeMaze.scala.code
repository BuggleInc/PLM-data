var virages = 0
var first = true

def murAGauche():Boolean = {
  
  var res = false
  gauche()
  res = estFaceMur()
  droite()
  return res 
  
}

def fonceAuNord() {
  
  first = true
  setDirection(Direction.NORD)
  while (!estFaceMur()) {avance()}
  
}

def longerMurGauche() {
  
  if (murAGauche()) {
    
    if (estFaceMur()) {
      
      droite()
      virages = virages - 1
      first = false
      return
    
    } else {
      
      avance()
      
    }
    
  } else {
      
    	gauche()
    	virages = virages + 1
    	first = false
      avance()
    
  }
  
}


override def run() {
  
  fonceAuNord()
  
  while (!estSurBiscuit()) {
    
    longerMurGauche()
    if (!first && virages == 0) {fonceAuNord()}
    
  }
  
  prendBiscuit()
  
}