def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  current(steps)
  avance(length)
  if (steps==1){
    current(steps)
    gauche(angle)
    avance(length)
    recule(length)
    droite(2*angle)
    avance(length)
    recule(length)
  } else{
    tree(steps-1, length*shrink, angle,shrink)    
  }
}