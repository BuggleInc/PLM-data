def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps < 1) {
  	recule(length)
  }
  
  current(steps)
  
  // Dessine le sous-arbre de droite.
  avance(length)
  droite(angle)
  tree(steps - 1, length * shrink, angle, shrink)
  
  recule(length)
  gauche(2 * angle)
  
  // Dessine le sous-arbre de gauche.
  tree(steps - 1, length * shrink, angle, shrink)
  
  recule(length)
  droite(angle)
}