def hunt() {
  while (!porteBiscuit()){
    if (estSurBiscuit()){
      prendBiscuit()
    } else if (isFacingTrail()){
      avance()
      baisseBrosse()
      leveBrosse()
    } else {
      gauche()
    }  
  }
}

def isFacingTrail():Boolean = {
    if (estFaceMur()){
      return false
    } else {
      avance()
      if (getCouleurSol()==Color.green){
        recule()
        return true
      } else {
        recule()
        return false
      }
    }
}