def hunt(c:Color) {
  while( !estSurBiscuit() ){
    if ( isFacingTrail(c) ){
      baisseBrosse();
      leveBrosse();
      avance();
    } else {
      gauche();
    }
  }
  prendBiscuit();
  baisseBrosse();
  leveBrosse();
}

def isFacingTrail(c:Color):Boolean = {
  if ( estFaceMur() ){
    return false;
  } else {
    avance();
    if ( getCouleurSol() == c ){
      recule();
      return true;
    } else { 
      recule();
      return false;
    }
  }
}
