def tree(int steps, double length, double angle, double shrink)    {
  
  if(steps==0){
  	leveCrayon()}
  	else{
 	current(steps)
    baisseCrayon()
    avance(length)
    droite(angle)
    tree(steps-1,length*shrink,angle,shrink)
    gauche(angle)
    gauche(angle)
    tree(steps-1,length*shrink,angle,shrink)
    droite(angle)
    recule(length)
  }
}