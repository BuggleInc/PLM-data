def lireColonne(taille:Int):Array[Color] = {
  
  var longueurTableau: Int = getWorldHeight()
  var res = new Array[Color] (taille)
  res(0) = getCouleurSol()
  for (i <- 1 to taille -1) {
    avance()
    res(i) = getCouleurSol()
  }
  for (l <- 1 to longueurTableau -1) {
    recule()
  }
  return res
}

