def hunt() {
  while (!isOverBaggle()) {
  if (isFacingTrail) {
    forward()
    brushDown()
    brushUp()
  } else {
    left()
    if (isFacingTrail) {
    	forward()
      brushDown()
      brushUp()
    } else {
      back()
      forward()
      brushDown()
      brushUp()
    }
  }
}
pickupBaggle()
}

def isFacingTrail():Boolean ={
  if (!isFacingWall()) {
    	forward()
    	if (getGroundColor()==Color.green) {
    		backward()
    		return true
  		} else {
    		backward()
        return false
      }
  } else {
    return false
  }
}