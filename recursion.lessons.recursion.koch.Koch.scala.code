def snowFlake (levels:Int, length:Double) {
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {
	avance(lenght);
	droite(360/steps);
	snowSide(levels-1, lenght:Double);
	gauche(360/steps);
	recule(lenght);
}