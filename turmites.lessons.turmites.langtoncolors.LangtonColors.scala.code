def step(rule:Array[Char], colors:Array[Color]) {
  
  for(i<-0 to colors.length-1)
  {
    if (getCouleurSol()==colors(i))
    {
      setCouleurBrosse(colors((i+1)%colors.length))
      paint()
    }
  }
}

