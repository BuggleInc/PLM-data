	def setCouleurSol(c:Color) {
	setCouleurBrosse(c:Color);
	baisseBrosse();
	leveBrosse();
	}
for (i<-0 to rule.length-1) {
	if (getCouleurSol()==colors(i)) {
	setCouleurSol(colors(i));
