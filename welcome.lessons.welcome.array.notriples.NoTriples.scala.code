def noTriples(nums:Array[Int]): Boolean = {
	var taille: Int = nums.length;
	var n: Int = 0;
	var nb: Int;
	var occur: Int = 1;
	var retour: Boolean = true;
	
	for(n <- 0 to taille - 1){
		if(nums(n) != nb){
			nb = nums(n);
			occur = 1;
		}
		else if(occur == 1){
			occur = 2;
		}
		else if(occur == 2){
			occur = 3;
		}
		else if(occur == 3){
			retour = false;
		}
		else{
			occur =0;
		}
	}
	return retour;
}
