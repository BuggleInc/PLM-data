def sierpinski(level:Int, length:Double) {
	if(level == 0){
		avance(length);
		return;
	}
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	avance(length);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	avance(length);
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	sierpinski(level - 1, length / 2);
	droite(120);
	avance(length);
}
