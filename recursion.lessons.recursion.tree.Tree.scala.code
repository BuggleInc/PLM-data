def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
	var x:Double = 0
	var y:Double = 0
	steps match {
		case 1 => droite(angle)
				avance(length)
				recule(length)
				gauche(2*angle)
				avance(length)
				recule(length)
		case _ => x = getX()
				y = getY()
				avance(length/7)
				tree(steps-1, shrink*length, angle, shrink)
				
	}
	
}
