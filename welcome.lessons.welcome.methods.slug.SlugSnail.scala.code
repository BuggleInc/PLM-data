def hunt(c:Color) {
  var capture:Boolean = false
  while (!capture) {
    if (estSurBiscuit) {
      capture = true
    } else if (isFacingTrail(c)) {
    	avance()
      baisseBrosse()
      leveBrosse()
    } else {gauche()}
	}
  prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {
  if (!estFaceMur) {
  	avance()
  	var couleurCase = getCouleurSol()
  	recule()
  	return couleurCase == Color.c
  } else {return false}
}