while(estSurMessage())
{
  var lettre = litMessage();
  if (lettre=="R")
  {
    droite();
    avance();
  }
  else if (lettre=="L")
  {
    gauche();
    avance();
  }
  else if (lettre=="I")
  {
    retourne();
    avance();
  }
  else if (lettre=="A") avance();
  else if (lettre=="B")
  {
    avance();
    avance();
  }
  else if (lettre=="Z") recule();
  else if (lettre=="Y")
  {
    recule();
    recule();
  }
  else if (lettre=="B")
  {
    recule();
    recule();
    recule();
  }
}