def pentaKoch(levels:Int, length:Double) {
  if (levels == 0) {
    avance(length)
    return
  }
  
  pentaKoch(levels - 1, length * 0.4)
  gauche(180 / 10)
  
  pentaKoch(levels - 1, length * 0.4)
  droite(180 / 5)
  
  pentaKoch(levels - 1, length * 0.4)
  droite(180 / 5)
  
  pentaKoch(levels - 1, length * 0.4)
  droite(180 / 5)
  
  pentaKoch(levels - 1, length * 0.4)
  gauche(180 / 5)
}