def brosse(c:Color){
  setCouleurBrosse(c)
  baisseBrosse()
  leveBrosse()
}

def flower(c:Color){
  for (i <- 0 to 1){
    brosse(c)
    avance()
  }
  recule()
  droite()
  avance()
  for (i <- 0 to 2){
    brosse(c)
    recule()
  }
  avance()
  brosse(Color.yellow)
}







def growFlowers(){
  flower(Color.red)
}