def actualDist(nbBases:Int,nbPos:Int):Array[Int] = {
  //Actualiste la liste des distances
  var i:Int=0
 	var j:Int=0
  var cpt=0
  var liste=new Array[Int](6)
  for (i <- 0 to nbBases-1 ){
