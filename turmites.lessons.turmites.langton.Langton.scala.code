def step() {
  for (i <- 0 to 10000){
    if (getCouleurSol()==Color.WHITE){
      setCouleurBrosse(Color.BLACK)
      baisseBrosse()
      leveBrosse()
      droite()
      avance()
    }
    if (getCouleurSol()==Color.BLACK){
      setCouleurBrosse(Color.WHITE)
      baisseBrosse()
      leveBrosse()
      gauche()
      avance()
    }
  }
}