def hunt() {
  do{
  effacerPiste()
  if (isFacingTrail == true)
  {
    avance()
    effacerPiste()
  }
  if(isFacingTrail == false)
  {
    gauche()
    hunt()
  }
    if (estSurBiscuit() == true)
  {
    prendBiscuit()
  }
  }while(!porteBiscuit())
}

