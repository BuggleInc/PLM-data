def pentaKoch(levels:Int, length:Double) {
  if (levels!=0) {
  	pentaKoch(levels-1,length*0.4)
  	gauche(108)
    for (i <-1 to 3) {
      pentaKoch(levels-1,length*0.4)
  		droite(72)
    }
    pentaKoch(levels-1,length*0.4)
    gauche(108)
    pentaKoch(levels-1,length*0.4)
  }
  else {
    avance(length)
  }
}