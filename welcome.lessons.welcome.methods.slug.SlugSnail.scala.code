def hunt(c:Color) {
     while (!estSurBiscuit()) {
    if (isFacingTrail(c)) {
      baisseBrosse();
      leveBrosse();
      avance()
    } else {
      gauche();
    }
  }
  baisseBrosse();
  leveBrosse();
  prendBiscuit();
 }

def isFacingTrail(c:Color):Boolean = {
  var color: Boolean = false
  if (!estFaceMur()) {
    avance();
    if (getCouleurSol() == c) {
      color = true;
    }
    recule();
  }
  return color
}