def has271(nums:Array[Int]): Boolean = {
  if (nums.length<3){
    return false
  }
  if (nums.length==3 && nums(0)==nums(1)-5 && nums(0)==nums(2)+1){
    return true
    
  }
  else{
    for (k<- 0 to (nums.length-2)){
      if (nums(k)==nums(k+1)-5 && nums(k+2)>=nums(k)-3 && nums(k+2)<=nums(k)+3){
        return true
      }
      
    }
    return false
    
  }
}