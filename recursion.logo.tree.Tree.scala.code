def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps == 0) {
    forward(length*shrink);
    left(2*angle);
    forward(length*shrink);
    backward(length*shrink);
    
    
  }
  else {
    forward(length*shrink);
    right(angle);
    tree(steps-2,length*shrink,angle,shrink);
    left(2*angle);
    tree(steps-2,length*shrink,angle,shrink)
    backward(length*shrink);
  }
}