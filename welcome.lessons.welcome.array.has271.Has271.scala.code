def has271(nums:Array[Int]): Boolean = 
{
  var presence271 = false
  for (i <- 1 to nums.length) 
  {
    if (i < nums.length-1) 
    {
      if (nums(i-1) == nums(i)-5 && nums(i-1) <= nums(i+1)+3 && nums(i-1) >= nums(i+1)-1) 
      {
        presence271 = true
      }
    }
  }
  return presence271
}

  
  