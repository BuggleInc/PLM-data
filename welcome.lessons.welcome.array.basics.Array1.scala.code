  for (i<- 0 to taille-1){
    T(i)=getCouleurSol()
    avance()
  }
  var largeur = getMondeLargeur();
  left(); avance();right(); 
  for(y<-1 to largeur){
    avance()
    Col(taille,T)
  }
}
