def hunt() {
  
  while(!isOverBaggle()){
    while(!isFacingTrail())
  		right();
  	while(isFacingTrail()){
    	brushDown();
    	forward();
    	brushUp();
    }
  }
}

def isFacingTrail():Boolean = {
	if (isFacingWall())
  	return false
  
  var piste : Boolean = false
  forward()
  if(getGroundColor()==Color.green)
  	piste=true
  backward()
  return piste
}