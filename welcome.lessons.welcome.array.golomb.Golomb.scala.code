def golomb(num:Int): Int = {

	var taille:Int = num;
	if (num < 2) taille = 2;
	var tab = new Array[Int](num);
	var i:Int = 2;
	var j:Int = 1;
	var k:Int = 0;
	var nbre:Int = 0;
	tab(0) = 1;
	tab(1) = 2;

	while (j < num)
	{
		k = 0;
		
		while (k < i && j < num  && nbre < tab(i - 1))
		{
			tab(j) = i;
			k = k + 1;
			j = j + 1;
			nbre = nbre + 1;	
		}
		
		if (num > 2) 
		{
			if (nbre == tab(i - 1))
			{
				i = i + 1;
				nbre = 0;
			}
			else i = tab(i);
		}
	}

	return tab(num - 1);
}
