def step() {
var couleur:color
for (k<-1 to 10 000) {
	getCouleurSol()=couleur
	if (couleur==Color.white){
		setCouleurBrosse(Color.black)
		baisseBrosse()
		leveBrosse()
		droite()
		avance()
	}else if (couleur==Color.black) {
		setCouleurBrosse(Color.white)
		baisseBrosse()
		leveBrosse()
		gauche()
		avance()
	}
	
}
}
