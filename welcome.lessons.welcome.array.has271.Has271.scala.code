def has271(nums:Array[Int]): Boolean = {
		if(nums.length >= 3) {
		for(c <- 0 to nums.length - 2) {
			if(nums(c+1) == nums(c) + 5 && nums(c+2) == nums(c) - 1) {
				return true
			}
			else if(nums(c+1) == nums(c) + 5 && nums(c+2) >= nums(c) - 2 && nums(c+2) <= nums(c) +2) {
				return true
			}
		}
	}
	return false
}
