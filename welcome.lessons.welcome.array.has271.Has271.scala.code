def has271(nums:Array[Int]): Boolean = {
  var res : Boolean = false;
  for (i <- 0 to nums.length -3) {
    if (nums(i+1) == 5 + nums(i) && nums(i+2) == nums(i) - 1) {
      res = true;
    } else if (nums(i+1) == 5 + nums(i) && nums(i) -3 <= nums(i+2) && nums(i+2) <= nums(i) + 1) {
      res = true;
    } 
  }
  return res;
}
