public void sierpinski(int level, double length) {
	if (level == 0) {
		for (int i = 0; i < 3; i++){			
			forward(length);
			right(120.0);
		}
		return;
	}
	for (int i = 0; i < 3; i++) {
		sierpinski(level - 1, length / 2);
		penUp();
		forward(length / 2);
		penDown();
		sierpinski(level - 1, length / 2);
		penUp();
		forward(length / 2);
		penDown();
		right(120.0);
	}
}
