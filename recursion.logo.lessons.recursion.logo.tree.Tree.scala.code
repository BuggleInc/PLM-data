def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps>0){
    baisseCrayon()
    current(steps)
    avance(length)
    gauche(angle)
    tree(steps-1,shrink*length,angle,shrink)
    droite(2*angle)
    tree(steps-1,shrink*length,angle,shrink)
    gauche(angle)
    leveCrayon()
    recule(length)
  }
}