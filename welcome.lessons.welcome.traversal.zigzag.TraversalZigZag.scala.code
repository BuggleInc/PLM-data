def parcoursDouble(x:Int,y:Int,d:Boolean) :Boolean={
  if (d) {
    if (x==getMondeLargeur()-1) {
    setPos(x,y+1)
   	return (!d)
  }
    else {
      setPos(x+1,y)
      return d
  }
  else {
    if (x==0) {
    setPos(x,y+1)
   	return(!d)
  }
    else {
      setPos(x-1,y)
      return d
  }
}