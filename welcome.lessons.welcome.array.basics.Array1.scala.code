def peindreSol(c: Color) {
	setCouleurBrosse(c)
  
  baisseBrosse()
  leveBrosse()
}

override def run() {
  var hauteurMonde:Int = getMondeHauteur()
  var largeurMonde:Int = getMondeLargeur()
  
  var couleurs = new Array[Color](hauteurMonde)
  
  for (i <- 1 to hauteurMonde) {
    couleurs(i - 1) = getCouleurSol()
    
    avance()
  }
  
  recule(hauteurMonde - 1)
  
  for (i <- 1 to largeurMonde - 1) {
    gauche()
    avance()
    droite()
    
    for (j <- 1 to hauteurMonde) {
      peindreSol(couleurs((j + i) % 6))
    }
  }
}