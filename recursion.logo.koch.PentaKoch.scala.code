def pentaKoch(levels:Int, length:Double) {
  if(levels==0){
    avance(length)
  }
  else{
    pentaKoch(levels-1, length*0.4)
    left(270)
    pentaKoch(levels-1, length*0.4)
    droite(180)
    pentaKoch(levels-1, length*0.4)
    droite(180)
    pentaKoch(levels-1, length*0.4)
    droite(180)
    pentaKoch(levels-1, length*0.4)
    gauche(60)
    pentaKoch(levels-1, length*0.4)
  }
}