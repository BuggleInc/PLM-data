override def run() {
	var H = getMondeHauteur()
	var T = new Array [Color] (H)
	var x = 0 
	for (pas <- 1 to H-1) {
		avance();
		T (pas) = getCouleurSol()
	}
	for (colonne <- 2 to H) {
		move(H-1,false);
		gauche();
		avance();
		droite();
		for (pas <- 1 to H-1) {
			baisseBrosse();
			x = pas-colonne+1
			if (x<0) {
				x=x+H
			}
			setCouleurBrosse(T (x));
			avance();
		}
		
	}
	

}

def move(nbPas : Int, versLAvant : Boolean) {
	for (pas <- 1 to nbPas) {
		if (versLAvant) {
			avance();
		} else { 
			recule();
		}
	}
}