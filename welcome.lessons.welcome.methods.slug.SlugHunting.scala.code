def hunt() {
	var piste = false;
	while (!estSurBiscuit()) {
		piste=isFacingTrail();
		while (!piste) {
			gauche();
			piste=isFacingTrail();
		}
		avance();
		baisseBrosse();
		leveBrosse();
	}
	prendBiscuit();
}

def isFacingTrail():Boolean = {
	var res=false;
	if (!estFaceMur()) {
		avance();
		res = (getCouleurSol() == Color.green);
		recule();
	}
	return res
}        

