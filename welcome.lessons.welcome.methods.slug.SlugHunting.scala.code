    {
      baisseBrosse()
      avance()
      leveBrosse()
    }
    else
    {
      gauche()
    }
  }
  prendBiscuit()
}

def isFacingTrail():Boolean = {
  if (estFaceMur())  
  {
    return false
  }
  else
  {
    avance()
    var c =  getCouleurSol()
    recule()
    return (c == Color.green)
  }
}