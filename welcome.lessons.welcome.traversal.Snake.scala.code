override def run() {
	baisseBrosse
	var y=0
	while (!PositionFinale()) {
		avance
		if (estFaceMur){
			if (y%2==0) {
				gauche
				avance
				gauche
			}
			else {
				droite
				avance
				droite
			}
			y=y+1
		}
	}

	def  PositionFinale() :Boolean = {
		var x=false
		if (estFaceMur) {
			getDirection match {
				case Direction.EST => gauche
				case Direction.OUEST => droite
				case _ =>
			}
			if (estFaceMur) x=true
			droite
		}
		return x
	}		
}