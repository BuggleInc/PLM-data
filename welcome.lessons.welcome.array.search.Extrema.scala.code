def extrema(nums:Array[Int]): Int = {
  var max:Int = 0;
  var min:Int = 0;
  if ( nums.length == 1 ){
    return 0;
  } else if ( nums(0) > nums(1) ){
    max = nums(0);
    min = nums(1);
  } else {
    max = nums(1);
    min = nums(0);
  }
  for ( i <- 2 to (nums.length - 1) ){
    if (nums(i) > max){
      max = nums(i);
    } 
    if ( nums(i) < min ){
      min = nums(i);
    }
  }
  return max - min;
}