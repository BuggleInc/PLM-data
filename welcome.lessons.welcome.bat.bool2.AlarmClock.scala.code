def alarmClock(day:Int, vacation:Boolean): String = {
  if (vacation == false && day = 1 _ day = 2 _ day = 3 _ day = 4 _ day = 5) {
    return "reveil 7:00"
  }
  else if (vacation == false && day = 6 || day = 7){
    return "reveil 10:00"
  }
  else if (vacation == true && day = 1 || day = 2 || day = 3 || day = 4 || day = 5){
    return "reveil 10:00"
  }
  else if (vacation == true && day = 6 || day = 7){
    return "reveil off"
  }
}