public void run() {
	boolean left = false;
	while (!isFacingWall()){
		while (!isFacingWall()) forward();
		if (left) goLeft(); else goRight();
		left = !left;
	}
}

void goRight(){
	if (!isFacingWall()){
	right();
	forward();
	right();
}}

void goLeft(){
	if (!isFacingWall()){
	left();
	forward();
	left();
}}
