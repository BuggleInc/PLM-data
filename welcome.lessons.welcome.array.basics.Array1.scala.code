var T=new Array[Color](getMondeHauteur());

override def run() {
	
	for(i<-0 to T.length-1){
		T(i)=getCouleurSol()
		avance()	
	}
	faireMotif()
}	
	
def faireMotif(){
	var x=getMondeLargeur()
	for(i<-1 to x){
		var nbPas=getMondeHauteur()
		for(i<-0 to nbPas-2){
			recule()
		}
		gauche()
		avance()
		droite()
		avance()
		faireColonne()
	}
}
	
def faireColonne(){
	for(i<-0 to getMondeHauteur){
		setCouleurBrosse(T(i))
		baisseBrosse()
	}
}