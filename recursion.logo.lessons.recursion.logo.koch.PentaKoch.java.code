void pentaKoch(int levels, double length) {
  if(levels <=0){
    avance(length);
  }else{
    pentaKoch(levels-1,length*0.4);
    gauche(160);
    pentaKoch(levels-1,length*0.4);
    droite(160);
    pentaKoch(levels-1,length*0.4);
      droite(160);
    pentaKoch(levels-1,length*0.4);
    droite(160);
    pentaKoch(levels-1,length*0.4);
    gauche(160);
    pentaKoch(levels-1,length*0.4);
  }
}