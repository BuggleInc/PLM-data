override def run() {
  while(!posfinale()){
    serpent()
  }
}

def posfinale():Boolean={
  if(estFaceMur()){
    droite()
    if(getDirection()==Direction.EST){
      gauche()
      if(estFaceMur()){
        return true
      }
    }
    retourne()
    if(getDirection()==Direction.OUEST){
      droite()
      if(estFaceMur()){
        return true
      }
    }
  }
  return false
}

def serpent(){
  if(!estFaceMur()){
    avance()
  } else{
    if(getDirection()==Direction.OUEST){
      droite()
      avance()
      droite()
    } else if(getDirection()==Direction.EST){
      gauche()
      avance()
      gauche()
    }
  }
}