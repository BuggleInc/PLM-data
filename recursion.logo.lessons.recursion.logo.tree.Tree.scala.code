def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps ==1)
  {
    current(steps)
    droite(angle)
    avance(length)
    recule(length)
    gauche(angle*2)
    avance(length)
    recule(length)
  }else
  {
    current(steps)
    avance(length)
    droite(angle)
    tree(steps-1,length*shrink,angle, shrink)
    recule(length)
    gauche(angle*2)
    tree(steps-1,length*shrink,angle, shrink)
    recule(length)
  }
}
