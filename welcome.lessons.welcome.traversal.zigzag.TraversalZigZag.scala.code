override def run() {serpentLeRetour()
}

def test:Boolean={
  if (getX() == getMondeLargeur() -1 && getY() == getMondeHauteur() -1){
   return true
  }
  return false
}

def serpentLeRetour(){
  var n = 0
  var m = 0
  while(!test){
    ecritMessage(m)
    if(getX()== getMondeLargeur() -1 ){
      setPos(getX(), getY()+1)
      n=n+1
      m=m+1
    }
    else if(n%2 == 0){
      m=m+1
      setPos(getX()+1,getY())
    }
    else{
      m=m+1
      setPos(getX()+1,getY())
    }
  }
}