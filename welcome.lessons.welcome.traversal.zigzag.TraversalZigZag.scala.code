def fin(compteur:Int):Boolean =
{
  if(getMondeHauteur()*getMondeLargeur()==compteur+1)
  {
    ecritMessage(compteur)
    return true
  }
  else
  {
    return false
  }
}

def avance2()
{
  var tourne:Boolean = false
  
  if((getX()==getMondeLargeur()-1)&&(tourne))
  {
    setPos(getX(),getY()+1)
    tourne = false
  }
  else if((getX()==0)&&(tourne))
  {
    setPos(0,getY()+1)
    tourne = false
  }
  else if(getY()%2==0)
  {
    setPos(getX()+1,getY())
    tourne = true
  }
  else
  {
    setPos(getX()-1,getY())
    tourne = true
  }
}

override def run()
{
  var compteur:Int = 0
  
  do
  {
    ecritMessage(compteur)
    avance2()
    compteur = compteur + 1
  }
  while(!fin(compteur))
}