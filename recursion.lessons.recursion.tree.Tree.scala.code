def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
baisseCrayon()


if (steps == 0) {return}
else {	current (steps)
		avance(length)
		droite(angle)
		tree(steps-1, length*shrink, angle, shrink)
		gauche(angle*2)
		tree(steps-1, length*shrink, angle, shrink)
		droite(angle)
		current(steps)
		recule(length)


		
	}

}
