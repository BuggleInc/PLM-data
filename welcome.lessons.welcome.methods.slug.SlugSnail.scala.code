def hunt(c:Color) { //Suivre la piste jusqu'au biscuit 
	while (!estSurBiscuit) {
   		leveBrosse()
	    	if (isFacingTrail(c) == true) {
		    		avance()
		    		baisseBrosse()
		    		
		}else{
	    			gauche()
		}
    	}
    	prendBiscuit()
}

def isFacingTrail(c:Color):Boolean = {     //Donne la couleur du sol a suivre
	var verificateur :Boolean = false
   	if (!estFaceMur()) {
		avance()
		if(getCouleurSol() == c){
			verificateur = true
		}
			recule()
   	}
	return verificateur
}

