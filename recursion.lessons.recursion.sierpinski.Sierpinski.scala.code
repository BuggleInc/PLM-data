def sierpinski(level:Int, length:Double)
{

if(level==0)
{
avance(length)
droite(120)
avance(length)
droite(120)
avance(length)
droite(120)
}
else
{
sierpinski(level-1, length/2.0)

    avance(length/2.0)

    sierpinski(level-1, length/2.0)

    droite(120)
    avance(length/2.0)
    gauche(120)

    sierpinski(level-1, length/2.0)

    gauche(120)
    avance(length/2.0)
    droite(120)

}

}
