def step(rule:Array[Char], colors:Array[Color]) {
  var i=0
  while (getCouleurSol()!=colors(i)){i+=1}
  if (rule(i)=='R') {
    setCouleurBrosse(colors(i+1))
    baisseBrosse()
    leveBrosse()
    droite();avance()
  }
  else if (rule(i)=='L') {
    setCouleurBrosse(colors(i+1))
    baisseBrosse()
    leveBrosse()
    gauche();avance()
  }
}