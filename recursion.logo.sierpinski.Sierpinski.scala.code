def sierpinski(level:Int, length:Double) {
  if(level!=0)
  {
    sierpinski(level-1,length/2);
    avance(length);
    right(120);
    sierpinski(level-1,length/2);
    avance(length);
    right(120);
    sierpinski(level-1,length/2);
    avance(length);
    right(120);
  }
  else
  {
		avance(length);
 		right(120);
    avance(length);
    right(120);
    avance(length);
  }
}