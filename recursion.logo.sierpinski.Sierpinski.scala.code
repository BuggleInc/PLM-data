def sierpinski(level:Int, length:Double) {
  if(level==0){
    avance(length)
  }
  else{
    avance(length/2)
    sierpinski(level-1, length/2)
    droite(120)
    avance(length/2)
    sierpinski(level-1, length/2)
    droite(120)
    avance(length/2)
    sierpinski(level-1, length/2)
    droite(120)
  }
}