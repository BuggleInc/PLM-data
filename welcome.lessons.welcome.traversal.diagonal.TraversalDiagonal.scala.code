override def run() {
	var hauteur: Int = getMondeHauteur();
	var largeur: Int = getMondeLargeur();
	var nbDiag: Int = 2* largeur - 1;
	var valeur: Int = 0;
	for(n <- 0 to 6){
		for(i <- 0 to n){
			setPos(i,n - i);
			ecritMessage(valeur);  
			valeur = valeur + 1;
		}
	}
	
	for(n <- 6 to 0 by -1){   
		for(i <- 0 to 5){
			setPos(1 + i ,n - i)
			ecritMessage(valeur);  
			valeur = valeur + 1;
		}
	}
}
