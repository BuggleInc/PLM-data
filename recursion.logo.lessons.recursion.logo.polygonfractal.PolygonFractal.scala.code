def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
  if (levels==0) {
    avance(length)
  }
  else {
    polygonFractal(levels-1,sides,length*shrink,shrink) ; gauche(360/sides)
    polygonFractal(levels-1,sides,length*shrink,shrink) ; droite(180)
    polygonFractal(levels-1,sides,length*shrink,shrink) ; 
  }
}