def pentaKoch(levels:Int, length:Double) {
	if (levels==0) {
		avance(length);
		return;
	}
	else {
		var tmp = length*0.4;
		pentaKoch(levels-1,tmp);
		gauche(72);
		pentaKoch(levels-1,tmp);
		droite(72);
		pentaKoch(levels-1,tmp);
		droite(72);
		pentaKoch(levels-1,tmp);
		droite(72);
		pentaKoch(levels-1,tmp);
		gauche(72);
		pentaKoch(levels-1,tmp);
	}
}
