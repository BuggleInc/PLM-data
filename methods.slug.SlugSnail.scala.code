
def hunt(c:Color) {
    while (!estSurBiscuit()) {
      if (isFacingTrail(c)) {
        avance()
        marqueSol()
      }
      else {
        gauche()
        if (isFacingTrail(c)) {
        	avance()
        	marqueSol()
      }
        else {
          retourne()
          avance()
          marqueSol()
        }
      }
    }
  prendBiscuit()
}



def isFacingTrail(c:Color):Boolean = {
  if (estFaceMur())
  	return false
  avance()
  if (getCouleurSol() == c) {
    	recule()
    	return true
  }
  else {
    recule()
    return false
  }
}

def marqueSol() {
  baisseBrosse()
  leveBrosse()
}