def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {

	if(steps!=0){
		current(steps)
		avance(length)
		droite(angle)
		tree(steps-1, length*shrink, angle, shrink)
		
	}

	else if(steps==0){
		gauche(angle)
		recule(length/shrink)
		gauche(angle)
		gauche(angle)
		avance(length/shrink)
	}

	
}
