def step(rule:Array[Char], colors:Array[Color]) {
  var i=0
  while (getCouleurSol()!=colors(i)){i+=1}
  if (rule(i)=='R') {
    i+=1
    if (i==colors.length) {i=0}
    setCouleurBrosse(colors(i))
    baisseBrosse()
    leveBrosse()
    droite();avance()
  }
  else if (rule(i)=='L') {
    i+=1
    if (i==colors.length) {i=0}
    setCouleurBrosse(colors(i))
    baisseBrosse()
    leveBrosse()
    gauche();avance()
  }
}
