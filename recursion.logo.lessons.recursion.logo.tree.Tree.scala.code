def tree(steps:Int, length:Double, angle:Double, shrink:Double) {
  steps match {
    	case 1 => current(steps);baisseCrayon();avance(length);leveCrayon();recule(length);
   	case _ =>  baisseCrayon();
    			current(steps);
    			avance(length);droite(angle);
    			tree(steps-1,shrink*length,angle,shrink);
    			gauche(2*angle);
    			tree(steps-1,shrink*length,angle,shrink);
    			droite(angle);
    			recule(length);
    					
  }
}