def sierpinski(level:Int, length:Double) {
	if (level == 0){
		for ( i<- 1 to 3){
			avance(length)
			droite(120)
		}
	}
	else {
		sierpinski(level-1, length*0.5)
		avance(length*0.5)
		sierpinski(level-1, length*0.5)
		avance(length*0.5)
		droite(120)
		avance(length*0.5)
		sierpinki(level-1, length*0.5)
		
	}
}
