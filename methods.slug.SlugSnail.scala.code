def hunt(c:Color) {
     

  while (!estSurBiscuit()){ 
        if (isFacingTrail(c)){
           baisseBrosse()
           avance()
           leveBrosse()
        }
       else gauche()
       
  }
  prendBiscuit()
}



def isFacingTrail(c:Color):Boolean = {
    
  var piste: Boolean = false
  if (estFaceMur()){
    return false
  }
  avance()
  piste=getCouleurSol()==c
  
  recule()
  return piste
}