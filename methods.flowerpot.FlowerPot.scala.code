def growFlowers() {
  for (i <- 1 to 4) {
    makeFlowers(Color.red)
    forward(3)
    
  }
}

def makeFlowers(c:Color) {
  setBrushColor(c)
  brushDown()
  forward()
  forward()
  backward()
  left()
  forward()
  backward(2)
  forward()
  setBrushColor(Color.yellow)
  right()
  brushDown()
  brushUp()
}