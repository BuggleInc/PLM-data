def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps < 1)
  	return
  
  current(steps)
  
  // Dessine le sous-arbre de droite.
  avance(length)
  droite(angle)
  tree(steps - 1, length * shrink, angle, shrink)
  
  // Dessine le sous-arbe de gauche.
  
  recule(length)
}