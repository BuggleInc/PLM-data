def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps<0){recule(length*shrink)}
  else{
    current(steps)
    avance(length)
    current(steps)
    gauche(angle)
    avance(length)
    recule(length)
    droite(2*angle)
    avance(length)
    recule(length)
    tree(steps-1,length*shrink,2*angle,shrink)  
}
}