def baseATester : Int = {
 return (getTrouBase()+1)%getNombreBases()
}

def buggleADeplacer (base : Int) : Int = {
  val joueurUn = getCouleurJoueur(base,0)
  val joueurDeux = getCouleurJoueur(base,1)
  if (Math.abs(joueurUn-base)<=Math.abs(joueurDeux-base)) return 1
  else return 0
  
}

override def run() {
  while (!estTrie()) {
    deplace(baseATester,buggleADeplacer(baseATester))
  }
}