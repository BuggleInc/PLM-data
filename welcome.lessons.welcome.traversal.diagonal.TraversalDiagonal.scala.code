override def run() {
  
  for(i<-0 to getMondeLargeur()-1)
  {
    for(j<- 0 to i)
    {
      setPos(j,Math.abs(j-i))
      ecritMessage(i*(i+1)/2+j)
    }
  }
  
  for(i<-0 to getMondeLargeur()-2)
  {
    for(j<- 0 to getMondeLargeur()-2-i)
    {
      setPos(j,Math.abs(j-getMondeLargeur()-2-i))
      ecritMessage(27+i*(i+1)/2+j)
    }
  }
}