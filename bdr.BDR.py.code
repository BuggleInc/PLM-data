fini = 2
while (fini != 3) :
  msg = litMessage()
  if msg = "R" :
    droite()
    avance()
  elif msg = "L" :
    gauche()
    avance()
  elif msg = "I" :
    droite(2)
    avance()
  elif msg = "A" :
    avance()
  elif msg = "B" :
    avance(2)
  elif msg = "C" :
    avance(3)
  elif msg = "Z" :
    recule()
  elif msg = "Y" :
    recule(2)
  elif msg = "X" :
    recule(3)
  else :
    fini = 3