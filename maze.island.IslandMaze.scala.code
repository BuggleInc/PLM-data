override def run() {
  while (!estSurBiscuit) {
    while (getDirection()==Direction.NORD && !estFaceMur) {
      avance()
    }
    if (keepHandOnSideWall && !estFaceMur) {
      avance()
    } else if (!keepHandOnSideWall) {
      gauche()
      avance()
    } else {
      droite()
    }
  }
  prendBiscuit()
}

def keepHandOnSideWall(): Boolean = {
  gauche()
  if (estFaceMur) {
    droite()
    return true
  }
  droite()
  return false
}