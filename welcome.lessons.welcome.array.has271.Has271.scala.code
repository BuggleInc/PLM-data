def has271(nums:Array[Int]): Boolean = {
	var i:Boolean=false;
	
	if (nums.length>=3) {
		for (x<-0 to nums.length-3) {
			if (nums(x+1)==nums(x)+5&&(nums(x+2)==nums(x)-1||nums(x+2)==nums(x)-2||nums(x+2)==nums(x))) i=true
			else if (nums(x)==2&&nums(x+1)==7&&nums(x+2)==1) i=true
		}
	}
	return i
}
