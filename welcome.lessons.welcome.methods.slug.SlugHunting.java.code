public void hunt() {
    while(!isOverBaggle()){
    	    mark();
	    while(!isFacingTrail())
	    		left();
	    forward();
    }
    
    pickupBaggle();
}        

boolean isFacingTrail() {
	boolean isTrail;
	if(isFacingWall()) return false;
	forward();
    	isTrail = getGroundColor().equals(Color.green);
    	backward();
    	return isTrail;
}        

void mark(){
	brushDown();
	brushUp(); 
}
