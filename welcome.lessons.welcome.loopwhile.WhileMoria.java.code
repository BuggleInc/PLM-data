public void run() {

	boolean c = false;
	boolean ctrl = false;
	Color controllo1 = Color.white;
	Color controllo2 = Color.white;
	
	while ( ctrl==false ) {

		if ( c==false ) {					//rotazione all'avvio
		right(); right();
		c = true;
		}



		while ( !isOverBaggle() ) {		//da ordine di proseguire fino a un baggle
			forward();

			if ( controllo1 != getGroundColor() && controllo1 != controllo2 ) {
				controllo1 = getGroundColor();
				if ( controllo2 != getGroundColor() && controllo1 != controllo2 ) {
					controllo2 = getGroundColor();
					ctrl = true;
				}
			}

			
			
			if ( isFacingWall() && !isOverBaggle() ) {			//uscita verso zona verde
				right();
				forward();
				left();
				forward();

				
			}
		}

		if ( isOverBaggle() || (isOverBaggle() && isFacingWall()) )	{		//raccoglie il baggle
			pickupBaggle();
			right(); right();

			while ( !isOverBaggle() )	//prosegue verso destra
				forward();
		}


		if ( isOverBaggle() ) {			//deposita il baggle
			right(); right();
			forward();
			dropBaggle();
			forward();
		}
	}
}