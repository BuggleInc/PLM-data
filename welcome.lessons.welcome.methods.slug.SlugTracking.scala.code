def isFacingTrail():Boolean = {
	var vert : String = "non"
	if (estFaceMur()==false) {
		avance();
		if (getCouleurSol()== Color.green) {
			vert = "oui";
		} else { 
			vert = "non";
		}
		recule();
		if (vert == "oui") {
			return true;
		} else {
			return false;
		}
    } else {
    	return false;
    } 
}        
