def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
 
  steps match {
    case steps => recule(length)
    case _ => current(steps) ; avance(length) ; droite(angle) ; tree(steps-1,length*shrink,angle,shrink) ;  gauche(2*angle) ; tree(steps-1,length*shrink,angle,shrink) ; recule(length) ; droite(angle)
     
  }
}