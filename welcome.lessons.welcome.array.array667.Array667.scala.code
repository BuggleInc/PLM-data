def array667(nums:Array[Int]): Int = {

	var prec6:Boolean = false;
	var nbre:Int = 0;

	for (i <- 0 to nums.length - 1)
	{
		if (prec6 &&  nums(i) == 6)
			nbre = nbre + 1;
		else if (prec6 && nums(i) == 7)
		{
			nbre = nbre + 1;
			prec6 = false;
		}
		else if (nums(i) == 6)
		{
			prec6 = true;
		}
	}

	return nbre;
}
