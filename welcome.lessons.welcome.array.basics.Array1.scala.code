override def run() {
  var tableauCouleur = new Array[Color](6)
  remplirTableau();
  seReplacer();
  colorier(tableauCouleur);
}



def remplirTableau(){
  for (i<- 0 to 4){
    tableauCouleur(i)=getCouleurSol();
    avance();
  }
  tableauCouleur(5)=getCouleurSol();
}

def seReplacer(){
  gauche();avance();droite();recule(5)
}

def colorier(){
  for (i<-0 to 4){
    setCouleurBrosse(tableauCouleur(i));
    baisseBrosse();
    leveBrosse(); 
    avance();
  }
}

