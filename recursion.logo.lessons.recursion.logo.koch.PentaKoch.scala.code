
def pentaKoch(levels:Int, length:Double) {
  if (levels!=0) {
  pentaKoch(levels-1, length*0.4)
  left(90+18)
  pentaKoch(levels-1, length*0.4)
  right(90+18)  
  pentaKoch(levels-1, length*0.4)
  right(90+18)
  pentaKoch(levels-1, length*0.4)
  right(90+18)
  pentaKoch(levels-1, length*0.4)
  left(72)
  pentaKoch(levels-1, length*0.4)

  
  }
  else {avance(length)}
  
}