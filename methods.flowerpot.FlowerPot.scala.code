def growFlowers() {
  for (i <- 1 to 4) {
    forward(4)
    makeFlowers(Color.red)
    right()
  }
}

def makeFlowers(c:Color) {
  setBrushColor(c)
  brushDown()
  brushUp()
  forward()
  setBrushColor(Color.yellow)
  brushDown()
  brushUp()
  left()
  forward()
  setBrushColor(c)
  brushDown()
  brushUp()
  back()
  forward(2)
  brushDown()
  brushUp()
  backward()
  left()
  forward()
  brushDown()
  brushUp()
  backward()
}