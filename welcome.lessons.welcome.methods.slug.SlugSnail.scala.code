def hunt(c:Color) {

  while(!estSurBiscuit()){
    if (isFacingTrail(c)){
      avance()
      baisseBrosse()
      leveBrosse()
    }
    else {
      gauche()
    }
  }

  prendBiscuit()
}


def isFacingTrail(c:Color):Boolean = {
  var k=false
  if (!estFaceMur()){
    avance()
    if (getCouleurSol()==c)
      k=true
    recule()
  }
  return k 
}



