def tree(steps:Int, length:Double, angle:Double, shrink:Double)  {
  if (steps==1){subtree(1,length,angle,shrink)}
 	else {avance(length);
 	     droite(angle);
       tree(steps-1,length*shrink,angle,shrink);
       gauche(2*angle);
       tree(steps-1,length*shrink,angle,shrink);
       recule(length);
       gauche(angle)
      }
}