def hunt() {
 
  	if (!isFacingWall){
    	forward()
    }
 
  	if (isOverBaggle()){
      	pickupBaggle()
				draw()
        return
    }
  
    while (!isFacingTrail()){
      left()
    }
  
		draw()
  	hunt()
}


def draw() = {
   brushDown()
   brushUp()
}

def isFacingTrail():Boolean = {
  	if (isFacingWall()){
      return false
    }
    forward()
  	if (getGroundColor() == Color.green){
      backward()
      return true
    }
  	backward()
  	return false
}
