
def Mark():
    brushDown()
    brushUp()

def isFacingTrail():
    if not isFacingWall():
        forward()
        getGroundColor()
        if getGroundColor() != Color.green:
            backward()
            left()
            return False
        else:
            backward()
            return True
    else: 
        left()
        return False

while not isOverBaggle():
    isFacingTrail()
    if isFacingTrail():
        forward()
        Mark()

    
    
