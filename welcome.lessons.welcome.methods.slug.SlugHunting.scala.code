def marquer()
{
	baisseBrosse()
	leveBrosse()
}
def hunt() {
    while(!porteBiscuit())
    {	
    		marquer()
    		if(estSurBiscuit())
    			prendBiscuit()
    		if(isFacingTrail())
    			avance()
    		else
    		{
    			gauche()
    			if(isFacingTrail())
    				avance()
    			else
    			{
    				gauche()
    				gauche()
    				avance()
    			}
    		}
    }
}

