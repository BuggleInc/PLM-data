override def run() {
  
  var n : Int = getMondeHauteur()
  var T = new Array[Color](n)
  T(0)=getCouleurSol
  
  for (i <- 1 to n-1) {
    avance();
    T(i) = getCouleurSol()
    
  }
  
  var taille : Int = getMondeLargeur()
  for ( k<- 1 to taille-1 ){
    for ( m<- 1 to n-1){
      recule();
    }
    gauche();
    avance();
    val decalage = litMessage().toInt
    for (p<- decalage to n-1+decalage){
      setCouleurBrosse(T(p));
      baisseBrosse();
      leveBrosse();
      avance();
      
    }
  }
}