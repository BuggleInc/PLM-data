def hunt() {
  if (isFacingTrail) {
    forward()
  } else {
    left()
    if (isFacingTrail) {
    	forward()
    } else {
      back()
      forward()
    }
  }
}

def isFacingTrail():Boolean ={
  if (!isFacingWall()) {
    	forward()
    	if (getGroundColor()==Color.green) {
    		backward()
    		return true
  		} else {
    		backward()
        return false
      }
  } else {
    return false
  }
}