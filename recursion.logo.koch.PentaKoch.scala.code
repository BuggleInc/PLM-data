def pentaKoch(levels:Int, length:Double) {
  if(levels!=0)
  {
        
    pentaKoch(levels-1,length*0.4);
    left(180-360/5);
    pentaKoch(levels-1,length*0.4);
    right(360/5);
    pentaKoch(levels-1,length*0.4);
    right(360/5);
    pentaKoch(levels-1,length*0.4);
    right(360/5);
    pentaKoch(levels-1,length*0.4);
    left(180-360/5);
    pentaKoch(levels-1,length*0.4);
    
    
  }
  else 
  	avance(length);
}