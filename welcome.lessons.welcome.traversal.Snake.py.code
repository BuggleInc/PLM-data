def snake_step():
    brushDown()
    while not isFacingWall():
        forward()
    if getDirection() == Direction.EAST:
        left()
        if isFacingWall():
            pass
        else:
            forward()
            left()
            snake_step()
    elif getDirection() == Direction.WEST:
        right()
        forward()
        right()
        snake_step()

snake_step()