def hunt() {
  while (!estSurBiscuit) {
  	if (isFacingTrail()) {
    	baisseBrosse();
    	avance();
    	leveBrosse();
  	} else {
    	droite();
  	}
  }
  prendBiscuit();
}

def isFacingTrail():Boolean = {
  if (estFaceMur()) {
    return false;
  } else {
    avance();
    if (getCouleurSol() == Color.green) {
      recule();
      return true;
    } else {
      recule();
      return false;
    }
  }
}