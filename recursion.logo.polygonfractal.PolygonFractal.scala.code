def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {
 
  if(levels == 1){

		for(i <- 0 to sides-1){
    
      avance(length);
      right(72.00);
      
    }
    
  } else{
    
    avance(length);
    left(108.00);
    polygonFractal (levels-1, sides, length*shrink, shrink);
    right(180.00);
    avance(length);
    polygonFractal (levels-1, sides, length*shrink, shrink);
    right(180.00);
    avance(length);
   
  }
  
}