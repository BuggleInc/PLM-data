def growFlowers() {
  ligneFleur(Color.red,Color.cyan)
  FleurMilieu(Color.orange)
}

def faireFleur(c:Color) {
  setCouleurBrosse(c)
  baisseBrosse()
  avance(2)
  recule()
  gauche()
  avance()
  recule(2)
  avance()
  leveBrosse()
  setCouleurBrosse(Color.yellow)
  baisseBrosse()
  droite()
  leveBrosse()
}

def ligneFleur(c1:Color,c2:Color) {
  faireFleur(c1)
  avance(3)
  faireFleur(c2)
}

def FleurMilieu(c:Color) {
  recule(5)
  droite()
  avance(2)
  gauche()
  avance(2)
  faireFleur(c)
}