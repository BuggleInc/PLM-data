def snowFlake (levels:Int, length:Double) {
	setCouleur(Color.red:Color);
    snowSide(levels, length);
    right(120);
    setColor(Color.blue);
    snowSide(levels, length);
    right(120);
    setColor(Color.orange);
    snowSide(levels, length);
    right(120);
}
def snowSide(levels:Int, length:Double) {	
	if ( levels != 0 ) {
		var div = 3^levels;
	     snowSide(levels-1,length/div);
	     avance(length:Double);
	     gauche(60:Double);
	     avance(length:Double);
	     droite(120:Double);
	     avance(length:Double);
	     gauche(60:Double);
	     avance(length:Double);	
}
    if ( levels == 0 ) { avance(200:Double); }
}
