def caughtSpeeding(speed:Int, isBirthday:Boolean):Int = {
  
  if ((isBirthday == false) && (speed <= 60)) {return 0}
  else if ((isBirthday == false) && ((speed >= 61) & (speed <= 80))) {return 1}
  else if ((!isBirthday) && (speed >= 81)) {return 2}
  else if ((isBirthday == true) && (speed <= 65)) {return 0}
  else if ((isBirthday == true) && ((speed >= 66) & (speed <= 85))) {return 1}
  else if ((isBirthday == true) && (speed >= 86)) {return 2}
	else {return 0}
}