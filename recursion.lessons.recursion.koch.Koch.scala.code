def snowFlake (levels:Int, length:Double) {
	setCouleur(Color.red)
	snowSide(levels, length);
	right(120);
	setColor(Color.blue);
	snowSide(levels, length);
	right(120);
	setColor(Color.orange);
	snowSide(levels, length);
	right(120);
}
def snowSide(levels:Int, length:Double) {
	avance(length/3)
	if(levels == 0){
		avance(length/3)
	}else{
		left(60);
		snowSide(levels-1,length/3)
		right(120);
		snowSide(levels-1,length/3)
		left(60);
	}
	avance(length/3)
}
