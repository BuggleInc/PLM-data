def hunt() {
	while (!estSurBiscuit()){
		if (isFacingTrail()) {
      	avance()
      	baisseBrosse()
      	leveBrosse()
    	}else {
      	gauche()
    }
  }
	prendBiscuit()
}

def isFacingTrail():Boolean = {
  if (estFaceMur() == true ){
    return false
  } else {
    avance()
  	getCouleurSol()
  	if (getCouleurSol() == Color.green) {
    	recule()
      return true
  	}else {
      recule()
    	return false
  }
  }
}
