override def run() {
var hauteur = getMondeHauteur();
var hau = hauteur -1;
var largeur = getMondeLargeur();
var lar = largeur-2;
var tab = new Array[Color] (hauteur+1)
for (i<- 0 to hau-1 ) {tab(i) = getCouleurSol();avance()}
recule(hau) 

for (i<- 0 to lar) { var dec = 0;gauche();avance();droite();dec = litMessage().toInt;
for (h<- 0 to hau-1) { setCouleurBrosse(tab((h + dec) % hauteu)); baisseBrosse();leveBrosse();avance()}
recule(hau)}



}
