def disque(couleur:Color,ouverture:Double,divisions:Int,longeur:Double) {
  
  var angle = ouverture/divisions
  setCouleur(couleur)
  
  for (div <- 1 to divisions) {
    
    avance(longeur)
    recule(longeur)
    droite(angle)
    
  }
  
}

override def run() {
  
  disque(Color.BLACK,90,90,100)
  disque(Color.RED,90,90,100)
  disque(Color.ORANGE,90,90,100)
  disque(Color.MAGENTA,90,90,100)
  
}