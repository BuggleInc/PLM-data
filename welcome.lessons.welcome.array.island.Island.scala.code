def island(num:Array[Int]): (Int,Int) = {
  trouveIle(num)
}

def trouveIle(liste:Array[Int]): (Int,Int) = {
  var debut:Int = 0
  var fin:Int = 0
  for (i <- 1 to (liste.length - 2)) {
    if (liste(i-1)==0) {
      debut=i
    } else if (liste(i+1)==0) {
      fin=i
    }
  }
  return (debut,fin)
}