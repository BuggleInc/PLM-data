def hunt() {
 		while (!isOverBaggle()){
  
  	if (!isFacingWall){
    	forward()
    }
   
    while (!isFacingTrail()){
      left()
    }
  
  	brushDown()
  	brushUp()
    }
  
  	pickupBaggle()
}



def isFacingTrail():Boolean = {
  	if (isFacingWall()){
      return false
    }
    forward()
  	if (getGroundColor() == Color.green){
      backward()
      return true
    }
  	backward()
  	return false
}