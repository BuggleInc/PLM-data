def hunt() {
	while(!estSurBiscuit()){
		if (isFacingTrail()){
			avance()
		} else {
			droite()
			if (!isFacingTrail()){
				droite()
				droite()
			}
		}
	}
}

def isFacingTrail():Boolean = {
	if (estFaceMur()){
		false
	} else {
		avance()
		if (getCouleurSol()==Color.green){
			recule()
			return true
		} else {
			recule()
			return false
		}
		
	}

}        

