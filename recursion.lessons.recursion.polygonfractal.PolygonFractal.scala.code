def polygonFractal (levels:Int, sides:Int, length:Double, shrink:Double) {

if(levels==1){
	for(x<-1 to sides){
	avance(length)
	droite(360/sides)
}
	
}else{
		for(x<-1 to sides){
	avance(length)
	gauche((sides-1)*360/sides)
	polygonFractal(levels-1, sides, length*shrink, shrink)
	droite((sides-1)*360/sides)
}
}
}

