def hunt() {
  do{
    if (isFacingTrail()==true){
      avance()
    } else if {
      droite()
      if (isFacingTrail()==true){
        avance()
      }
    } else if {
      gauche()
      if (isFacingTrail()==true){
        avance()
      }
      
    }
  }while (!estSurBicuit())
}

def isFacingTrail():Boolean = {
  var green: Boolean=false
  
  if (estFaceMur()==false){
    avance()
    if (getCouleurSol()==Color.green){
      
      green= true
    }
    recule()
  }
  
  return green

}