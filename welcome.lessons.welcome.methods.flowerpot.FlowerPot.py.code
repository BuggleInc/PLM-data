def growFlowers():
    growFleur(Color.RED)
    avance(4)
    growFleur(Color.CYAN)
    recule(2)
    

def peindrePoint():
    baisseBrosse()
    leveBrosse()

def growFleur(couleur):
    setCouleurBrosse(couleur)
    baisseBrosse()
    avance(2)
    recule()
    gauche()
    recule()
    avance(2)
    recule()
    droite()
    leveBrosse()
    setCouleurBrosse(Color.YELLOW)
    peindrePoint()
    recule()
