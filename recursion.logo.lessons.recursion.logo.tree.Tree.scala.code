def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  steps match {
    case 0 => leveCrayon();recule(length);
    case _ =>  current(steps);
    					avance(length);droite(angle);
    					tree(steps-1,shrink*length,angle,shrink);
    					gauche(angle);gauche(angle);
    					tree(steps-1,shrink*length,angle,shrink);
    					recule(length);
  }
}