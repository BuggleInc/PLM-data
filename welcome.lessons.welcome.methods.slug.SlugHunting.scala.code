def hunt() {
	while (!estSurBiscuit) {
		if (isFacingTrail) {
			avance();
		} else { 
			gauche();
			if (isFacingTrail) {
    			avance();
    			} else {
    				gauche();
    				gauche();
				if (isFacingTrail) {
    				avance();
    			}
		} 
	}
}

def isFacingTrail():Boolean = {
	if (estFaceMur) {
		return false
	} else {
	    avance();
	    var couleur = getCouleurSol()
	    recule();
	    if (couleur==Color.green) {
	    	return true
	    } else { return false
	    }
	}
}     
