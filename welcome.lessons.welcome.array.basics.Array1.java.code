public void run() {
int taille=getMondeHauteur();
Color[] motif=new Color[taille];

for (int i=0; i<(taille);i++){
		motif[i]=getCouleurSol();
		avance();
	}
	for (int i=0; i<(taille-1);i++){
		recule();
	}
	for (int i=0; i<taille-1;i++){
	gauche();
	avance();
	droite();
	dessinerLigne(motif,taille);
	}
}

void dessinerLigne(Color[] motif, int taille){
	for (int i=0; i<(taille);i++){
		setCouleurBrosse(motif[i]);
		baisseBrosse();
		leveBrosse();
		avance();
	}
	}
