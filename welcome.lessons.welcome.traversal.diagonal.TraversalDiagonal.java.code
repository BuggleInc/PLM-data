public void run() {
	for (int x = 0; x < getWorldWidth(); x++) {
		for (int y = 0; y < getWorldHeight() - x; y++){
			setPos(x,y);
			int message = (int) ((((x + y) * (x + y + 1)) / 2) + x);
			writeMessage(message);
		}
	}
	for (int x = getWorldWidth() - 1; x > 0; x--){
		for (int y = getWorldHeight() - 1; y > getWorldWidth() - 1 - x ; y--){
			setPos(x,y);
			int a = x + 1;
			int b = y - 1;
			int message = (int) ((((a + b) * (a + b + 1)) / 2) + a);
			writeMessage(x + " " + y);
		}
	}
}