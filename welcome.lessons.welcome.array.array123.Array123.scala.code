def array123(nums:Array[Int]): Boolean = {
	var n  = nums.length
  n match {
    case 0 => false
    case 1 => false
    case 2 => false
    case _ if (nums(n-3) == 1 && nums(n-2) == 2 && nums(n-1) == 3) => true
    case _ => array123(newTableau(nums))
  }
}

def newTableau(nums : Array[Int]): Array = {
	var n  = nums.length
  var T = new Array[Int] (n-1)
  for (i <- 0 to n-2) {
    T(i) = nums(i)
  }
  return T
}