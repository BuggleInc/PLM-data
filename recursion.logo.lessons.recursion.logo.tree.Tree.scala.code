def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  
  if(steps != 0)
  {leveCrayon()
    current(steps)
   avance(length)
   leveCrayon()
   droite(angle)
   tree(steps-1,shrink*length,angle,shrink)
   
   gauche(2*angle)
   tree(steps-1,shrink*length,angle,shrink)
   droite(angle)
   recule(length)
  
  }
 
}