def hunt(c:Color) {
  var continue=true
  while(continue==true){
    if(isFacingTrail(c)==true){
      forward();
    	brushDown();
    	brushUp();}
  	else{
      right();
      if(isFacingTrail(c)==true){
        forward();
     	  brushDown();
    		brushUp();}
      else{
        right();
        if(isFacingTrail(c)==true){
          forward();
        	brushDown();
    			brushUp();}
        else{
          right();
          if(isFacingTrail(c)==true){
            forward();
          	brushDown();
    				brushUp();}
          else{continue=false}
        }
      }
    }
  }		
 }



def isFacingTrail(color:Color):Boolean={
  
  if (isFacingWall()==true){return false;}
  else{
    forward();
    if(getGroundColor().equals(color)){
      backward();
      return true;}
    else{
      backward();
      return false;}
  }
}