def step(rule:Array[Char], colors:Array[Color]) {
  
  if (getCouleurSol()==colors(0)) {
    setCouleurBrosse(colors(0)) ; baisseBrosse() ; leveBrosse() 
    if (rule(0)=="L") {
      gauche() ; avance()
    }
    else {
      droite() ; avance()
    }
  }
  else if (getCouleurSol()==colors(1)) {
    setCouleurBrosse(colors(1)) ; baisseBrosse() ; leveBrosse()
    if (rule(1)=="L") {
      gauche() ; avance()
    }
    else {
      droite() ; avance()
    }
  }
  }




