def crab(levels:Int, length:Double) {
if(levels==0){
		droite(45)
		avance(length)
	}else{
		gauche(45)
		crab(levels-1,length/Math.sqrt(2))
		droite(45)
		crab(levels-1,length/Math.sqrt(2))
		droite(60)
		crab(levels-1,length/Math.sqrt(2))
		droite(60)
		crab(levels-1,length/Math.sqrt(2))
		droite(60)
		crab(levels-1,length/Math.sqrt(2))
		droite(60)
		crab(levels-1,length/Math.sqrt(2))
		gauche(120)
		crab(levels-1,length/Math.sqrt(2))
	}	
}
