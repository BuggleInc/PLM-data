def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  if (steps == 0) {
    droite()
    gauche(2 * angle)
    droite(angle)
    recule(length)
  }
  else {
    current(steps)
    avance(length)
    tree(steps - 1, shrink * length, angle, shrink)
    tree(steps - 1, shrink * length, angle, shrink)
    current(steps + 1)
    recule(length)
  }
}
