def sierpinski(level:Int, length:Double) {
	
	if (level > 0) {
		sierpinski(level - 1, length / 2);
		avance(length);
		droite(120);
		sierpinski(level - 1, length / 2);
		avance(length);
		droite(120);
		sierpinski(level - 1, length / 2);
		avance(length);
		droite(120);
	
	} else {
		for (i <- 1 to 3)  { // se passe au niveau 0
			avance(length);
			droite(120);
		}
	}
	
}