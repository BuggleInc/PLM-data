override def run() {
  taille = getMondeHauteur()
  var tab = new Array[Color](taille)
  for (i <- 0 to tab.length-2) {
    tab(i) = getCouleurSol()
    avance()
  }
  tab(tab.length-1) = getCouleurSol()
  largeur = getMondeLargeur()
  for (i <- 0 to largeur -2) {
    recule(taille-1)
    gauche()
    avance()
    droite()
    marquageSol(tab((i+1)%largeur))
  }
  
  def marquageSol(couleur:Color) {
    setCouleurBrosse(couleur)
    baisseBrosse()
    leveBrosse()
  }
}