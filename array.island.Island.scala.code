def island(num:Array[Int]): Int = {
  var res : Int = 0
  for (i <- 0 to (num.length-1)) {
    var aux : Boolean = true
    for (j <-0 to (num.length-1)) {
      if (j>i){
        if (num(i)>num(j)){
          aux= false
        }
        if ((num(i)==num(j)) && aux && (num(i)>0)) {
          res = res + 1
        }
      }
    }
  }
  for (i <-1 to (num.length -2)) {if ((num(i-1)==0 || num(i+1)==0) && num(i)!=0) {res=res+1}}
  return(res)
}