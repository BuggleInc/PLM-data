public void run() {

int nbBiscuits = 0;

while (!sortieTrouvee()) {
	do {
		avance();
	}
	while (!croisement());

	if (estSurBiscuit()) {
		nbBiscuits = nbBiscuits + 1;
	}

	if (croisement()) {
		if (nbBiscuits < 3) {
			droite();
		} else if (nbBiscuits > 2) {
			gauche();
		}
		nbBiscuits = 0;
	}
}
	
}