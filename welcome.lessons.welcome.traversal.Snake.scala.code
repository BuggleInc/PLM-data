override def run() {
// Fonction qui test si le Buggle est dans un angle (position finale)
baisseBrosse()
while (!fonctionTest())
	{if (estFaceMur)
		{if (getDirection()==Direction.EST)
			{gauche()
			avance()
			gauche()}
		else {droite()
			avance()
			droite()}
		}
	else {avance()}
	}
}

def fonctionTest():Boolean={
	(getDirection()==Direction.EST,estFaceMur) match {
		case (true,true) => 
			gauche(); 
			if (estFaceMur) {
				droite(); 
				return true
			}
			else {return false}
		case (false,true) => 
			droite(); 
			if (estFaceMur) {
				gauche(); 
				return true
			}
			else {return false}
		case _	  => return false
	}
}
