override def run() {
  var b:Boolean = false
  setCouleurBrosse(Color.RED)
  baisseBrosse()
  b=test()
  while(test() == false) {
    if (estFaceMur()) {
      if (getDirection()==Direction.EST) {
        gauche()
        avance()
        gauche()
      }
      else {
        droite()
        avance()
        droite()
      }
    }
    else {
      avance()
    }
    b=test()
  }
}

def test():Boolean = {
  var b:Boolean = false
  if (estFaceMur()) {
    if (getDirection()==Direction.EST) {
      gauche()
      if (estFaceMur) {
        droite()
        b=true
      }
      else {
        b=false
      }
    }
    else {
      droite()
      if (estFaceMur()) {
        gauche()
        b=true
      }
      else {
        b=false
      }
    }
  }
  else {
  	b=false
  }
  return b
}