override def run() {
	baisseBrosse()
	while (!positionfinale) { mur() }

	def mur() = { 
		while (!estFaceMur()) {avance() }
		if (estFaceMur()) {
			if (getDirection() == Direction.EST) { gauche(); avance(); gauche() }
			else if (getDirection() == Direction.OUEST) { droite(); avance(); droite() }
		}	
	}
	def positionfinale():Boolean = { 
		if (estFaceMur && getDirection == Direction.EST) {
			gauche()
			if (estFaceMur) { droite(); return true }
			else { droite(); return false }
		}
		else { return false }
	}
}