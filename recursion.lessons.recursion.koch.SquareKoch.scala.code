def snowSquare (levels:Int, length:Double) {
    squareSide(levels, length);
    right(90);
    setColor(Color.blue);
    squareSide(levels, length);
    right(90);
    setColor(Color.orange);
    squareSide(levels, length);
    right(90);
    setColor(Color.magenta);
    squareSide(levels, length);
    right(90);
}
def squareSide(levels:Int, length:Double) {
	if (levels == 0)
	return avance(length)
	else {
		squareSide(levels-1,0.4*length);
		gauche(90);
		squareSide(levels-1,0.4*length);
		droite(90);
		squareSide(levels-1,0.4*length);
		droite(90);
		squareSide(levels-1,0.4*length);
		gauche(90);
		squareSide(levels-1,0.4*length);
		
	}
}
