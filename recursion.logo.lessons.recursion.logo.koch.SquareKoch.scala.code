def snowSquare (levels:Int, length:Double) {
    squareSide(levels, length);
    right(90);
    setColor(Color.blue);
    squareSide(levels, length);
    right(90);
    setColor(Color.orange);
    squareSide(levels, length);
    right(90);
    setColor(Color.magenta);
    squareSide(levels, length);
    right(90);
}
def squareSide(levels:Int, length:Double) {
  if (levels==0){
    forward(length)
    return
  }
  else {
    
    squareSide(levels-1,length/4)
    left(90)
    squareSide(levels-1,length/4)
    right(180)
    squareSide(levels-1,length/4)
    left(180)
    squareSide(levels-1,length/4)
    right(90)
    squareSide(levels-1,length/4)
  }
}