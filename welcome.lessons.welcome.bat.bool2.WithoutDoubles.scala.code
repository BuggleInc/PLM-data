def withoutDoubles(die1:Int, die2:Int, noDoubles:Boolean):Int = {
  var change:Int=die2
  
  if (noDoubles&&(die1==die2)){
    change=tourneDe1(die2)
    return die1+change
  }
  else {
    return die1+die2
  }
}



def tourneDe1(a:Int):Int={
  if (a<=5){
    return a+1
  }
  else{
    return 1
  }
}