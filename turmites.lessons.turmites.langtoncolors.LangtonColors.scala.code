def step(rule:Array[Char], colors:Array[Color]) {
  var j=0
  for(i<-0 to rule.length-1){
    if(getCouleurSol==colors(i)){
      j=i
      if(rule(i)=='R'){
        right();
      } else {
        left();
      } 
    }
  }
  setCouleurSol(colors((j+1)%colors.length))
  avance();
}

//pour avancer dans le tableau, je peux faire +1%length
def setCouleurSol(couleur:Color){
  setCouleurBrosse(couleur); baisseBrosse; leveBrosse;
}