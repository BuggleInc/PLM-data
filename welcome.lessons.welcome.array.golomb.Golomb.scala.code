def golomb(num:Int): Int = {
  var c:Int = 0;
  var T1 = new Array[Int](num);
  var T2 = new Array[Int](num);
  for ( i <- 1 to num ){
    T1(i-1) = i;
  }
  T2(0) = 1;
  T2(1) = 2;
  T2(2) = 2;
  for ( i <- 3 to num ){
    while( T1(i-1) > 1 ){
      if ( c >= num ){
        return T2(num-1);
      }
      T2(c) = i;
      c += 1
      T1(i-1) = T1(i-1)-1;
    }
  }
  return T2(num-1);
}