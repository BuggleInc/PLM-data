def tree(steps:Int, length:Double, angle:Double, shrink:Double)    {
  var nb:Int = steps
  var l:Double = length
  if (steps!=0) {
    current(nb)
    avance(l)
    droite(angle)
    tree(nb-1, l*shrink, angle, shrink)
    gauche(2*angle)
    tree(nb-1, l*shrink, -angle, shrink)
	} else {
    droite(-angle)
    nb += 1
    l /= shrink
    recule(l)
  }
}